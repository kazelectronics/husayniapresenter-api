{
  "index": 223,
  "name": "Sura 223",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma innaka kallaftanī min nafsī mā anta amlaku bihi minnī"
    },
    {
      "index": 3,
      "text": "waqudratuka `alayhi wa`alayya aghlabu min qudratī"
    },
    {
      "index": 4,
      "text": "fa-a`ṭinī min nafsī mā yur-ḍīka `annī"
    },
    {
      "index": 5,
      "text": "wakhudh linafsika riḍāhā min nafsī fī `āfiyah"
    },
    {
      "index": 6,
      "text": "allāhumma lā ṭāqata lī biljahd"
    },
    {
      "index": 7,
      "text": "walā ṣabra lī `alal balā"
    },
    {
      "index": 8,
      "text": "walā quwwata lī `alal faqr"
    },
    {
      "index": 9,
      "text": "falā taḥẓur `alayya rizqī"
    },
    {
      "index": 10,
      "text": "walā takilnī ilā khalqik"
    },
    {
      "index": 11,
      "text": "bal tafarrad biḥājatī"
    },
    {
      "index": 12,
      "text": "watawalla kifāyatī"
    },
    {
      "index": 13,
      "text": "wanẓur ilayya wanẓur lī fī jamī`i umūrī"
    },
    {
      "index": 14,
      "text": "fa-innaka in wakaltanī ilā nafsī `ajaztu `anhā"
    },
    {
      "index": 15,
      "text": "walam uqim mā fīhi maṣlaḥatuhā"
    },
    {
      "index": 16,
      "text": "wa in wakaltanī ilā khalqika tajahhamūnī"
    },
    {
      "index": 17,
      "text": "wa in alja-tanī ilā qarābatī ḥaramūnī"
    },
    {
      "index": 18,
      "text": "wa in a`ṭaw a`ṭaw qalīlan nakidā"
    },
    {
      "index": 19,
      "text": "wamannū `alayya ṭawīlā"
    },
    {
      "index": 20,
      "text": "wadhammū kathīrā"
    },
    {
      "index": 21,
      "text": "fabifaḍlika allāhumma fa-aghninī"
    },
    {
      "index": 22,
      "text": "wabi`aẓamatika fan`ashnī"
    },
    {
      "index": 23,
      "text": "wabisa`atika fabsuṭ yadī"
    },
    {
      "index": 24,
      "text": "wabimā `indaka fakfinī"
    },
    {
      "index": 25,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 26,
      "text": "wakhalliṣnī minal ḥasad"
    },
    {
      "index": 27,
      "text": "waḥṣur-nī `anidh dhhunūb"
    },
    {
      "index": 28,
      "text": "wawarri`nī `anil maḥārim"
    },
    {
      "index": 29,
      "text": "walā tujarri-nī `alal ma`āṣī"
    },
    {
      "index": 30,
      "text": "waj`al hawāya `indak"
    },
    {
      "index": 31,
      "text": "wariḍāya fīmā yaridu `alayya mink"
    },
    {
      "index": 32,
      "text": "wabārik lī fīmā razaqtanī"
    },
    {
      "index": 33,
      "text": "wafīmā khawwaltanī"
    },
    {
      "index": 34,
      "text": "wafīmā an`amta bihi `alayy"
    },
    {
      "index": 35,
      "text": "waj`alnī fī kulli ḥālātī"
    },
    {
      "index": 36,
      "text": "maḥfūẓan maklū-an mastūran mamnū`an mu`ādhan mujārā"
    },
    {
      "index": 37,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 38,
      "text": "waqḍi `annī kull mā alzamtanīhi wafaraḍtahu `alayya laka fī wajh min wujūhi ṭā`atik"
    },
    {
      "index": 39,
      "text": "aw likhalq min khalqik"
    },
    {
      "index": 40,
      "text": "wa in ḍa`ufa `an dhālika badanī"
    },
    {
      "index": 41,
      "text": "wawahanat `anhu quwwatī"
    },
    {
      "index": 42,
      "text": "walam tanalhu maqdiratī"
    },
    {
      "index": 43,
      "text": "walam yasa`hu mālī"
    },
    {
      "index": 44,
      "text": "walā dhātu yadī"
    },
    {
      "index": 45,
      "text": "dhakar-tuhu aw nasītuh"
    },
    {
      "index": 46,
      "text": "huwa yā rabbi mimmā qad aḥṣaytahu `alayy"
    },
    {
      "index": 47,
      "text": "wa-aghfaltuhu ana min nafsī"
    },
    {
      "index": 48,
      "text": "fa-addihi `annī min jazīli `aṭiyyatik"
    },
    {
      "index": 49,
      "text": "wakathīri mā `indak"
    },
    {
      "index": 50,
      "text": "fa-innaka wāsi`un karīm"
    },
    {
      "index": 51,
      "text": "ḥattā lā yabqā `alayya shay minh"
    },
    {
      "index": 52,
      "text": "turīdu an tuqāṣṣanī bihi min ḥasanātī"
    },
    {
      "index": 53,
      "text": "aw tuḍā`ifa bihi min sayyi-ātī yawma alqāka yā rabb"
    },
    {
      "index": 54,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 55,
      "text": "war-zuqnir raghbata fil `amali lakal-ākhiratī"
    },
    {
      "index": 56,
      "text": "ḥattā a`rifa ṣidqa dhālika min qalbī"
    },
    {
      "index": 57,
      "text": "waḥattā yakūnal ghālibu `alayyaz zuhdu fī dunyāy"
    },
    {
      "index": 58,
      "text": "waḥattā a`malal ḥasanāti shawqā"
    },
    {
      "index": 59,
      "text": "wa āmana minas sayyi-āti faraqan wakhawfā"
    },
    {
      "index": 60,
      "text": "wahab lī nūran amshī bihi fin nās"
    },
    {
      "index": 61,
      "text": "wa-ahtadī bihi fiẓ ẓulumāt"
    },
    {
      "index": 62,
      "text": "wa-astaḍī-u bihi minash shakki wash shubuhat"
    },
    {
      "index": 63,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 64,
      "text": "war-zuqnī khawfa ghammil wa`īd"
    },
    {
      "index": 65,
      "text": "washawqa thawābil maw`ūdi ḥattā ajida ladhhata mā ad`ūka lah"
    },
    {
      "index": 66,
      "text": "waka-bata mā astajīru bika minh"
    },
    {
      "index": 67,
      "text": "allāhumma qad ta`lamu mā yuṣliḥunī min amri dunyāya wa ākhiratī"
    },
    {
      "index": 68,
      "text": "fakun biḥawā-ijī ḥafiyyā"
    },
    {
      "index": 69,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 70,
      "text": "war-zuqnil ḥaqqa `inda taqṣīrī fish shukri lak"
    },
    {
      "index": 71,
      "text": "bimā an`amta `alayya fil yusri wal`usri waṣ ṣiḥḥati was saqam"
    },
    {
      "index": 72,
      "text": "ḥattā ata`arrafa min nafsī rawḥar riḍā"
    },
    {
      "index": 73,
      "text": "waṭuma-nīnatan nafsi minnī bimā yajibu laka fīmā yaḥduth"
    },
    {
      "index": 74,
      "text": "fī ḥālil khawfi wal-amn"
    },
    {
      "index": 75,
      "text": "war riḍā was sukhṭ"
    },
    {
      "index": 76,
      "text": "waḍ ḍarri wan naf`"
    },
    {
      "index": 77,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 78,
      "text": "war-zuqnī salāmataṣ ṣadri minal ḥasad"
    },
    {
      "index": 79,
      "text": "ḥattā lā aḥsuda aḥadan min khalqika `alā shay-in min faḍlik"
    },
    {
      "index": 80,
      "text": "waḥattā lā arā ni`matan min ni`amika `alā aḥada min khalqik"
    },
    {
      "index": 81,
      "text": "fī dīnin aw dunyā"
    },
    {
      "index": 82,
      "text": "aw `āfiyatin aw taqwā"
    },
    {
      "index": 83,
      "text": "aw sa`atin aw rakha"
    },
    {
      "index": 84,
      "text": "illā rajawtu linafsī afḍala dhālik"
    },
    {
      "index": 85,
      "text": "bika waminka waḥdaka lā sharīka lak"
    },
    {
      "index": 86,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 87,
      "text": "war-zuqnit taḥaffuẓa minal khaṭāyā"
    },
    {
      "index": 88,
      "text": "wal-iḥtirāsa minaz zalali fid dunyā wal-ākhirah"
    },
    {
      "index": 89,
      "text": "fī ḥālir riḍā walghaḍab"
    },
    {
      "index": 90,
      "text": "ḥattā akūna bimā yaridu `alayya minhumā bimanzilat sawa"
    },
    {
      "index": 91,
      "text": "`āmilan biṭā`atika mu-thiran liriḍāka `alā mā siwāhumā fil awliyā-i wal-a`dā"
    },
    {
      "index": 92,
      "text": "ḥattā ya-mana `aduwwī min ẓulmī wajawrī"
    },
    {
      "index": 93,
      "text": "wayay-asa waliyyī min maylī wanḥiṭāṭi hawāy"
    },
    {
      "index": 94,
      "text": "waj`alnī mimman yad`ūka mukhliṣan fir rakhā"
    },
    {
      "index": 95,
      "text": "du`ā-al mukhliṣīnal muḍṭarrīna laka fid du`ā"
    },
    {
      "index": 96,
      "text": "innaka ḥamīdun majid"
    }
  ]
}