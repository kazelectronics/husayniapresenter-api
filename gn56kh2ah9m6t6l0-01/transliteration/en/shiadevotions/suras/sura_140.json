{
  "index": 140,
  "name": "Sura 140",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "yā man yamliku ḥawā-ijas sā-ilīn"
    },
    {
      "index": 3,
      "text": "waya`lamu ḍamīraṣ ṣāmitīn"
    },
    {
      "index": 4,
      "text": "likulli mas-alatin minka sam`un ḥāḍir"
    },
    {
      "index": 5,
      "text": "wajawābun `atīd"
    },
    {
      "index": 6,
      "text": "allāhumma wamawā`īdukaṣ ṣādiqah"
    },
    {
      "index": 7,
      "text": "wa-ayādīkal fāḍilah"
    },
    {
      "index": 8,
      "text": "waraḥmatukal wāsi`ah"
    },
    {
      "index": 9,
      "text": "fa-as-aluka an tuṣalliya `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 10,
      "text": "wa-an taqḍiya ḥawā-ijī liddunyā wal-ākhirah"
    },
    {
      "index": 11,
      "text": "innaka `alā kulli shay-in qadīr"
    }
  ]
}