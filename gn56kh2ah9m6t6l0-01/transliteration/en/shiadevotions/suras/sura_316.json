{
  "index": 316,
  "name": "Sura 316",
  "ayas": [
    {
      "index": 1,
      "text": "as salāmu `alayka yā `aynallāhi fī khalqih",
      "bismillah": "as salāmu `alayka yā ḥujjatallāhi fī ar-ḍih"
    },
    {
      "index": 2,
      "text": "as salāmu `alayka yā nūrallāh"
    },
    {
      "index": 3,
      "text": "al ladhī yahtadī bihil muhtadūn"
    },
    {
      "index": 4,
      "text": "wayufarraju bihi `anil mu-minīn"
    },
    {
      "index": 5,
      "text": "as salāmu `alayka ayyuhal muhadhhabul khā-if"
    },
    {
      "index": 6,
      "text": "as salāmu `alayka ayyuhal waliyyun nāṣiḥ"
    },
    {
      "index": 7,
      "text": "as salāmu `alayka yā safīnatan najāh"
    },
    {
      "index": 8,
      "text": "as salāmu `alayka yā `aynal ḥayāh"
    },
    {
      "index": 9,
      "text": "as salāmu `alayk"
    },
    {
      "index": 10,
      "text": "ṣallallāhu `alayk"
    },
    {
      "index": 11,
      "text": "wa`alā-āli baytik"
    },
    {
      "index": 12,
      "text": "aṭ ṭayyibīnaṭ ṭāhirīn"
    },
    {
      "index": 13,
      "text": "as salāmu `alayk"
    },
    {
      "index": 14,
      "text": "`ajjalallāhu laka mā wa`adak"
    },
    {
      "index": 15,
      "text": "minan naṣri waẓuhūril amr"
    },
    {
      "index": 16,
      "text": "as salāmu `alayka yā mawlāy"
    },
    {
      "index": 17,
      "text": "anā mawlāk"
    },
    {
      "index": 18,
      "text": "`ārifun bi-ūlāka wa-ukhrāk"
    },
    {
      "index": 19,
      "text": "ataqarrabu ilallāhi ta`ālā bika wabi-āli baytik"
    },
    {
      "index": 20,
      "text": "wa-antaẓiru ẓuhūraka waẓuhūral ḥaqqi `alā yadayk"
    },
    {
      "index": 21,
      "text": "wa-as-alullāha an yuṣalliya `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 22,
      "text": "wa-an yaj`alanī minal muntaẓirīna lak"
    },
    {
      "index": 23,
      "text": "wat tābi`īna wan nāṣirīna laka `alā a`dā-ik"
    },
    {
      "index": 24,
      "text": "walmustash-hadīna bayna yadayka fī jumlati awliyā-ik"
    },
    {
      "index": 25,
      "text": "yā mawlāya yā ṣāḥibaz zamān"
    },
    {
      "index": 26,
      "text": "ṣalawātullāhi `alayk"
    },
    {
      "index": 27,
      "text": "wa`alā-āli baytik"
    },
    {
      "index": 28,
      "text": "hādhā yawmul jumu`ah"
    },
    {
      "index": 29,
      "text": "wahuwa yawmukal mutawaqqa`u fīhi ẓuhūruk"
    },
    {
      "index": 30,
      "text": "walfaraju fīhi lilmu-minīna `alā yadayk"
    },
    {
      "index": 31,
      "text": "waqatlul kāfirīna bisayfik"
    },
    {
      "index": 32,
      "text": "wa-ana yā mawlāya fīhi ḍayfuka wajāruk"
    },
    {
      "index": 33,
      "text": "wa-anta yā mawlāya karīmun min awlādil kirām"
    },
    {
      "index": 34,
      "text": "wama-mūrun bilḍḍiyāfati wal-ijārah"
    },
    {
      "index": 35,
      "text": "fa-aḍifnī wa-ajir-nī"
    },
    {
      "index": 36,
      "text": "ṣalawātullāhi `alayk"
    },
    {
      "index": 37,
      "text": "wa`alā ahli baytikaṭ ṭāhirīn"
    }
  ]
}