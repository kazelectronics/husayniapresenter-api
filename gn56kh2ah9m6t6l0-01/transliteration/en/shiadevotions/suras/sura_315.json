{
  "index": 315,
  "name": "Sura 315",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "al ḥamdu lillāhil awwali qablal inshā-i wal-iḥyā"
    },
    {
      "index": 3,
      "text": "wal-ākhiri ba`da fanā-il ashyā"
    },
    {
      "index": 4,
      "text": "al `alīmil ladhī lāyansā man dhakarah"
    },
    {
      "index": 5,
      "text": "walā yanquṣu man shakarah"
    },
    {
      "index": 6,
      "text": "walā yakhību man da`āh"
    },
    {
      "index": 7,
      "text": "walā yaqṭa`u rajā-a man rajāh"
    },
    {
      "index": 8,
      "text": "allāhumma innī ush-hiduk"
    },
    {
      "index": 9,
      "text": "wakafā bika shahīdā"
    },
    {
      "index": 10,
      "text": "wa-ush-hidu jamī`a malā-ikatik"
    },
    {
      "index": 11,
      "text": "wasukkāna samāwātik"
    },
    {
      "index": 12,
      "text": "waḥamalati `ar-shik"
    },
    {
      "index": 13,
      "text": "waman ba`athta min anbiyā-ika wa rusulik"
    },
    {
      "index": 14,
      "text": "wa-ansha-ta min aṣnāfi khalqik"
    },
    {
      "index": 15,
      "text": "annī ash-hadu annaka antallāh"
    },
    {
      "index": 16,
      "text": "la-ilāha illā anta waḥdak"
    },
    {
      "index": 17,
      "text": "lā sharīka laka wa lā `adīl"
    },
    {
      "index": 18,
      "text": "walā khulfa liqawlika walā tabdīl"
    },
    {
      "index": 19,
      "text": "wa-anna muḥammadan ṣallallāhu `alayhi wa ālihi `abduka warasūluk"
    },
    {
      "index": 20,
      "text": "addā mā ḥammaltahu ilal `ibād"
    },
    {
      "index": 21,
      "text": "wajāhada fillāhi `azza wajalla ḥaqqal jihād"
    },
    {
      "index": 22,
      "text": "wa-annahu bashhara bimā huwa ḥaqqun minath thawāb"
    },
    {
      "index": 23,
      "text": "wa-andhara bimā huwa ṣidqun minal `iqāb"
    },
    {
      "index": 24,
      "text": "allāhumma thabbitnī `alā dīnika mā aḥyaytanī"
    },
    {
      "index": 25,
      "text": "walā tuzigh qalbī ba`da idh hadaytanī"
    },
    {
      "index": 26,
      "text": "wahab lī min ladunka raḥmah"
    },
    {
      "index": 27,
      "text": "innaka antal wahhāb"
    },
    {
      "index": 28,
      "text": "ṣalli `alā muḥammadin wa`alā-āli muḥammad"
    },
    {
      "index": 29,
      "text": "waj`alnī min atbā`ihi washī`atih"
    },
    {
      "index": 30,
      "text": "waḥshur-nī fī zumratih"
    },
    {
      "index": 31,
      "text": "wawaffiqnī li-adā-i far-ḍil jumu`āt"
    },
    {
      "index": 32,
      "text": "wamā awjabta `alayya fīhā minaṭ ṭā`āt"
    },
    {
      "index": 33,
      "text": "waqasamta li-ahlihā minal `aṭā"
    },
    {
      "index": 34,
      "text": "fī yawmil jazā"
    },
    {
      "index": 35,
      "text": "innaka antal `azīzul ḥakīm"
    }
  ]
}