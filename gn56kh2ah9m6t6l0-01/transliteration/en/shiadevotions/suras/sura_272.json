{
  "index": 272,
  "name": "Sura 272",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "ilāhī man dhal ladhī dhāqa ḥalāwata maḥabbatika farāma minka badalā"
    },
    {
      "index": 3,
      "text": "waman dhal ladhī anisa biqur-bika fabtaghā `anka ḥiwalā"
    },
    {
      "index": 4,
      "text": "ilāhī faj`alnā mimmaniṣṭafaytahu liqur-bika wawilāyatik"
    },
    {
      "index": 5,
      "text": "wa-akhlaṣtahu liwuddika wamaḥabbatik"
    },
    {
      "index": 6,
      "text": "washawwaqtahu ilā liqā-ik"
    },
    {
      "index": 7,
      "text": "waraḍḍaytahu biqaḍā-ik"
    },
    {
      "index": 8,
      "text": "wamanaḥtahu binnaẓari ilā wajhik"
    },
    {
      "index": 9,
      "text": "waḥabawtahu biriḍāk"
    },
    {
      "index": 10,
      "text": "wa-a`adhtahu min hajrika waqilāk"
    },
    {
      "index": 11,
      "text": "wabawwa-tahu maq`adaṣ ṣidqi fī jiwārik"
    },
    {
      "index": 12,
      "text": "wakhaṣaṣtahu bima`rifatik"
    },
    {
      "index": 13,
      "text": "wa-ahhaltahu li`ibādatik"
    },
    {
      "index": 14,
      "text": "wahayyamta qalbahu li-irādatik"
    },
    {
      "index": 15,
      "text": "wajtabaytahu limushāhadatik"
    },
    {
      "index": 16,
      "text": "wa-akhlayta wajhahu lak"
    },
    {
      "index": 17,
      "text": "wafarraghta fu-ādahu liḥubbik"
    },
    {
      "index": 18,
      "text": "waraghhabtahu fīmā `indak"
    },
    {
      "index": 19,
      "text": "wa-alhamtahu dhikrak"
    },
    {
      "index": 20,
      "text": "wa-awza`tahu shukrak"
    },
    {
      "index": 21,
      "text": "washaghaltahu biṭā`atik"
    },
    {
      "index": 22,
      "text": "waṣayyar-tahu min ṣāliḥī bariyyatik"
    },
    {
      "index": 23,
      "text": "wakhtar-tahu limunājātik"
    },
    {
      "index": 24,
      "text": "waqaṭa`ta `anhu kulla shay-in yaqṭa`uhu `ank"
    },
    {
      "index": 25,
      "text": "allāhummaj`alnā mimman da-buhumul ir-tiyāḥu ilayka walḥanīn"
    },
    {
      "index": 26,
      "text": "wadahruhumuz zafratu wal-anīn"
    },
    {
      "index": 27,
      "text": "jibāhuhum sājidatun li`aẓamatik"
    },
    {
      "index": 28,
      "text": "wa`uyūnuhum sāhiratun fī khidmatik"
    },
    {
      "index": 29,
      "text": "wadumū`uhum sā-ilatun min khashyatik"
    },
    {
      "index": 30,
      "text": "waqulūbuhum muta`alliqatun bimaḥabbatik"
    },
    {
      "index": 31,
      "text": "wa-af-idatuhum munkhali`atun min mahābatik"
    },
    {
      "index": 32,
      "text": "yā man anwāru qudsihi li-abṣāri muḥibbīhi rā-iqah"
    },
    {
      "index": 33,
      "text": "wasubuḥātu wajhihi liqulūbi `ārifīhi shā-iqah"
    },
    {
      "index": 34,
      "text": "yā munā qulūbil mushtāqīn"
    },
    {
      "index": 35,
      "text": "wayā ghāyata-āmālil muḥibbīn"
    },
    {
      "index": 36,
      "text": "as-aluka ḥubbaka waḥubba man yuḥibbuk"
    },
    {
      "index": 37,
      "text": "waḥubba kulli `amalin yūṣilunī ilā qur-bik"
    },
    {
      "index": 38,
      "text": "wa-an taj`alaka aḥabba ilayya mimmā siwāk"
    },
    {
      "index": 39,
      "text": "wa-an taj`ala ḥubbī iyyāka qā-idan ilā riḍwānik"
    },
    {
      "index": 40,
      "text": "washawqī ilayka dhā-idan `an `iṣyānik"
    },
    {
      "index": 41,
      "text": "wamnun binnaẓari ilayka `alayy"
    },
    {
      "index": 42,
      "text": "wanẓur bi`aynil wuddi wal`aṭfi ilayy"
    },
    {
      "index": 43,
      "text": "walā taṣrif `annī wajhak"
    },
    {
      "index": 44,
      "text": "waj`alnī min ahlil is`ādi walḥuẓwati `indak"
    },
    {
      "index": 45,
      "text": "yā mujību yā ar-ḥamar rāḥimīn"
    }
  ]
}