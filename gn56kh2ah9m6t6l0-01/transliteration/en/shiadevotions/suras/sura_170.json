{
  "index": 170,
  "name": "Sura 170",
  "ayas": [
    {
      "index": 1,
      "text": "wankashafat lahuẓ ẓulumāt",
      "bismillah": "a`ūdhu binūri wajhikal ladhī aḍā-at lahus samāwātu wal-araḍūn"
    },
    {
      "index": 2,
      "text": "waṣalaḥa `alayhi amrul awwalīna wal-ākhirīn"
    },
    {
      "index": 3,
      "text": "min fuj-ati naqimatik"
    },
    {
      "index": 4,
      "text": "wamin taḥwīli `āfiyatik"
    },
    {
      "index": 5,
      "text": "wamin zawāli ni`matik"
    },
    {
      "index": 6,
      "text": "allāhummar-zuqnī qalban taqiyyan naqiyyā"
    },
    {
      "index": 7,
      "text": "waminash shir-ki barī-ā"
    },
    {
      "index": 8,
      "text": "lākāfiran walā shaqiyyā"
    }
  ]
}