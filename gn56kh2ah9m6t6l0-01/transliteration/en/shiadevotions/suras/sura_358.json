{
  "index": 358,
  "name": "Sura 358",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismil lāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma kun liwaliyyikal ḥujjatibnil ḥasan"
    },
    {
      "index": 3,
      "text": "ṣalawātuka `alayhi wa`alā-ābā-ih"
    },
    {
      "index": 4,
      "text": "fī hādhihis sā`ati wafī kulli sā`ah"
    },
    {
      "index": 5,
      "text": "waliyyan waḥāfiẓā"
    },
    {
      "index": 6,
      "text": "waqā-idan wanāṣirā"
    },
    {
      "index": 7,
      "text": "wadalīlan wa`aynā"
    },
    {
      "index": 8,
      "text": "ḥattā tuskinahu ar-ḍaka ṭaw`ā"
    },
    {
      "index": 9,
      "text": "watumatti`ahu fīhā ṭawīlā"
    }
  ]
}