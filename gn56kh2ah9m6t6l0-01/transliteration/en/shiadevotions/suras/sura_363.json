{
  "index": 363,
  "name": "Sura 363",
  "ayas": [
    {
      "index": 1,
      "text": "as salāmu `alayka yā amīral mu-minīn",
      "bismillah": "as salāmu `alayka yā rasūlallāh"
    },
    {
      "index": 2,
      "text": "as salāmu `alayki yā fāṭimataz zahrā"
    },
    {
      "index": 3,
      "text": "as salāmu `alayki yā khadījatal kubrā"
    },
    {
      "index": 4,
      "text": "as salāmu `alayka yā ḥasanal mujtabā"
    },
    {
      "index": 5,
      "text": "as salāmu `alayka yā abā `abdillāhil ḥusayn"
    },
    {
      "index": 6,
      "text": "wa `alā tis`atil ma`ṣūmīna min dhurriyyatik"
    },
    {
      "index": 7,
      "text": "`aliyyibnil ḥusayn"
    },
    {
      "index": 8,
      "text": "wa muḥammadibni `aliy"
    },
    {
      "index": 9,
      "text": "wa ja`faribni muḥammad"
    },
    {
      "index": 10,
      "text": "wa musabni ja`far"
    },
    {
      "index": 11,
      "text": "wa`aliyyibni musā"
    },
    {
      "index": 12,
      "text": "wamuḥammadibni `aliy"
    },
    {
      "index": 13,
      "text": "wa`aliyibni muḥammad"
    },
    {
      "index": 14,
      "text": "walḥasanibni `aliy"
    },
    {
      "index": 15,
      "text": "walḥujjatibnil ḥasan"
    },
    {
      "index": 16,
      "text": "`ajjalallāhu farajah"
    },
    {
      "index": 17,
      "text": "wa sahhalallāhu makhrajahu waẓuhūrah"
    },
    {
      "index": 18,
      "text": "was salāmu `alaykum waraḥmatullāhi wabarakātuh"
    }
  ]
}