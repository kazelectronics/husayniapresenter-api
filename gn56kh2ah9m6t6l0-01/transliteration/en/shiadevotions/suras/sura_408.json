{
  "index": 408,
  "name": "Sura 408",
  "ayas": [
    {
      "index": 1,
      "text": "`alā rasūlika muḥammadibni `abdillāh",
      "bismillah": "allāhumma innī ash-hadu anna hādhā kitābukal munzalu min `indik"
    },
    {
      "index": 2,
      "text": "ṣallallāhu `alayhi wa-ālih"
    },
    {
      "index": 3,
      "text": "wa kalāmukan nāṭiqu `alā lisāni nabiyyik"
    },
    {
      "index": 4,
      "text": "ja`altahu hādiyan minka ilā khalqik"
    },
    {
      "index": 5,
      "text": "wa ḥablan muttaṣilan fīmā baynaka wa bayna `ibādik"
    },
    {
      "index": 6,
      "text": "allāhumma innī nashar-tu `ahdaka wa kitābak"
    },
    {
      "index": 7,
      "text": "faj`al naẓarī fīhi `ibādah"
    },
    {
      "index": 8,
      "text": "wa qirā-atī fīhi fikran wa fikrī fīhi`tibārā"
    },
    {
      "index": 9,
      "text": "wa lā taj`al qirā-atī qirā-atan lā tadabbura fīhā"
    },
    {
      "index": 10,
      "text": "balij`alnī atadabbaru-āyātihi wa aḥkāmah"
    },
    {
      "index": 11,
      "text": "innaka antar ra-ūfur raḥīm"
    }
  ]
}