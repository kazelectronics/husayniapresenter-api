{
  "index": 227,
  "name": "Sura 227",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 3,
      "text": "watawallanī fī jīrānī wamawāliyyal `ārifīna biḥaqqinā walmunābidhīna li-a`dā-inā bi-afḍali walāyatik"
    },
    {
      "index": 4,
      "text": "wawaffiqhum li-iqāmati sunnatik"
    },
    {
      "index": 5,
      "text": "wal-akhdhi bimaḥāsini adabika fī ir-fāqi ḍa`īfihim"
    },
    {
      "index": 6,
      "text": "wasaddi khallatihim, wa`iyādati marīḍihim"
    },
    {
      "index": 7,
      "text": "wahidāyati mustar-shidihim, wamunāṣaḥati mustashīrihim"
    },
    {
      "index": 8,
      "text": "wata`ahhudi qādimihim, wakitmāni asrārihim"
    },
    {
      "index": 9,
      "text": "wasatri `awrātihim, wanuṣrati maẓlūmihim"
    },
    {
      "index": 10,
      "text": "waḥusni muwāsātihim bil mā`ūn"
    },
    {
      "index": 11,
      "text": "wal`awdi `alayhim bil jidati wal-ifḍāl"
    },
    {
      "index": 12,
      "text": "wa-i`ṭā-i mā yajibu lahum qablas su-āl"
    },
    {
      "index": 13,
      "text": "waj`alnillāhumma ajzī bil iḥsāni musī-ahum"
    },
    {
      "index": 14,
      "text": "wa-a`riḍu bittajāwuzi `an ẓālimihim"
    },
    {
      "index": 15,
      "text": "wa-asta`milu ḥusnaẓ ẓanni fī kāffatihim, wa-atawallā bil birri `āmmatahum"
    },
    {
      "index": 16,
      "text": "wa-aghuḍḍu baṣarī `anhum `iffah"
    },
    {
      "index": 17,
      "text": "wa-ulīnu jānibī lahum tawāḍu`ā"
    },
    {
      "index": 18,
      "text": "wa-ariqqu `alā ahlil balā-i minhum raḥmah"
    },
    {
      "index": 19,
      "text": "wa-usirru lahum bil ghaybi mawaddah"
    },
    {
      "index": 20,
      "text": "wa-uḥibbu baqā-an ni`mati `indahum nuṣ-ḥā"
    },
    {
      "index": 21,
      "text": "wa-ūjibu lahum mā ūjibu liḥāmmatī"
    },
    {
      "index": 22,
      "text": "wa-ar-`ā lahum mā ar-`ā likhāṣṣatī"
    },
    {
      "index": 23,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 24,
      "text": "war-zuqnī mithla dhālika minhum"
    },
    {
      "index": 25,
      "text": "waj`al lī awfal ḥuẓūẓi fīmā `indahum"
    },
    {
      "index": 26,
      "text": "wazid-hum baṣīratan fī ḥaqqī, wama`rifatan bifaḍlī"
    },
    {
      "index": 27,
      "text": "ḥattā yas`adū bī wa-as`ada bihim"
    },
    {
      "index": 28,
      "text": "āmīna rabbal `ālamīn"
    }
  ]
}