{
  "index": 229,
  "name": "Sura 229",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "al lahumma innī akhlaṣtu binqiṭā`ī ilayk"
    },
    {
      "index": 3,
      "text": "wa-aqbaltu bikullī `alayk"
    },
    {
      "index": 4,
      "text": "waṣaraftu wajhī `amman yaḥtāju ilā rifdik"
    },
    {
      "index": 5,
      "text": "waqalabtu mas-alatī `amman lam yastaghni `an faḍlik"
    },
    {
      "index": 6,
      "text": "wara-aytu anna ṭalabal muḥtāji ilal muḥtāj"
    },
    {
      "index": 7,
      "text": "safahun min ra-yihi waḍallatun min `aqlih"
    },
    {
      "index": 8,
      "text": "fakam qad ra-aytu yā ilahī"
    },
    {
      "index": 9,
      "text": "min unāsin ṭalabul `izza bighayrika fadhallū"
    },
    {
      "index": 10,
      "text": "warāmuth thar-wata min siwāka faftaqarū"
    },
    {
      "index": 11,
      "text": "waḥāwalul ir-tifā`a fāttaḍa`ū"
    },
    {
      "index": 12,
      "text": "faṣaḥḥa bimu`āyanati amthālihim ḥāzim"
    },
    {
      "index": 13,
      "text": "waffaqahu`tibāruh"
    },
    {
      "index": 14,
      "text": "wa-ar-shadahu ilā ṭarīqi ṣawābihikhtiyāruh"
    },
    {
      "index": 15,
      "text": "fa-anta yā mawlāy"
    },
    {
      "index": 16,
      "text": "dūna kulli mas-ūlin mawḍi`u mas-alatī"
    },
    {
      "index": 17,
      "text": "wadūna kulli maṭlūbin ilayhi waliyyu ḥājatī"
    },
    {
      "index": 18,
      "text": "antal makhṣūṣu qabla kulli mad`uwwin bida`watī"
    },
    {
      "index": 19,
      "text": "lā yashrakuka aḥadun fī rajā-ī"
    },
    {
      "index": 20,
      "text": "walā yattafiqu aḥadun ma`aka fī du`ā-ī"
    },
    {
      "index": 21,
      "text": "walā yanẓimuhu wa-iyyāka nidā-ī"
    },
    {
      "index": 22,
      "text": "laka yā ilahī waḥdāniyyatul `adad"
    },
    {
      "index": 23,
      "text": "wamalakatul qudratiṣ ṣamad"
    },
    {
      "index": 24,
      "text": "wafaḍīlatul ḥawli walquwwah"
    },
    {
      "index": 25,
      "text": "wadarajatul `uluwwi war rif`ah"
    },
    {
      "index": 26,
      "text": "waman siwāka mar-ḥūmun fī `umrih"
    },
    {
      "index": 27,
      "text": "maghlūbun `alā amrih, maqhūrun `alā sha-nih"
    },
    {
      "index": 28,
      "text": "mukhtaliful ḥālāt, mutanaqqilun fiṣ ṣifāt"
    },
    {
      "index": 29,
      "text": "fata`ālayta `anil ashbāhi wal-aḍdād"
    },
    {
      "index": 30,
      "text": "watakabbar-ta `anil amthāli wal-andād"
    },
    {
      "index": 31,
      "text": "fasubḥānaka lā ilaha illā ant"
    }
  ]
}