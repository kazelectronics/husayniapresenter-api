{
  "index": 207,
  "name": "Sura 207",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "yā man lā tanqaḍī `ajā-ibu `aẓamatih"
    },
    {
      "index": 3,
      "text": "ṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 4,
      "text": "waḥjubnā `anil ilḥādi fī `aẓamatik"
    },
    {
      "index": 5,
      "text": "wa yā man lā tantahī muddatu mulkih"
    },
    {
      "index": 6,
      "text": "ṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 7,
      "text": "wa a`tiq riqābanā min naqimatik"
    },
    {
      "index": 8,
      "text": "wa yā man lā tafnā khazā-inu raḥmatih"
    },
    {
      "index": 9,
      "text": "ṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 10,
      "text": "waj`al lanā naṣīban fī raḥmatik"
    },
    {
      "index": 11,
      "text": "wa yā man tanqaṭi`u dūna ru-yatihil abṣār"
    },
    {
      "index": 12,
      "text": "ṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 13,
      "text": "wa adninā ilā qur-bik"
    },
    {
      "index": 14,
      "text": "wa yā man taṣghuru `inda khaṭarihil akhṭār"
    },
    {
      "index": 15,
      "text": "ṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 16,
      "text": "wa karrimnā `alayk"
    },
    {
      "index": 17,
      "text": "wa yā man taẓharu `indahu bawāṭinul akhbār"
    },
    {
      "index": 18,
      "text": "ṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 19,
      "text": "wa lā tafḍaḥnā ladayk"
    },
    {
      "index": 20,
      "text": "allāhumma aghninā `an hibatil wahhābīna bihibatik"
    },
    {
      "index": 21,
      "text": "wakfinā waḥshatal qāṭi`īna biṣilatik"
    },
    {
      "index": 22,
      "text": "ḥattā lā nar-ghaba ilā aḥadin ma`a badhlik"
    },
    {
      "index": 23,
      "text": "wa lā nastawḥisha min aḥadin ma`a faḍlik"
    },
    {
      "index": 24,
      "text": "allāhumma faṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 25,
      "text": "wa kid lanā wa lā takid `alaynā"
    },
    {
      "index": 26,
      "text": "wamkur lanā wa lā tamkur binā"
    },
    {
      "index": 27,
      "text": "wa adil lanā wa lā tudil minnā"
    },
    {
      "index": 28,
      "text": "allāhumma ṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 29,
      "text": "wa qinā minka waḥfaẓnā bika wahdinā ilayk"
    },
    {
      "index": 30,
      "text": "wa lā tubā`idnā `anka inna man taqihi yaslam"
    },
    {
      "index": 31,
      "text": "wa man tahdihi ya`lam wa man tuqarribhu ilayka yaghnam"
    },
    {
      "index": 32,
      "text": "allāhumma ṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 33,
      "text": "wakfinā ḥadda nawā-ibiz zamān"
    },
    {
      "index": 34,
      "text": "wa sharra maṣāyidish shayṭāni wa marārata ṣawlatis sulṭān"
    },
    {
      "index": 35,
      "text": "allāhumma innamā yaktafil muktafūna bifaḍli quwwatik"
    },
    {
      "index": 36,
      "text": "faṣalli `alā muḥammadin wa-ālihi wakfinā"
    },
    {
      "index": 37,
      "text": "wa innamā yu`ṭil mu`ṭūna min faḍli jidatik"
    },
    {
      "index": 38,
      "text": "faṣalli `alā muḥammadin wa-ālihi wa a`ṭinā"
    },
    {
      "index": 39,
      "text": "wa innamā yahtadil muhtadūna binūri wajhik"
    },
    {
      "index": 40,
      "text": "faṣalli `alā muḥammadin wa-ālihi wahdinā"
    },
    {
      "index": 41,
      "text": "allāhumma innaka man wālayta lam yaḍrur-hu khidhlānul khādhilīn"
    },
    {
      "index": 42,
      "text": "wa man a`ṭayta lam yanquṣ-hu man`ul māni`īn"
    },
    {
      "index": 43,
      "text": "wa man hadayta lam yughwihi iḍlālul muḍillīn"
    },
    {
      "index": 44,
      "text": "faṣalli `alā muḥammadin wa-ālihi wamna`nā bi`izzika min `ibādik"
    },
    {
      "index": 45,
      "text": "wa aghninā `an ghayrika bi-ir-fādik"
    },
    {
      "index": 46,
      "text": "wasluk binā sabīlal ḥaqqi bi-ir-shādik"
    },
    {
      "index": 47,
      "text": "allāhumma ṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 48,
      "text": "waj`al salāmata qulūbinā fī dhikri `aẓamatik"
    },
    {
      "index": 49,
      "text": "wa farāgha abdāninā fī shukri ni`matik"
    },
    {
      "index": 50,
      "text": "wanṭilāqa alsinatinā fī waṣfi minnatik"
    },
    {
      "index": 51,
      "text": "allāhumma ṣalli `alā muḥammadin wa-ālih"
    },
    {
      "index": 52,
      "text": "waj`alnā min du`ātikad dā`īna ilayk"
    },
    {
      "index": 53,
      "text": "wa hudātikad dāllīna `alayk"
    },
    {
      "index": 54,
      "text": "wa min khāṣṣatikal khāṣṣīna ladayk"
    },
    {
      "index": 55,
      "text": "yā ar-ḥamar rāḥimīn"
    }
  ]
}