{
  "index": 305,
  "name": "Sura 305",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "bismillāhil ladhī lā-ar-jū illā faḍlah"
    },
    {
      "index": 3,
      "text": "walā akhshā illā `adlah"
    },
    {
      "index": 4,
      "text": "walā a`tamidu illā qawlah"
    },
    {
      "index": 5,
      "text": "walā umsiku illā biḥablih"
    },
    {
      "index": 6,
      "text": "bika astajīru yā dhal `afwi war riḍwān"
    },
    {
      "index": 7,
      "text": "minaẓ ẓulmi wal`udwān"
    },
    {
      "index": 8,
      "text": "wamin ghiyariz zamān"
    },
    {
      "index": 9,
      "text": "watawāturil aḥzān"
    },
    {
      "index": 10,
      "text": "waṭawāriqil ḥadathān"
    },
    {
      "index": 11,
      "text": "wamininqiḍā-il muddati qablat ta-ahhubi wal`uddah"
    },
    {
      "index": 12,
      "text": "wa iyyāka astar-shidu limā fīhiṣ ṣalāḥu wal-iṣlāḥ"
    },
    {
      "index": 13,
      "text": "wabika asta`īnu fīmā yaqtarinu bihin najāḥu wal injāḥ"
    },
    {
      "index": 14,
      "text": "wa iyyāka ar-ghabu fī libāsil `āfiyati watamāmihā"
    },
    {
      "index": 15,
      "text": "wa shumūlis salāmati wadawāmihā"
    },
    {
      "index": 16,
      "text": "wa-a`ūdhu bika yā rabbi min hamazātish shayāṭīn"
    },
    {
      "index": 17,
      "text": "wa aḥtarizu bisulṭānika min jawris salāṭīn"
    },
    {
      "index": 18,
      "text": "fataqabbal mā kāna min ṣalātī waṣawmī"
    },
    {
      "index": 19,
      "text": "waj`al ghadī wamā ba`dahu afḍala min sā`atī wayawmī"
    },
    {
      "index": 20,
      "text": "wa-a`izzanī fī `ashīratī waqawmī"
    },
    {
      "index": 21,
      "text": "waḥfaẓnī fī yaqẓatī wanawmī"
    },
    {
      "index": 22,
      "text": "fa-antallāhu khayrun ḥāfiẓā"
    },
    {
      "index": 23,
      "text": "wa-anta ar-ḥamur rāḥimīn"
    },
    {
      "index": 24,
      "text": "allāhumma innī abra-u ilayka fī yawmī hādhā"
    },
    {
      "index": 25,
      "text": "wamā ba`dahu minal-āḥād"
    },
    {
      "index": 26,
      "text": "minash shir-ki wal-ilḥād"
    },
    {
      "index": 27,
      "text": "wa-ukhliṣu laka du`ā-ī"
    },
    {
      "index": 28,
      "text": "ta`arruḍan lil-ijābah"
    },
    {
      "index": 29,
      "text": "wa-uqīmu `alā ṭā`atik"
    },
    {
      "index": 30,
      "text": "rajā-an lil-ithābah"
    },
    {
      "index": 31,
      "text": "faṣalli `alā muḥammadin khayri khalqik"
    },
    {
      "index": 32,
      "text": "ad dā`ī ilā ḥaqqik"
    },
    {
      "index": 33,
      "text": "wa-a`izzanī bi`izzikal ladhī lāyuḍām"
    },
    {
      "index": 34,
      "text": "waḥfaẓnī bi`aynikal latī lātanām"
    },
    {
      "index": 35,
      "text": "wakhtim bilanqiṭā`i ilayka amrī"
    },
    {
      "index": 36,
      "text": "wabil maghfirati `umrī"
    },
    {
      "index": 37,
      "text": "innaka antal ghafūrur raḥīm"
    }
  ]
}