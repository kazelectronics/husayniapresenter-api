{
  "index": 37,
  "name": "Sura 37",
  "ayas": [
    {
      "index": 1,
      "text": "waṣ ṣāffāti ṣaffā",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "faz zājirāti zajrā"
    },
    {
      "index": 3,
      "text": "fat tāliyāti dhikrā"
    },
    {
      "index": 4,
      "text": "inna ilāhakum lawāḥid"
    },
    {
      "index": 5,
      "text": "rabbus samāwāti wal-arḍi wa mā baynahumā warabbul mashāriq"
    },
    {
      "index": 6,
      "text": "innā zayyannas samā-ad dunyā bizīnatinil-kawākib"
    },
    {
      "index": 7,
      "text": "waḥifẓan min kulli shayṭānin mārid"
    },
    {
      "index": 8,
      "text": "lā yassamma`ūna ilal-mala-il-a`lā wayuqdhafūna min kulli jānib"
    },
    {
      "index": 9,
      "text": "duḥūrā ۖ walahum `adhābun wāṣib"
    },
    {
      "index": 10,
      "text": "illā man khaṭifal khaṭfata fa-atba`ahu shihābun thāqib"
    },
    {
      "index": 11,
      "text": "fastaftihim ahum ashaddu khalqan am man khalaqnā ۚ innā khalaqnāhum min ṭīnin lāzib"
    },
    {
      "index": 12,
      "text": "bal `ajibta wayaskharūn"
    },
    {
      "index": 13,
      "text": "wa idhā dhukkirū lā yadhkurūn"
    },
    {
      "index": 14,
      "text": "wa idhā ra-aw āyatan yastaskhirūn"
    },
    {
      "index": 15,
      "text": "waqālū in hādhā illā siḥrun mubīn"
    },
    {
      "index": 16,
      "text": "a-idhā mitnā wakunnā turāban wa`iẓāman a-innā lamab`ūthūn"
    },
    {
      "index": 17,
      "text": "awa-ābā-unal-awwalūn"
    },
    {
      "index": 18,
      "text": "qul na`am wa-antum dākhirūn"
    },
    {
      "index": 19,
      "text": "fa-innamā hiya zajratun wāḥidatun fa-idhā hum yanẓurūn"
    },
    {
      "index": 20,
      "text": "waqālū yāwaylanā hādhā yawmud dīn"
    },
    {
      "index": 21,
      "text": "hādhā yawmul faṣlil ladhī kuntum bihi tukadhhibūn"
    },
    {
      "index": 22,
      "text": "uḥ-shurul ladhīna ẓalamū wa-azwājahum wa mā kānū ya`budūn"
    },
    {
      "index": 23,
      "text": "min dūnillāhi fahdūhum ilā ṣirāṭil jaḥīm"
    },
    {
      "index": 24,
      "text": "waqifūhum ۖ innahum mas-ūlūn"
    },
    {
      "index": 25,
      "text": "mā lakum lā tanāṣarūn"
    },
    {
      "index": 26,
      "text": "bal humul yawma mustaslimūn"
    },
    {
      "index": 27,
      "text": "wa-aqbala ba`ḍuhum `alā ba`ḍiy yatasā-alūn"
    },
    {
      "index": 28,
      "text": "qālū innakum kuntum ta-tūnanā `anil yamīn"
    },
    {
      "index": 29,
      "text": "qālū bal lam takūnū mu-minīn"
    },
    {
      "index": 30,
      "text": "wa mā kāna lanā `alaykum min sulṭān ۖ bal kuntum qawman ṭāghīn"
    },
    {
      "index": 31,
      "text": "faḥaqqa `alaynā qawlu rabbinā ۖ innā ladhā-iqūn"
    },
    {
      "index": 32,
      "text": "fa-aghwaynākum innā kunnā ghāwyn"
    },
    {
      "index": 33,
      "text": "fa-innahum yawma-idhin fil `adhābi mushtarikūn"
    },
    {
      "index": 34,
      "text": "innā kadhālika naf`alu bil mujrimīn"
    },
    {
      "index": 35,
      "text": "innahum kānū idhā qīla lahum lā ilāha illallāhu yastakbirūn"
    },
    {
      "index": 36,
      "text": "wayaqūlūna a-innā latārikū ālihatinā lishā`irin majnūn"
    },
    {
      "index": 37,
      "text": "bal jā-a bil ḥaqqi waṣaddaqal mursalīn"
    },
    {
      "index": 38,
      "text": "innakum ladhā-iqul `adhābil-alīm"
    },
    {
      "index": 39,
      "text": "wa mā tujzawna illā mā kuntum ta`malūn"
    },
    {
      "index": 40,
      "text": "illā `ibādallāhil mukhlaṣīn"
    },
    {
      "index": 41,
      "text": "ulā-ika lahum rizqun ma`lūm"
    },
    {
      "index": 42,
      "text": "fawākih ۖ wahum mukramūn"
    },
    {
      "index": 43,
      "text": "fī jannātin na`īm"
    },
    {
      "index": 44,
      "text": "`alā sururin mutaqābilīn"
    },
    {
      "index": 45,
      "text": "yuṭāfu `alayhim bika-sin min ma`īn"
    },
    {
      "index": 46,
      "text": "bayḍā-a ladhhatin lishhāribīn"
    },
    {
      "index": 47,
      "text": "lā fīhā ghawlun walā hum `anhā yunzafūn"
    },
    {
      "index": 48,
      "text": "wa`indahum qāṣirātuṭ ṭarfi `īn"
    },
    {
      "index": 49,
      "text": "ka-annahunna bayḍun maknūn"
    },
    {
      "index": 50,
      "text": "fa-aqbala ba`ḍuhum `alā ba`ḍiy yatasā-alūn"
    },
    {
      "index": 51,
      "text": "qāla qā-ilun minhum innī kāna lī qarīn"
    },
    {
      "index": 52,
      "text": "yaqūlu a-innaka laminal muṣaddiqīn"
    },
    {
      "index": 53,
      "text": "a-idhā mitnā wakunnā turāban wa`iẓāman a-innā lamadīnūn"
    },
    {
      "index": 54,
      "text": "qāla hal antum muṭṭali`ūn"
    },
    {
      "index": 55,
      "text": "faṭṭala`a fara-āhu fī sawā-il jaḥīm"
    },
    {
      "index": 56,
      "text": "qāla tallāhi in kidta laturdīn"
    },
    {
      "index": 57,
      "text": "walawlā ni`matu rabbī lakuntu minal muḥḍarīn"
    },
    {
      "index": 58,
      "text": "afamā naḥnu bimayyitīn"
    },
    {
      "index": 59,
      "text": "illā mawtatanal-ūlā wa mā naḥnu bimu`adhhabīn"
    },
    {
      "index": 60,
      "text": "inna hādhā lahuwal fawzul `aẓīm"
    },
    {
      "index": 61,
      "text": "limithli hādhā falya`malil `āmilūn"
    },
    {
      "index": 62,
      "text": "adhālika khayrun nuzulan am shajaratuz zaqqūm"
    },
    {
      "index": 63,
      "text": "innā ja`alnāhā fitnatan liẓẓālimīn"
    },
    {
      "index": 64,
      "text": "innahā shajaratun takhruju fī aṣlil jaḥīm"
    },
    {
      "index": 65,
      "text": "ṭal`uhā ka-annahu ru-ūsush shayāṭīn"
    },
    {
      "index": 66,
      "text": "fa-innahum la-ākilūna minhā famāli-ūna minhal buṭūn"
    },
    {
      "index": 67,
      "text": "thumma inna lahum `alayhā lashawban min ḥamīm"
    },
    {
      "index": 68,
      "text": "thumma inna marji`ahum la-ilal-jaḥīm"
    },
    {
      "index": 69,
      "text": "innahum alfaw ābā-ahum ḍāllīn"
    },
    {
      "index": 70,
      "text": "fahum `alā āthārihim yuhra`ūn"
    },
    {
      "index": 71,
      "text": "walaqad ḍalla qablahum aktharul-awwalīn"
    },
    {
      "index": 72,
      "text": "walaqad arsalnā fīhim mundhirīn"
    },
    {
      "index": 73,
      "text": "fanẓur kayfa kāna `āqibatul mundharīn"
    },
    {
      "index": 74,
      "text": "illā `ibādallāhil mukhlaṣīn"
    },
    {
      "index": 75,
      "text": "walaqad nādānā nūḥun falani`mal mujībūn"
    },
    {
      "index": 76,
      "text": "wanajjaynāhu wa-ahlahu minal karbil `aẓīm"
    },
    {
      "index": 77,
      "text": "waja`alnā dhurriyyatahu humul bāqīn"
    },
    {
      "index": 78,
      "text": "wataraknā `alayhi fil-ākhirīn"
    },
    {
      "index": 79,
      "text": "salāmun `alā nūḥin fil `ālamīn"
    },
    {
      "index": 80,
      "text": "innā kadhālika najzil muḥsinīn"
    },
    {
      "index": 81,
      "text": "innahu min `ibādinal mu-minīn"
    },
    {
      "index": 82,
      "text": "thumma aghraqnal-ākharīn"
    },
    {
      "index": 83,
      "text": "wa inna min shī`atihi la-ibrāhīm"
    },
    {
      "index": 84,
      "text": "idh jā-a rabbahu biqalbin salīm"
    },
    {
      "index": 85,
      "text": "idh qāla li-abīhi waqawmihi mādhā ta`budūn"
    },
    {
      "index": 86,
      "text": "a-ifkan ālihatan dūnallāhi turīdūn"
    },
    {
      "index": 87,
      "text": "famā ẓannukum birabbil `ālamīn"
    },
    {
      "index": 88,
      "text": "fanaẓara naẓratan fin nujūm"
    },
    {
      "index": 89,
      "text": "faqāla innī saqīm"
    },
    {
      "index": 90,
      "text": "fatawallaw `anhu mudbirīn"
    },
    {
      "index": 91,
      "text": "farāgha ilā ālihatihim faqāla alā ta-kulūn"
    },
    {
      "index": 92,
      "text": "mā lakum lā tanṭiqūn"
    },
    {
      "index": 93,
      "text": "farāgha `alayhim ḍarban bil yamīn"
    },
    {
      "index": 94,
      "text": "fa-aqbalū ilayhi yaziffūn"
    },
    {
      "index": 95,
      "text": "qāla ata`budūna mā tanḥitūn"
    },
    {
      "index": 96,
      "text": "wallāhu khalaqakum wa mā ta`malūn"
    },
    {
      "index": 97,
      "text": "qālub-nū lahu bunyānan fa-alqūhu fil jaḥīm"
    },
    {
      "index": 98,
      "text": "fa-arādū bihi kaydan faja`alnāhumul-asfalīn"
    },
    {
      "index": 99,
      "text": "waqāla innī dhāhibun ilā rabbī sayahdīn"
    },
    {
      "index": 100,
      "text": "rabbi hab lī minaṣ ṣāliḥīn"
    },
    {
      "index": 101,
      "text": "fabashharnāhu bighulāmin ḥalīm"
    },
    {
      "index": 102,
      "text": "falammā balagha ma`ahus sa`ya qāla yābunayya innī arā fil manāmi annī adhbaḥuka fanẓur mādhā tarā ۚ qāla yā-abatif-`al mā tu-mar ۖ satajidunī in shā-allāhu minaṣ ṣābirīn"
    },
    {
      "index": 103,
      "text": "falammā aslamā watallahu liljabīn"
    },
    {
      "index": 104,
      "text": "wanādaynāhu an yā-ibrāhīm"
    },
    {
      "index": 105,
      "text": "qad ṣaddaqtar ru-yā ۚ innā kadhālika najzil muḥsinīn"
    },
    {
      "index": 106,
      "text": "inna hādhā lahuwal balā-ul mubīn"
    },
    {
      "index": 107,
      "text": "wafadaynāhu bidhibḥin `aẓīm"
    },
    {
      "index": 108,
      "text": "wataraknā `alayhi fil-ākhirīn"
    },
    {
      "index": 109,
      "text": "salāmun `alā ibrāhīm"
    },
    {
      "index": 110,
      "text": "kadhālika najzil muḥsinīn"
    },
    {
      "index": 111,
      "text": "innahu min `ibādinal mu-minīn"
    },
    {
      "index": 112,
      "text": "wabashharnāhu bi-is-ḥāqa nabiyyan minaṣ ṣāliḥīn"
    },
    {
      "index": 113,
      "text": "wabāraknā `alayhi wa`alā is-ḥāq ۚ wa min dhurriyyatihimā muḥsinun waẓālimul linafsihi mubīn"
    },
    {
      "index": 114,
      "text": "walaqad manannā `alā mūsā wahārūn"
    },
    {
      "index": 115,
      "text": "wanajjaynāhumā waqawmahumā minal karbil `aẓīm"
    },
    {
      "index": 116,
      "text": "wanaṣarnāhum fakānū humul ghālibīn"
    },
    {
      "index": 117,
      "text": "wa-ātaynāhumal kitābal mustabīn"
    },
    {
      "index": 118,
      "text": "wahadaynāhumaṣ ṣirāṭal mustaqīm"
    },
    {
      "index": 119,
      "text": "wataraknā `alayhimā fil-ākhirīn"
    },
    {
      "index": 120,
      "text": "salāmun `alā mūsā wahārūn"
    },
    {
      "index": 121,
      "text": "innā kadhālika najzil muḥsinīn"
    },
    {
      "index": 122,
      "text": "innahumā min `ibādinal mu-minīn"
    },
    {
      "index": 123,
      "text": "wa inna ilyāsa laminal mursalīn"
    },
    {
      "index": 124,
      "text": "idh qāla liqawmihi alā tattaqūn"
    },
    {
      "index": 125,
      "text": "atad`ūna ba`lan watadharūna aḥsanal khāliqīn"
    },
    {
      "index": 126,
      "text": "allāha rabbakum warabba ābā-ikumul-awwalīn"
    },
    {
      "index": 127,
      "text": "fakadhhabūhu fa-innahum lamuḥḍarūn"
    },
    {
      "index": 128,
      "text": "illā `ibādallāhil mukhlaṣīn"
    },
    {
      "index": 129,
      "text": "wataraknā `alayhi fil-ākhirīn"
    },
    {
      "index": 130,
      "text": "salāmun `alā il yāsīn"
    },
    {
      "index": 131,
      "text": "innā kadhālika najzil muḥsinīn"
    },
    {
      "index": 132,
      "text": "innahu min `ibādinal mu-minīn"
    },
    {
      "index": 133,
      "text": "wa inna lūṭal laminal mursalīn"
    },
    {
      "index": 134,
      "text": "idh najjaynāhu wa-ahlahu ajma`īn"
    },
    {
      "index": 135,
      "text": "illā `ajūzan fil ghābirīn"
    },
    {
      "index": 136,
      "text": "thumma dammarnal-ākharīn"
    },
    {
      "index": 137,
      "text": "wa innakum latamurrūna `alayhim muṣbiḥīn"
    },
    {
      "index": 138,
      "text": "wabil layl ۗ afalā ta`qilūn"
    },
    {
      "index": 139,
      "text": "wa inna yūnusa laminal mursalīn"
    },
    {
      "index": 140,
      "text": "idh abaqa ilal-fulkil mashḥūn"
    },
    {
      "index": 141,
      "text": "fasāhama fakāna minal mud-ḥaḍīn"
    },
    {
      "index": 142,
      "text": "fal taqamahul ḥūtu wahuwa mulīm"
    },
    {
      "index": 143,
      "text": "falawlā annahu kāna minal musabbiḥīn"
    },
    {
      "index": 144,
      "text": "lalabitha fī baṭnihi ilā yawmi yub`athūn"
    },
    {
      "index": 145,
      "text": "fanabadhnāhu bil `arā-i wahuwa saqīm"
    },
    {
      "index": 146,
      "text": "wa-anbatnā `alayhi shajaratan min yaqṭīn"
    },
    {
      "index": 147,
      "text": "wa-arsalnāhu ilā mī-ati alfin aw yazīdūn"
    },
    {
      "index": 148,
      "text": "fa-āmanū famatta`nāhum ilā ḥīn"
    },
    {
      "index": 149,
      "text": "fastaftihim alirabbikal banātu walahumul banūn"
    },
    {
      "index": 150,
      "text": "am khalaqnal malā-ikata ināthan wahum shāhidūn"
    },
    {
      "index": 151,
      "text": "alā innahum min ifkihim layaqūlūn"
    },
    {
      "index": 152,
      "text": "waladallāhu wa innahum lakādhibūn"
    },
    {
      "index": 153,
      "text": "aṣṭafal banāti `alal-banīn"
    },
    {
      "index": 154,
      "text": "mā lakum kayfa taḥkumūn"
    },
    {
      "index": 155,
      "text": "afalā tadhakkarūn"
    },
    {
      "index": 156,
      "text": "am lakum sulṭānun mubīn"
    },
    {
      "index": 157,
      "text": "fa-tū bikitābikum in kuntum ṣādiqīn"
    },
    {
      "index": 158,
      "text": "waja`alū baynahu wabaynal jinnati nasabā ۚ walaqad `alimatil jinnatu innahum lamuḥḍarūn"
    },
    {
      "index": 159,
      "text": "subḥānallāhi `ammā yaṣifūn"
    },
    {
      "index": 160,
      "text": "illā `ibādallāhil mukhlaṣīn"
    },
    {
      "index": 161,
      "text": "fa-innakum wa mā ta`budūn"
    },
    {
      "index": 162,
      "text": "mā antum `alayhi bifātinīn"
    },
    {
      "index": 163,
      "text": "illā man huwa ṣālil jaḥīm"
    },
    {
      "index": 164,
      "text": "wa mā minnā illā lahu maqāmun ma`lūm"
    },
    {
      "index": 165,
      "text": "wa innā lanaḥnuṣ ṣāffūn"
    },
    {
      "index": 166,
      "text": "wa innā lanaḥnul musabbiḥūn"
    },
    {
      "index": 167,
      "text": "wa in kānū layaqūlūn"
    },
    {
      "index": 168,
      "text": "law anna `indanā dhikran minal-awwalīn"
    },
    {
      "index": 169,
      "text": "lakunnā `ibādallāhil mukhlaṣīn"
    },
    {
      "index": 170,
      "text": "fakafarū bih ۖ fasawfa ya`lamūn"
    },
    {
      "index": 171,
      "text": "walaqad sabaqat kalimatunā li`ibādinal mursalīn"
    },
    {
      "index": 172,
      "text": "innahum lahumul manṣūrūn"
    },
    {
      "index": 173,
      "text": "wa inna jundanā lahumul ghālibūn"
    },
    {
      "index": 174,
      "text": "fatawalla `anhum ḥattā ḥīn"
    },
    {
      "index": 175,
      "text": "wa-abṣirhum fasawfa yubṣirūn"
    },
    {
      "index": 176,
      "text": "afabi`adhābinā yasta`jilūn"
    },
    {
      "index": 177,
      "text": "fa-idhā nazala bisāḥatihim fasā-a ṣabāḥul mundharīn"
    },
    {
      "index": 178,
      "text": "watawalla `anhum ḥattā ḥīn"
    },
    {
      "index": 179,
      "text": "wa-abṣir fasawfa yubṣirūn"
    },
    {
      "index": 180,
      "text": "subḥāna rabbika rabbil `izzati `ammā yaṣifūn"
    },
    {
      "index": 181,
      "text": "wasalāmun `alal-mursalīn"
    },
    {
      "index": 182,
      "text": "wal ḥamdu lillāhi rabbil `ālamīn"
    }
  ]
}