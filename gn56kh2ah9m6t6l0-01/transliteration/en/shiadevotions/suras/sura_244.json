{
  "index": 244,
  "name": "Sura 244",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "ayyuhal khalqul muṭī`"
    },
    {
      "index": 3,
      "text": "ad dā-ibus sarī`"
    },
    {
      "index": 4,
      "text": "al mutaraddidu fī manāzilit taqdīr"
    },
    {
      "index": 5,
      "text": "al mutaṣarrifu fī falakit tadbīr"
    },
    {
      "index": 6,
      "text": "āmantu biman nawwara bikaẓ ẓulam"
    },
    {
      "index": 7,
      "text": "wa-awḍaḥa bikal buham"
    },
    {
      "index": 8,
      "text": "waja`alaka-āyatan min-āyāti mulkih"
    },
    {
      "index": 9,
      "text": "wa`alāmatan min `alāmāti sulṭānih"
    },
    {
      "index": 10,
      "text": "wamtahanaka bizziyādati wan nuqṣān"
    },
    {
      "index": 11,
      "text": "waṭ ṭulū`i wal-ufūl"
    },
    {
      "index": 12,
      "text": "wal-inārati walkusūf"
    },
    {
      "index": 13,
      "text": "fī kulli dhālika anta lahu muṭī`"
    },
    {
      "index": 14,
      "text": "wa-ilā irādatihi sarī`"
    },
    {
      "index": 15,
      "text": "subḥānahu mā a`jaba mā dabbara fī amrik"
    },
    {
      "index": 16,
      "text": "wa-alṭafa mā ṣana`a fī sha-nik"
    },
    {
      "index": 17,
      "text": "ja`alaka miftāḥa shahrin ḥādithin li-amrin ḥādith"
    },
    {
      "index": 18,
      "text": "fa-as-alullāha rabbī warabbak"
    },
    {
      "index": 19,
      "text": "wakhāliqī wakhāliqak"
    },
    {
      "index": 20,
      "text": "wamuqaddirī wamuqaddirak"
    },
    {
      "index": 21,
      "text": "wamuṣawwirī wamuṣawwirak"
    },
    {
      "index": 22,
      "text": "an yuṣalliya `alā muḥammadin wa ālih"
    },
    {
      "index": 23,
      "text": "wa-an yaj`alaka hilāla barakatin lā tamḥaquhal ayyām"
    },
    {
      "index": 24,
      "text": "waṭahāratin lā tudannisuhal-āthām"
    },
    {
      "index": 25,
      "text": "hilāla amnin minal-āfāt"
    },
    {
      "index": 26,
      "text": "wasalāmatin minas sayyi-āt"
    },
    {
      "index": 27,
      "text": "hilāla sa`din lā naḥsa fīh"
    },
    {
      "index": 28,
      "text": "wayumnin lā nakada ma`ah"
    },
    {
      "index": 29,
      "text": "wayusrin lā yumāzijuhu `usr"
    },
    {
      "index": 30,
      "text": "wakhayrin lā yashūbuhu sharr"
    },
    {
      "index": 31,
      "text": "hilāla amnin wa-īmān"
    },
    {
      "index": 32,
      "text": "wani`matin wa-iḥsān"
    },
    {
      "index": 33,
      "text": "wasalāmatin wa-islām"
    },
    {
      "index": 34,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 35,
      "text": "waj`alnā min ar-ḍā man ṭala`a `alayh"
    },
    {
      "index": 36,
      "text": "wa-azkā man naẓara ilayh"
    },
    {
      "index": 37,
      "text": "wa-as`ada man ta`abbada laka fīh"
    },
    {
      "index": 38,
      "text": "wawaffiqnā fīhi littawbah"
    },
    {
      "index": 39,
      "text": "wa`ṣimnā fīhi minal ḥawbah"
    },
    {
      "index": 40,
      "text": "waḥfaẓnā fīhi min mubāsharati ma`ṣiyatik"
    },
    {
      "index": 41,
      "text": "wa-awzi`nā fīhi shukra ni`matik"
    },
    {
      "index": 42,
      "text": "wa-albisnā fīhi junanal `āfiyah"
    },
    {
      "index": 43,
      "text": "wa-atmim `alaynā bistikmāli ṭā`atika fīhil minnah"
    },
    {
      "index": 44,
      "text": "innakal mannānul ḥamīd"
    },
    {
      "index": 45,
      "text": "waṣallallāhu `alā muḥammadin wa ālihiṭ ṭayyibīnaṭ ṭāhirīn"
    }
  ]
}