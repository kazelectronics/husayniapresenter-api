{
  "index": 243,
  "name": "Sura 243",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma innaka a`antanī `alā khatmi kitābik"
    },
    {
      "index": 3,
      "text": "al ladhī anzaltahu nūran waja`altahu muhayminā"
    },
    {
      "index": 4,
      "text": "`alā kulli kitābin anzaltah"
    },
    {
      "index": 5,
      "text": "wafaḍḍaltahu `alā kulli ḥadīthin qaṣaṣtah"
    },
    {
      "index": 6,
      "text": "wafur-qānan faraqta bihi bayna ḥalālika waḥarāmik"
    },
    {
      "index": 7,
      "text": "waqur-ānan a`rabta bihi `an sharā-i`i aḥkāmik"
    },
    {
      "index": 8,
      "text": "wakitāban faṣṣaltahu li`ibādika tafṣīlā"
    },
    {
      "index": 9,
      "text": "wawaḥyan anzaltahu `alā nabiyyika muḥammadin ṣalawātuka `alayhi wa ālihi tanzīlā"
    },
    {
      "index": 10,
      "text": "waja`altahu nūran nahtadī min ẓulamiḍ ḍalālati waljahālati bittibā`ih"
    },
    {
      "index": 11,
      "text": "washifā-an liman anṣata bifahmit taṣdīqi ilastimā`ih"
    },
    {
      "index": 12,
      "text": "wamīzāna qisṭin lā yaḥīfu `anil ḥaqqi lisānuh"
    },
    {
      "index": 13,
      "text": "wanūra hudan lā yaṭfa-u `anish shāhidīna bur-hānuh"
    },
    {
      "index": 14,
      "text": "wa`alama najātin lā yaḍillu man amma qaṣda sunnatih"
    },
    {
      "index": 15,
      "text": "walā tanālu aydil halakāti man ta`allaqa bi`ur-wati `iṣmatih"
    },
    {
      "index": 16,
      "text": "allāhumma fa-idh afadtanal ma`ūnata `alā tilāwatih"
    },
    {
      "index": 17,
      "text": "wasahhalta jawāsiya alsinatinā biḥusni `ibāratih"
    },
    {
      "index": 18,
      "text": "faj`alnā mimman yar-`āhu ḥaqqa ri`āyatih"
    },
    {
      "index": 19,
      "text": "wayadīnu laka bi`tiqādit taslīmi limuḥkami-āyātih"
    },
    {
      "index": 20,
      "text": "wayafza`u ilal iqrāri bimutashābihihi wamūḍaḥāti bayyinātih"
    },
    {
      "index": 21,
      "text": "allāhumma innaka anzaltahu `alā nabiyyik"
    },
    {
      "index": 22,
      "text": "muḥammadin ṣallallāhu `alayhi wa ālihi mujmalā"
    },
    {
      "index": 23,
      "text": "wa-alhamtahu `ilma `ajā-ibihi mukammalā"
    },
    {
      "index": 24,
      "text": "wawarrathtanā `ilmahu mufassarā"
    },
    {
      "index": 25,
      "text": "wafaḍḍaltanā `alā man jahila `ilmah"
    },
    {
      "index": 26,
      "text": "waqawwaytanā `alayhi litar-fa`anā fawqa man lam yuṭiq ḥamlah"
    },
    {
      "index": 27,
      "text": "allāhumma fakamā ja`alta qulūbanā lahu ḥamalah"
    },
    {
      "index": 28,
      "text": "wa`arraftanā biraḥmatika sharafahu wafaḍlah"
    },
    {
      "index": 29,
      "text": "faṣalli `alā muḥammadinil khaṭībi bih"
    },
    {
      "index": 30,
      "text": "wa`alā-ālihil khuzzāni lah"
    },
    {
      "index": 31,
      "text": "waj`alnā mimman ya`tarifu bi-annahu min `indik"
    },
    {
      "index": 32,
      "text": "ḥattā lā yu`āriḍanash shakku fī taṣdīqih"
    },
    {
      "index": 33,
      "text": "walā yakhtalijanaz zayghu `an qaṣdi ṭarīqih"
    },
    {
      "index": 34,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 35,
      "text": "waj`alnā mimman ya`taṣimu biḥablih"
    },
    {
      "index": 36,
      "text": "waya-wī minal mutashābihāti ilā ḥir-zi ma`qilih"
    },
    {
      "index": 37,
      "text": "wayaskunu fī ẓilli janāḥih"
    },
    {
      "index": 38,
      "text": "wayahtadī biḍaw-i ṣabāḥih"
    },
    {
      "index": 39,
      "text": "wayaqtadī bitaballuji isfārih"
    },
    {
      "index": 40,
      "text": "wayastaṣbiḥu bimiṣbāḥih"
    },
    {
      "index": 41,
      "text": "walā yaltamisul hudā fī ghayrih"
    },
    {
      "index": 42,
      "text": "allāhumma wakamā naṣabta bihi muḥammadan `alaman liddalālati `alayk"
    },
    {
      "index": 43,
      "text": "wa-anhajta bi-ālihi subular riḍā ilayk"
    },
    {
      "index": 44,
      "text": "faṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 45,
      "text": "waj`alil qur-āna wasīlatan lanā ilā ashrafi manāzilil karāmah"
    },
    {
      "index": 46,
      "text": "wasullaman na`ruju fīhi ilā maḥallis salāmah"
    },
    {
      "index": 47,
      "text": "wasababan nujzā bihin najāta fī `ar-ṣatil qiyāmah"
    },
    {
      "index": 48,
      "text": "wadharī`atan naqdamu bihā `alā na`īmi dāril muqāmah"
    },
    {
      "index": 49,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 50,
      "text": "waḥṭuṭ bil qur-āni `annā thiqlal awzār"
    },
    {
      "index": 51,
      "text": "wahab lanā ḥusna shamā-ilil abrār"
    },
    {
      "index": 52,
      "text": "waqfu binā-āthāral ladhīna qāmū laka bih"
    },
    {
      "index": 53,
      "text": "ānā-al layli wa-aṭrāfan nahār"
    },
    {
      "index": 54,
      "text": "ḥattā tuṭahhiranā min kulli danasin bitaṭ-hīrih"
    },
    {
      "index": 55,
      "text": "wataqfuwa binā-āthāral ladhīnastaḍa-ū binūrih"
    },
    {
      "index": 56,
      "text": "walam yulhihimul amalu `anil `amali fayaqṭa`ahum bikhuda`i ghurūrih"
    },
    {
      "index": 57,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 58,
      "text": "waj`alil qur-āna lanā fī ẓulamil layālī mūnisā"
    },
    {
      "index": 59,
      "text": "wamin nazaghātish shayṭāni wakhaṭarātil wasāwisi ḥārisā"
    },
    {
      "index": 60,
      "text": "wali-aqdāminā `an naqlihā ilal ma`āṣī ḥābisā"
    },
    {
      "index": 61,
      "text": "wali-alsinatinā `anil khawḍi fil bāṭili min ghayri mā-āfatin mukhrisā"
    },
    {
      "index": 62,
      "text": "walijawāriḥinā `aniqtirāfil-āthāmi zājirā"
    },
    {
      "index": 63,
      "text": "walimā ṭawatil ghaflatu `annā min taṣaffuḥil i`tibāri nāshirā"
    },
    {
      "index": 64,
      "text": "ḥattā tūṣila ilā qulūbinā fahma `ajā-ibih"
    },
    {
      "index": 65,
      "text": "wazawājira amthālihil latī ḍa`ufatil jibālur rawāsī"
    },
    {
      "index": 66,
      "text": "`alā ṣalābatihā `aniḥtimālih"
    },
    {
      "index": 67,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 68,
      "text": "wa-adim bil qur-āni ṣalāḥa ẓāhirinā"
    },
    {
      "index": 69,
      "text": "waḥjub bihi khaṭarātil wasāwisi `an ṣiḥḥati ḍamā-irinā"
    },
    {
      "index": 70,
      "text": "waghsil bihi darana qulūbinā wa`alā-iqa awzārinā"
    },
    {
      "index": 71,
      "text": "wajma` bihi muntashara umūrinā"
    },
    {
      "index": 72,
      "text": "wa-ar-wi bihi fī mawqifil `ar-ḍi `alayka ẓama-a hawājirinā"
    },
    {
      "index": 73,
      "text": "waksunā bihi ḥulalal amāni yawmal faza`il akbari fī nushūrinā"
    },
    {
      "index": 74,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 75,
      "text": "wajbur bil qur-āni khallatanā min `adamil imlāq"
    },
    {
      "index": 76,
      "text": "wasuq ilaynā bihi raghadal `ayshi wakhiṣba sa`atil ar-zāq"
    },
    {
      "index": 77,
      "text": "wajannibnā bihiḍ ḍarā-ibal madhmūmata wamadāniyal akhlāq"
    },
    {
      "index": 78,
      "text": "wa`ṣimnā bihi min huwwatil kufri wadawā`in nifāq"
    },
    {
      "index": 79,
      "text": "ḥattā yakūna lanā fil qiyāmati ilā riḍwānika wajinānika qā-idā"
    },
    {
      "index": 80,
      "text": "walanā fid dunyā `an sakhaṭika wata`addī ḥudūdika dhā-idā"
    },
    {
      "index": 81,
      "text": "walimā `indaka bitaḥlīli ḥalālihi wataḥrīmi ḥarāmihi shāhidā"
    },
    {
      "index": 82,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 83,
      "text": "wahawwin bil qur-āni `indal mawti `alā anfusinā kar-bas siyāq"
    },
    {
      "index": 84,
      "text": "wajahdal anīni watarādufal ḥashārij"
    },
    {
      "index": 85,
      "text": "idhā balaghatin nufūsut tarāqiya waqīla man rāq"
    },
    {
      "index": 86,
      "text": "watajallā malakul mawti liqabḍihā min ḥujubil ghuyūb"
    },
    {
      "index": 87,
      "text": "waramāhā `an qawsil manāyā bi-as-humi waḥshatil firāq"
    },
    {
      "index": 88,
      "text": "wadāfa lahā min dhu`āfil mawti ka-san masmūmatal madhāq"
    },
    {
      "index": 89,
      "text": "wadanā minnā ilal-ākhirati raḥīlun wanṭilāq"
    },
    {
      "index": 90,
      "text": "waṣāratil a`mālu qalā-ida fil a`nāq"
    },
    {
      "index": 91,
      "text": "wakānatil qubūru hiyal ma-wā ilā mīqāti yawmit talāq"
    },
    {
      "index": 92,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 93,
      "text": "wabārik lanā fī ḥulūli dāril bilā"
    },
    {
      "index": 94,
      "text": "waṭūlil muqāmati bayna aṭbāqith tharā"
    },
    {
      "index": 95,
      "text": "waj`alil qubūra ba`da firāqid dunyā khayra manāzilinā"
    },
    {
      "index": 96,
      "text": "wafsaḥ lanā biraḥmatika fī ḍīqi malāḥidinā"
    },
    {
      "index": 97,
      "text": "walā tafḍaḥnā fī ḥāḍiril qiyāmati bimūbiqāti-āthāminā"
    },
    {
      "index": 98,
      "text": "war-ḥam bil qur-āni fī mawqifil `ar-ḍi `alayka dhulla maqāminā"
    },
    {
      "index": 99,
      "text": "wathabbit bihi `indaḍṭirābi jisri jahannam"
    },
    {
      "index": 100,
      "text": "yawmal majāzi `alayhā zalala aqdāminā"
    },
    {
      "index": 101,
      "text": "wanawwir bihi qablal ba`thi sudafa qubūrinā"
    },
    {
      "index": 102,
      "text": "wanajjinā bihi min kulli kar-bin yawmal qiyāmah"
    },
    {
      "index": 103,
      "text": "washadā-idi ahwāli yawmiṭ ṭāmmah"
    },
    {
      "index": 104,
      "text": "wabayyiḍ wujūhanā yawma taswaddu wujūhuẓ ẓalamah"
    },
    {
      "index": 105,
      "text": "fī yawmil ḥasrati wan nadāmah"
    },
    {
      "index": 106,
      "text": "waj`al lanā fī ṣudūril mu-minīna wuddā"
    },
    {
      "index": 107,
      "text": "walā taj`alil ḥayāta `alaynā nakadā"
    },
    {
      "index": 108,
      "text": "allāhumma ṣalli `alā muḥammadin `abdika warasūlik"
    },
    {
      "index": 109,
      "text": "kamā ballagha risālataka waṣada`a bi-amrika wanaṣaḥa li`ibādik"
    },
    {
      "index": 110,
      "text": "allāhummaj`al nabiyyanā ṣalawātuka `alayh"
    },
    {
      "index": 111,
      "text": "wa`alā-ālihi yawmal qiyāmati aqraban nabiyyīna minka majlisā"
    },
    {
      "index": 112,
      "text": "wa-amkanahum minka shafā`atan wa-ajallahum `indaka qadrā"
    },
    {
      "index": 113,
      "text": "wa-awjahahum `indaka jāhā"
    },
    {
      "index": 114,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammadin washarrif bunyānah"
    },
    {
      "index": 115,
      "text": "wa`aẓẓim bur-hānahu wathaqqil mīzānah"
    },
    {
      "index": 116,
      "text": "wataqabbal shafā`atahu waqarrib wasīlatah"
    },
    {
      "index": 117,
      "text": "wabayyiḍ wajhahu wa-atimma nūrah"
    },
    {
      "index": 118,
      "text": "war-fa` darajatahu wa-aḥyinā `alā sunnatih"
    },
    {
      "index": 119,
      "text": "watawaffanā `alā millatihi wakhudh binā minhājah"
    },
    {
      "index": 120,
      "text": "wasluk binā sabīlahu waj`alnā min ahli ṭā`atih"
    },
    {
      "index": 121,
      "text": "waḥshur-nā fī zumratih"
    },
    {
      "index": 122,
      "text": "wa-awridnā ḥawḍahu wasqinā bika-sih"
    },
    {
      "index": 123,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 124,
      "text": "ṣalātan tuballighuhu bihā afḍal"
    },
    {
      "index": 125,
      "text": "mā ya-mulu min khayrika wafaḍlika wakarāmatik"
    },
    {
      "index": 126,
      "text": "innaka dhū raḥmatin wāsi`atin wafaḍlin karīm"
    },
    {
      "index": 127,
      "text": "allāhummajzihi bimā ballagha min risālātik"
    },
    {
      "index": 128,
      "text": "wa-addā min-āyātika wanaṣaḥa li`ibādik"
    },
    {
      "index": 129,
      "text": "wajāhada fī sabīlika afḍala mā jazayt"
    },
    {
      "index": 130,
      "text": "aḥadan min malā-ikatikal muqarrabīna wa-anbiyā-ikal mur-salīnal muṣṭafayn"
    },
    {
      "index": 131,
      "text": "was salāmu `alayhi wa`alā-ālihiṭ ṭayyibīnaṭ ṭāhirīn"
    },
    {
      "index": 132,
      "text": "waraḥmatullāhi wabarakātuh"
    }
  ]
}