{
  "index": 183,
  "name": "Sura 183",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma man ta`abbā watahayyā"
    },
    {
      "index": 3,
      "text": "wā`adda wasta`add"
    },
    {
      "index": 4,
      "text": "liwifādatin ilā makhlūq"
    },
    {
      "index": 5,
      "text": "rajā-a rifdih"
    },
    {
      "index": 6,
      "text": "waṭalaba nā-ilihi wajā-izatih"
    },
    {
      "index": 7,
      "text": "fa-ilayka yā rabbi ta`biyatī wasti`dādī"
    },
    {
      "index": 8,
      "text": "rajā-a `afwik"
    },
    {
      "index": 9,
      "text": "waṭalaba nā-ilika wajā-izatik"
    },
    {
      "index": 10,
      "text": "falā tukhayyib du`ā-ī"
    },
    {
      "index": 11,
      "text": "yā man lā yakhību `alayhi sā-il"
    },
    {
      "index": 12,
      "text": "walā yanquṣuhu nā-il"
    },
    {
      "index": 13,
      "text": "fa-innī lam-ātika thiqatan bi`amalin ṣāliḥin `amiltuh"
    },
    {
      "index": 14,
      "text": "walā liwifādati makhlūqin rajawtuh"
    },
    {
      "index": 15,
      "text": "ataytuka muqirran `alā nafsī bil isā-ati waẓ ẓulm"
    },
    {
      "index": 16,
      "text": "mu`tarifan bin lā ḥujjata lī walā `udhr"
    },
    {
      "index": 17,
      "text": "ataytukar-jū `aẓīma `afwik"
    },
    {
      "index": 18,
      "text": "al ladhī `afawta bihi `anil khāṭi-īn"
    },
    {
      "index": 19,
      "text": "falam yamna`ka ṭūlu `ukūfihim `alā `aẓīmil jur-m"
    },
    {
      "index": 20,
      "text": "in `udta `alayhim birraḥmah"
    },
    {
      "index": 21,
      "text": "fayā man raḥmatuhu wāsi`ah"
    },
    {
      "index": 22,
      "text": "wa`afwuhu `aẓim"
    },
    {
      "index": 23,
      "text": "yā `aẓimu yā `aẓimu yā `aẓim"
    },
    {
      "index": 24,
      "text": "lā yaruddu ghaḍabaka illā ḥilmuk"
    },
    {
      "index": 25,
      "text": "walā yunjī min sakhaṭika illat taḍarru`u ilayk"
    },
    {
      "index": 26,
      "text": "fahab lī yā ilāhī farajā"
    },
    {
      "index": 27,
      "text": "bil qudratil latī tuḥyī bihā maytal bilād"
    },
    {
      "index": 28,
      "text": "walā tuhliknī ghamman ḥattā tastajība lī"
    },
    {
      "index": 29,
      "text": "watu`arrifanil ijābata fī du`ā-ī"
    },
    {
      "index": 30,
      "text": "wa adhiqnī ṭa`mal `āfiyati ilā muntahā ajalī"
    },
    {
      "index": 31,
      "text": "walā tushmit bī `aduwwī"
    },
    {
      "index": 32,
      "text": "walā tusalliṭ-hu `alayy"
    },
    {
      "index": 33,
      "text": "walā tumakkinhu min `unuqī"
    },
    {
      "index": 34,
      "text": "allāhumma in waḍa`tanī faman dhal ladhī yar-fa`unī"
    },
    {
      "index": 35,
      "text": "wa-in rafa`tanī faman dhal ladhī yaḍa`unī"
    },
    {
      "index": 36,
      "text": "wa-in ahlaktanī faman dhal ladhī ya`riḍu laka fī `abdik"
    },
    {
      "index": 37,
      "text": "aw yas-aluka `anmrih"
    },
    {
      "index": 38,
      "text": "waqad `alimtu annahu laysa fī ḥukmika ẓulm"
    },
    {
      "index": 39,
      "text": "walā fī naqamatika `ajalah"
    },
    {
      "index": 40,
      "text": "wa-innamā ya`jalu man yakhāful fawt"
    },
    {
      "index": 41,
      "text": "wa-innamā yaḥtāju ilaẓ ẓulmiḍ ḍa`īf"
    },
    {
      "index": 42,
      "text": "waqad ta`ālayta yā ilāhī `an dhālika `uluwwan kabīrā"
    },
    {
      "index": 43,
      "text": "allāhumma innī a`ūdhu bika fa-a`idhnī"
    },
    {
      "index": 44,
      "text": "wastajiru bika fa-ajir-nī"
    },
    {
      "index": 45,
      "text": "wastar-ziquka fa-ar-zuqnī"
    },
    {
      "index": 46,
      "text": "wa atawakkalu `alayka fakfinī"
    },
    {
      "index": 47,
      "text": "wastanṣiruka `alā `aduwwī fanṣur-nī"
    },
    {
      "index": 48,
      "text": "wasta`īnu bika fa-a`innī"
    },
    {
      "index": 49,
      "text": "wastaghfiruka yā ilāhī faghfir lī"
    },
    {
      "index": 50,
      "text": "āmīna-āmīna-āmīn"
    }
  ]
}