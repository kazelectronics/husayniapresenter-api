{
  "index": 239,
  "name": "Sura 239",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma innī a`tadhiru ilayk"
    },
    {
      "index": 3,
      "text": "min maẓlūmin ẓulima biḥaḍratī falam anṣur-h"
    },
    {
      "index": 4,
      "text": "wamin ma`rūfin usdiya ilayya falam ashkur-h"
    },
    {
      "index": 5,
      "text": "wamin musī-ini`tadhara ilayya falam a`dhir-h"
    },
    {
      "index": 6,
      "text": "wamin dhī fāqatin sa-alanī falam ūthir-h"
    },
    {
      "index": 7,
      "text": "wamin ḥaqqi dhī ḥaqqin lazimanī limu-minin falam uwaffir-h"
    },
    {
      "index": 8,
      "text": "wamin `aybi mu-minin ẓahara lī falam astur-h"
    },
    {
      "index": 9,
      "text": "wamin kulli ithmin `araḍa lī falam ahjur-h"
    },
    {
      "index": 10,
      "text": "a`tadhiru ilayka yā ilahī minhunn"
    },
    {
      "index": 11,
      "text": "wamin naẓā-irihinna`tidhāra nadāmah"
    },
    {
      "index": 12,
      "text": "yakūnu wā`iẓan limā bayna yadayya min ashbāhihinn"
    },
    {
      "index": 13,
      "text": "faṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 14,
      "text": "waj`al nadāmatī `alā mā waqa`tu fīhi minaz zallāt"
    },
    {
      "index": 15,
      "text": "wa`azmī `alā tar-ki mā ya`riḍu lī minas sayyi-āt"
    },
    {
      "index": 16,
      "text": "tawbatan tūjibu lī maḥabbatak"
    },
    {
      "index": 17,
      "text": "yā muḥibbat tawwābīn"
    }
  ]
}