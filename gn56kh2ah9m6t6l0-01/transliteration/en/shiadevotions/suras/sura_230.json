{
  "index": 230,
  "name": "Sura 230",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma innakabtalaytanā fī ar-zāqinā bisū-iẓ ẓann"
    },
    {
      "index": 3,
      "text": "wafī-ājālinā biṭūlil amal"
    },
    {
      "index": 4,
      "text": "ḥattal tamasnā ar-zāqaka min `indil mar-zūqīn"
    },
    {
      "index": 5,
      "text": "waṭami`nā bi-āmālinā fī a`māril mu`ammarīn"
    },
    {
      "index": 6,
      "text": "faṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 7,
      "text": "wahab lanā yaqīnan ṣādiqan takfīnā bihi min ma-unatiṭ ṭalab"
    },
    {
      "index": 8,
      "text": "wa-alhimnā thiqatan khāliṣatan tu`fīnā bihā min shiddatin naṣab"
    },
    {
      "index": 9,
      "text": "waj`al mā ṣarraḥta bihi min `idatika fī waḥyik"
    },
    {
      "index": 10,
      "text": "wa-atba`tahu min qisamika fī kitābik"
    },
    {
      "index": 11,
      "text": "qāṭi`an lihtimāminā birrizqil ladhī takaffalta bih"
    },
    {
      "index": 12,
      "text": "waḥasman lil-ishtighāli bimā ḍamintal kifāyata lah"
    },
    {
      "index": 13,
      "text": "faqulta waqawlukal ḥaqqul aṣdaq"
    },
    {
      "index": 14,
      "text": "wa-aqsamta waqasamukal abarrul awfā"
    },
    {
      "index": 15,
      "text": "wafis samā-i rizqukum wamā tū`adūn"
    },
    {
      "index": 16,
      "text": "thumma qulta fawarabbis samā-i wal-ar-ḍi innahu laḥaqqun mithla mā annakum tanṭiqūn"
    }
  ]
}