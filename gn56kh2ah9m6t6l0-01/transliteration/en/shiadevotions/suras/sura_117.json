{
  "index": 117,
  "name": "Sura 117",
  "ayas": [
    {
      "index": 1,
      "text": "as salāmu `alayka yā ḥujjatallāh",
      "bismillah": "as salāmu `alayka yā waliyyallāh"
    },
    {
      "index": 2,
      "text": "as salāmu `alayka yā nūrallāhi fī ẓulumātil ar-ḍ"
    },
    {
      "index": 3,
      "text": "as salāmu `alayka yā `amūdad dīn"
    },
    {
      "index": 4,
      "text": "as salāmu `alayka yā wāritha-ādama ṣafwatillāh"
    },
    {
      "index": 5,
      "text": "as salāmu `alayka yā wāritha nūḥin nabiyyillāh"
    },
    {
      "index": 6,
      "text": "as salāmu `alayka yā wāritha ibrāhīma khalīlillāh"
    },
    {
      "index": 7,
      "text": "as salāmu `alayka yā wāritha ismā`ila dhabiḥillāh"
    },
    {
      "index": 8,
      "text": "as salāmu `alayka yā wāritha mūsā kalīmillāh"
    },
    {
      "index": 9,
      "text": "as salāmu `alayka yā wāritha `īsā rūḥillāh"
    },
    {
      "index": 10,
      "text": "as salāmu `alayka yā wāritha muḥammadin rasūlillāh"
    },
    {
      "index": 11,
      "text": "as salāmu `alayka yā wāritha amīril mu-minīn"
    },
    {
      "index": 12,
      "text": "`aliyyin waliyyillāh"
    },
    {
      "index": 13,
      "text": "wawaṣiyyi rasūli rabbil `ālamīn"
    },
    {
      "index": 14,
      "text": "as salāmu `alayka yā wāritha fāṭimataz zahrā"
    },
    {
      "index": 15,
      "text": "as salāmu `alayka yā wārithal ḥasani walḥusayn"
    },
    {
      "index": 16,
      "text": "sayyiday shabābi ahlil jannah"
    },
    {
      "index": 17,
      "text": "as salāmu `alayka yā wāritha `alyyibnil ḥusayni zaynil `ābidīn"
    },
    {
      "index": 18,
      "text": "as salāmu `alayka yā wāritha muḥammadibni `aliyy"
    },
    {
      "index": 19,
      "text": "bāqiri `ilmil awwalīna wal-ākhirīn"
    },
    {
      "index": 20,
      "text": "as salāmu `alayka yā wāritha ja`faribni muḥammad"
    },
    {
      "index": 21,
      "text": "aṣ ṣādiqil bārr"
    },
    {
      "index": 22,
      "text": "as salāmu `alayka yā wāritha mūsabni ja`far"
    },
    {
      "index": 23,
      "text": "as salāmu `alayka ayyuhaṣ ṣiddīqush shahīd"
    },
    {
      "index": 24,
      "text": "as salāmu `alayka ayyuhal waṣiyyul bārrut taqiyy"
    },
    {
      "index": 25,
      "text": "ash-hadu annaka qad aqamtaṣ ṣalāh"
    },
    {
      "index": 26,
      "text": "wa ātaytaz zakāh"
    },
    {
      "index": 27,
      "text": "wa-amar-ta bil ma`rūf"
    },
    {
      "index": 28,
      "text": "wanahayta `anil munkar"
    },
    {
      "index": 29,
      "text": "wa`abadtallāha mukhliṣan ḥattā atākal yaqīn"
    },
    {
      "index": 30,
      "text": "as salāmu `alayka yā abal ḥasan"
    },
    {
      "index": 31,
      "text": "waraḥmatullāhi wabarakātuh"
    }
  ]
}