{
  "index": 84,
  "name": "Sura 84",
  "ayas": [
    {
      "index": 1,
      "text": "idhas samā-un shaqqat",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "wa-adhinat lirabbihā waḥuqqat"
    },
    {
      "index": 3,
      "text": "wa idhal-arḍu muddat"
    },
    {
      "index": 4,
      "text": "wa-alqat mā fīhā watakhallat"
    },
    {
      "index": 5,
      "text": "wa-adhinat lirabbihā waḥuqqat"
    },
    {
      "index": 6,
      "text": "yā-ayyuhal-insānu innaka kādiḥun ilā rabbika kad-ḥan famulāqīh"
    },
    {
      "index": 7,
      "text": "fa-ammā man ūtiya kitābahu biyamīnih"
    },
    {
      "index": 8,
      "text": "fasawfa yuḥāsabu ḥisāban yasīrā"
    },
    {
      "index": 9,
      "text": "wayanqalibu ilā ahlihi masrūrā"
    },
    {
      "index": 10,
      "text": "wa-ammā man ūtiya kitābahu warā-a ẓahrih"
    },
    {
      "index": 11,
      "text": "fasawfa yad`ū thubūrā"
    },
    {
      "index": 12,
      "text": "wayaṣlā sa`īrā"
    },
    {
      "index": 13,
      "text": "innahu kāna fī ahlihi masrūrā"
    },
    {
      "index": 14,
      "text": "innahu ẓanna an lan yaḥūr"
    },
    {
      "index": 15,
      "text": "balā inna rabbahu kāna bihi baṣīrā"
    },
    {
      "index": 16,
      "text": "falā uqsimu bish shafaq"
    },
    {
      "index": 17,
      "text": "wal layli wa mā wasaq"
    },
    {
      "index": 18,
      "text": "wal qamari idhat-tasaq"
    },
    {
      "index": 19,
      "text": "latarkabunna ṭabaqan `an ṭabaq"
    },
    {
      "index": 20,
      "text": "famā lahum lā yu-minūn"
    },
    {
      "index": 21,
      "text": "wa idhā quri-a `alayhimul qur-ānu lā yasjudūn ۩"
    },
    {
      "index": 22,
      "text": "balil ladhīna kafarū yukadhhibūn"
    },
    {
      "index": 23,
      "text": "wallāhu a`lamu bimā yū`ūn"
    },
    {
      "index": 24,
      "text": "fabashhirhum bi`adhābin alīm"
    },
    {
      "index": 25,
      "text": "illal ladhīna āmanū wa`amiluṣ ṣāliḥāti lahum ajrun ghayru mamnūn"
    }
  ]
}