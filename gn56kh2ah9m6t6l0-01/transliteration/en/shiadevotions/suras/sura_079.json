{
  "index": 79,
  "name": "Sura 79",
  "ayas": [
    {
      "index": 1,
      "text": "wan nāzi`āti gharqā",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "wan nāshiṭāti nashṭā"
    },
    {
      "index": 3,
      "text": "was sābiḥāti sabḥā"
    },
    {
      "index": 4,
      "text": "fas sābiqāti sabqā"
    },
    {
      "index": 5,
      "text": "fal mudabbirāti amrā"
    },
    {
      "index": 6,
      "text": "yawma tarjufur rājifah"
    },
    {
      "index": 7,
      "text": "tatba`uhar rādifah"
    },
    {
      "index": 8,
      "text": "qulūbun yawma-idhin wājifah"
    },
    {
      "index": 9,
      "text": "abṣāruhā khāshi`ah"
    },
    {
      "index": 10,
      "text": "yaqūlūna a-innā lamardūdūna fil ḥāfirah"
    },
    {
      "index": 11,
      "text": "a-idhā kunnā `iẓāman nakhirah"
    },
    {
      "index": 12,
      "text": "qālū tilka idhan karratun khāsirah"
    },
    {
      "index": 13,
      "text": "fa-innamā hiya zajratun wāḥidah"
    },
    {
      "index": 14,
      "text": "fa-idhā hum bis sāhirah"
    },
    {
      "index": 15,
      "text": "hal atāka ḥadīthu mūsā"
    },
    {
      "index": 16,
      "text": "idh nādāhu rabbuhu bil wādil muqaddasi ṭuwā"
    },
    {
      "index": 17,
      "text": "idh-hab ilā fir`awna innahu ṭaghā"
    },
    {
      "index": 18,
      "text": "faqul hal laka ilā an tazakkā"
    },
    {
      "index": 19,
      "text": "wa-ahdiyaka ilā rabbika fatakhshā"
    },
    {
      "index": 20,
      "text": "fa-arāhul-āyatal kubrā"
    },
    {
      "index": 21,
      "text": "fakadhhaba wa`aṣā"
    },
    {
      "index": 22,
      "text": "thumma adbara yas`ā"
    },
    {
      "index": 23,
      "text": "faḥashara fanādā"
    },
    {
      "index": 24,
      "text": "faqāla ana rabbukumul-a`lā"
    },
    {
      "index": 25,
      "text": "fa-akhadhahullāhu nakālal-ākhirati wal-ūlā"
    },
    {
      "index": 26,
      "text": "inna fī dhālika la`ibratan liman yakhshā"
    },
    {
      "index": 27,
      "text": "a-antum ashaddu khalqan amis samā-u ۚ banāhā"
    },
    {
      "index": 28,
      "text": "rafa`a samkahā fasawwāhā"
    },
    {
      "index": 29,
      "text": "wa-aghṭasha laylahā wa-akhraja ḍuḥāhā"
    },
    {
      "index": 30,
      "text": "wal-arḍa ba`da dhālika daḥāhā"
    },
    {
      "index": 31,
      "text": "akhraja minhā mā-ahā wa mar`āhā"
    },
    {
      "index": 32,
      "text": "wal jibāla arsāhā"
    },
    {
      "index": 33,
      "text": "matā`al lakum wali-an`āmikum"
    },
    {
      "index": 34,
      "text": "fa-idhā jā-atiṭ ṭāmmatul kubrā"
    },
    {
      "index": 35,
      "text": "yawma yatadhakkarul-insānu mā sa`ā"
    },
    {
      "index": 36,
      "text": "waburrizatil jaḥīmu liman yarā"
    },
    {
      "index": 37,
      "text": "fa-ammā man ṭaghā"
    },
    {
      "index": 38,
      "text": "wa-ātharal ḥayātad dunyā"
    },
    {
      "index": 39,
      "text": "fa-innal jaḥīma hiyal ma-wā"
    },
    {
      "index": 40,
      "text": "wa-ammā man khāfa maqāma rabbihi wanahan nafsa `anil hawā"
    },
    {
      "index": 41,
      "text": "fa-innal jannata hiyal ma-wā"
    },
    {
      "index": 42,
      "text": "yas-alūnaka `anis sā`ati ayyāna mursāhā"
    },
    {
      "index": 43,
      "text": "fīma anta min dhikrāhā"
    },
    {
      "index": 44,
      "text": "ilā rabbika muntahāhā"
    },
    {
      "index": 45,
      "text": "innamā anta mundhiru man yakhshāhā"
    },
    {
      "index": 46,
      "text": "ka-annahum yawma yarawnahā lam yalbathū illā `ashiyyatan aw ḍuḥāhā"
    }
  ]
}