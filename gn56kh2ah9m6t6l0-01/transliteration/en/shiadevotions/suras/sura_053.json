{
  "index": 53,
  "name": "Sura 53",
  "ayas": [
    {
      "index": 1,
      "text": "wan najmi idhā hawā",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "mā ḍalla ṣāḥibukum wa mā ghawā"
    },
    {
      "index": 3,
      "text": "wa mā yanṭiqu `anil hawā"
    },
    {
      "index": 4,
      "text": "in huwa illā waḥyun yūḥā"
    },
    {
      "index": 5,
      "text": "`allamahu shadīdul quwā"
    },
    {
      "index": 6,
      "text": "dhū mirratin fastawā"
    },
    {
      "index": 7,
      "text": "wahuwa bil-ufuqil-a`lā"
    },
    {
      "index": 8,
      "text": "thumma danā fatadallā"
    },
    {
      "index": 9,
      "text": "fakāna qāba qawsayni aw adnā"
    },
    {
      "index": 10,
      "text": "fa-awḥā ilā `abdihi mā awḥā"
    },
    {
      "index": 11,
      "text": "mā kadhabal fu-ādu mā ra-ā"
    },
    {
      "index": 12,
      "text": "afatumārūnahu `alā mā yarā"
    },
    {
      "index": 13,
      "text": "walaqad ra-āhu nazlatan ukhrā"
    },
    {
      "index": 14,
      "text": "`inda sidratil muntahā"
    },
    {
      "index": 15,
      "text": "`indahā jannatul ma-wā"
    },
    {
      "index": 16,
      "text": "idh yaghshas sidrata mā yaghshā"
    },
    {
      "index": 17,
      "text": "mā zāghal baṣaru wa mā ṭaghā"
    },
    {
      "index": 18,
      "text": "laqad ra-ā min āyāti rabbihil kubrā"
    },
    {
      "index": 19,
      "text": "afara aytumullāta wal `uzzā"
    },
    {
      "index": 20,
      "text": "wa manātath thālithatal-ukhrā"
    },
    {
      "index": 21,
      "text": "alakumudh dhakaru walahul-unthā"
    },
    {
      "index": 22,
      "text": "tilka idhan qismatun ḍīzā"
    },
    {
      "index": 23,
      "text": "in hiya illā asmā-un sammaytumūhā antum wa-ābā-ukum mā anzalallāhu bihā min sulṭān ۚ in yattabi`ūna illaẓ ẓanna wa mā tahwal-anfus ۖ walaqad jā-ahum min rabbihimul hudā"
    },
    {
      "index": 24,
      "text": "am lilinsāni mā tamannā"
    },
    {
      "index": 25,
      "text": "falillāhil-ākhiratu wal-ūlā"
    },
    {
      "index": 26,
      "text": "wakam min malakin fis samāwāti lā tughnī shafā`atuhum shay-an illā min ba`di an ya-dhanallāhu liman yashā-u wayarḍā"
    },
    {
      "index": 27,
      "text": "innal ladhīna lā yu-minūna bil-ākhirati layusammūnal malā-ikata tasmiyatal-unthā"
    },
    {
      "index": 28,
      "text": "wa mā lahum bihi min `il-m ۖ in yattabi`ūna illaẓ ẓann ۖ wa innaẓ ẓanna lā yughnī minal ḥaqqi shay-ā"
    },
    {
      "index": 29,
      "text": "fa-a`riḍ `an man tawallā `an dhikrinā walam yurid illal-ḥayātad dunyā"
    },
    {
      "index": 30,
      "text": "dhālika mablaghuhum minal `il-m ۚ inna rabbaka huwa a`lamu biman ḍalla `an sabīlihi wahuwa a`lamu bimanih-tadā"
    },
    {
      "index": 31,
      "text": "walillāhi mā fis samāwāti wa mā fil-arḍi liyajziyal ladhīna asā-ū bimā `amilū wayajziyal ladhīna aḥsanū bil ḥusnā"
    },
    {
      "index": 32,
      "text": "alladhīna yajtanibūna kabā-iral-ithmi wal fawāḥisha illallamam ۚ inna rabbaka wāsi`ul maghfirah ۚ huwa a`lamu bikum idh ansha-akum minal-arḍi wa idh antum ajinnatun fī buṭūni ummahātikum ۖ falā tuzakkū anfusakum ۖ huwa a`lamu bimanit-taqā"
    },
    {
      "index": 33,
      "text": "afara aytal ladhī tawallā"
    },
    {
      "index": 34,
      "text": "wa-a`ṭā qalīlan wa-akdā"
    },
    {
      "index": 35,
      "text": "a`indahu `il-mul ghaybi fahuwa yarā"
    },
    {
      "index": 36,
      "text": "am lam yunabba-bimā fī ṣuḥufi mūsā"
    },
    {
      "index": 37,
      "text": "wa ibrāhīmal ladhī waffā"
    },
    {
      "index": 38,
      "text": "allā taziru wāziratun wizra ukhrā"
    },
    {
      "index": 39,
      "text": "wa-an laysa lilinsāni illā mā sa`ā"
    },
    {
      "index": 40,
      "text": "wa-anna sa`yahu sawfa yurā"
    },
    {
      "index": 41,
      "text": "thumma yujzāhul jazā-al-awfā"
    },
    {
      "index": 42,
      "text": "wa-anna ilā rabbikal muntahā"
    },
    {
      "index": 43,
      "text": "wa-annahu huwa aḍ-ḥaka wa-abkā"
    },
    {
      "index": 44,
      "text": "wa-annahu huwa amāta wa-aḥyā"
    },
    {
      "index": 45,
      "text": "wa-annahu khalaqaz zawjaynidh dhakara wal-unthā"
    },
    {
      "index": 46,
      "text": "min nuṭfatin idhā tumnā"
    },
    {
      "index": 47,
      "text": "wa-anna `alayhin nash-atal-ukhrā"
    },
    {
      "index": 48,
      "text": "wa-annahu huwa aghnā wa-aqnā"
    },
    {
      "index": 49,
      "text": "wa-annahu huwa rabbush shi`rā"
    },
    {
      "index": 50,
      "text": "wa-annahu ahlaka `ādanl-ūlā"
    },
    {
      "index": 51,
      "text": "wathamūda famā abqā"
    },
    {
      "index": 52,
      "text": "waqawma nūḥin min qabl ۖ innahum kānū hum aẓlama wa-aṭghā"
    },
    {
      "index": 53,
      "text": "wal mu-tafikata ahwā"
    },
    {
      "index": 54,
      "text": "faghashhāhā mā ghashhā"
    },
    {
      "index": 55,
      "text": "fabi-ayyi ālā-i rabbika tatamārā"
    },
    {
      "index": 56,
      "text": "hādhā nadhīrun minan nudhuril-ūlā"
    },
    {
      "index": 57,
      "text": "azifatil-āzifah"
    },
    {
      "index": 58,
      "text": "laysa lahā min dūnillāhi kāshifah"
    },
    {
      "index": 59,
      "text": "afamin hādhal ḥadīthi ta`jabūn"
    },
    {
      "index": 60,
      "text": "wataḍ-ḥakūna walā tabkūn"
    },
    {
      "index": 61,
      "text": "wa-antum sāmidūn"
    },
    {
      "index": 62,
      "text": "fasjudū lillāhi wa`budū ۩"
    }
  ]
}