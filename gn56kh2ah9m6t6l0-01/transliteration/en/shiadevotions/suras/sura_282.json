{
  "index": 282,
  "name": "Sura 282",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "ra ḍītu billāhi rabbā"
    },
    {
      "index": 3,
      "text": "wabil islāmi dīnā"
    },
    {
      "index": 4,
      "text": "wabimuḥammadin ṣallallāhu `alayhi wa ālihi nabiyyā"
    },
    {
      "index": 5,
      "text": "wabi`aliyyin imāmā"
    },
    {
      "index": 6,
      "text": "wabil ḥasani walḥusayn"
    },
    {
      "index": 7,
      "text": "wa`aliyyin wamuḥammad"
    },
    {
      "index": 8,
      "text": "waja`fari wamūsā"
    },
    {
      "index": 9,
      "text": "wa`aliyyin wamuḥammad"
    },
    {
      "index": 10,
      "text": "wa`aliyyin walḥasan"
    },
    {
      "index": 11,
      "text": "walkhalafiṣ ṣāliḥi `alayhimus salām"
    },
    {
      "index": 12,
      "text": "a-immatan wasādatan waqādah"
    },
    {
      "index": 13,
      "text": "bihim atawallā wamin a`dā-ihim atabarra-u"
    },
    {
      "index": 14,
      "text": "allāhumma innī as-alukal `afwa wal`āfiyah"
    },
    {
      "index": 15,
      "text": "walmu`āfāta fid dunyā wal-ākhirah"
    }
  ]
}