{
  "index": 167,
  "name": "Sura 167",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhummaqsim lanā min khashyatik"
    },
    {
      "index": 3,
      "text": "mā yaḥūlu baynanā wabayna ma`ṣiyatik"
    },
    {
      "index": 4,
      "text": "wamin ṭā`atika mā tuballighunā bihi riḍwānak"
    },
    {
      "index": 5,
      "text": "waminal yaqīni mā yahūnu `alaynā bihi muṣībātud dunyā"
    },
    {
      "index": 6,
      "text": "allāhumma amti`nā bi-asmā`inā wa-abṣārinā waquwwatinā"
    },
    {
      "index": 7,
      "text": "mā aḥyaytanā waj`alhul wāritha minnā"
    },
    {
      "index": 8,
      "text": "waj`al thāranā `alā man ẓalamanā"
    },
    {
      "index": 9,
      "text": "wanṣur-nā `alā man `ādānā"
    },
    {
      "index": 10,
      "text": "walā taj`al muṣībatanā fī dīninā"
    },
    {
      "index": 11,
      "text": "walā taj`alid dunyā akbara hamminā walā mablagha `ilminā"
    },
    {
      "index": 12,
      "text": "walā tusalliṭ `alaynā man lāyar-ḥamunā"
    },
    {
      "index": 13,
      "text": "biraḥmatika yā ar-ḥamar rāḥimīn"
    }
  ]
}