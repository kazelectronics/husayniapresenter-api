{
  "index": 406,
  "name": "Sura 406",
  "ayas": [
    {
      "index": 1,
      "text": "ash-hadu an lā ilāha illallāh",
      "bismillah": "bismillāhi wabillāhi walḥamdu lillāhi wakhayrul asmā-i lillāh"
    },
    {
      "index": 2,
      "text": "waḥdahu lā sharīka lah"
    },
    {
      "index": 3,
      "text": "wa-ash-hadu anna muḥammadan `abduhu warasūluh"
    },
    {
      "index": 4,
      "text": "ar-salahu bil ḥaqqi bashīran wanadhīran bayna yadayyas sā`ah"
    },
    {
      "index": 5,
      "text": "wa-ash-hadu annaka ni`mar rabb"
    },
    {
      "index": 6,
      "text": "wa-anna muḥammadan ni`amar rasūl"
    },
    {
      "index": 7,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 8,
      "text": "wataqabbal shafā`atahu fī ummatihi war-fa` darajatah"
    }
  ]
}