{
  "index": 162,
  "name": "Sura 162",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma innī ilayka faqīr"
    },
    {
      "index": 3,
      "text": "wamin `adhābika khā-ifun mustajīr"
    },
    {
      "index": 4,
      "text": "allāhumma lātubaddil ismī"
    },
    {
      "index": 5,
      "text": "walā tughayyir jismī"
    },
    {
      "index": 6,
      "text": "walā tajhad balā-ī"
    },
    {
      "index": 7,
      "text": "walā tushmit bī a`dā-ī"
    },
    {
      "index": 8,
      "text": "a`ūdhu bi`afwika min `iqābik"
    },
    {
      "index": 9,
      "text": "wa-a`ūdhu biraḥmatika min `adhābik"
    },
    {
      "index": 10,
      "text": "wa-a`ūdhu biriḍāka min sakhaṭik"
    },
    {
      "index": 11,
      "text": "wa-a`ūdhu bika mink"
    },
    {
      "index": 12,
      "text": "jalla thana-uk"
    },
    {
      "index": 13,
      "text": "anta kamā athnayta `alā nafsik"
    },
    {
      "index": 14,
      "text": "wafawqa mā yaqūlul qā-ilūn"
    }
  ]
}