{
  "index": 228,
  "name": "Sura 228",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 3,
      "text": "waḥaṣṣin thughūral muslimīna bi`izzatik"
    },
    {
      "index": 4,
      "text": "wa-ayyid ḥumātahā biquwwatik"
    },
    {
      "index": 5,
      "text": "wa-asbigha `aṭāyāhum min jidatik"
    },
    {
      "index": 6,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 7,
      "text": "wakathhir `iddatahum, wash-ḥadh asliḥatahum"
    },
    {
      "index": 8,
      "text": "waḥrus ḥawzatahum, wamna` ḥawmatahum"
    },
    {
      "index": 9,
      "text": "wa-allif jam`ahum, wadabbir amrahum"
    },
    {
      "index": 10,
      "text": "wawātir bayna miyarihim, watawaḥḥad bikifāyati ma-anihim"
    },
    {
      "index": 11,
      "text": "wa`ḍud-hum binnaṣr, wa-a`nihum biṣṣabr"
    },
    {
      "index": 12,
      "text": "walṭuf lahum fil makr"
    },
    {
      "index": 13,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 14,
      "text": "wa`arrifhum mā yajhalūn"
    },
    {
      "index": 15,
      "text": "wa`allimhum mā lā ya`lamūn"
    },
    {
      "index": 16,
      "text": "wabaṣṣir-hum mā lā yubṣirūn"
    },
    {
      "index": 17,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 18,
      "text": "wa-ansihim `inda liqā-ihimul `aduww"
    },
    {
      "index": 19,
      "text": "dhikra dunyāhumul khaddā`atil gharūr"
    },
    {
      "index": 20,
      "text": "wamḥu `an qulūbihim khaṭarātil mālil fatūn"
    },
    {
      "index": 21,
      "text": "waj`alil jannata naṣba a`yunihim walawwiḥ minhal-ibṣārihim"
    },
    {
      "index": 22,
      "text": "mā a`dadta fīhā min masākinil khuldi wamanāzilil karāmah"
    },
    {
      "index": 23,
      "text": "walḥūril ḥisāni wal-anhāril muṭṭaridati bi-anwā`il ashribah"
    },
    {
      "index": 24,
      "text": "wal-ashjāril mutadalliyati biṣunūfith thamar"
    },
    {
      "index": 25,
      "text": "ḥattā lā yahumma aḥadun minhum bil adbār"
    },
    {
      "index": 26,
      "text": "walā yuḥadditha nafsahu `an qir-nihi bifirār"
    },
    {
      "index": 27,
      "text": "allāhummaflul bidhālika `aduwwahum"
    },
    {
      "index": 28,
      "text": "waqlim `anhum aẓfārahum, wafarriq baynahum wabayna asliḥatihim"
    },
    {
      "index": 29,
      "text": "wakhla` wathā-iqa af-idatihim, wabā`id baynahum wabayna azwidatihim"
    },
    {
      "index": 30,
      "text": "waḥayyir-hum fī subulihim, waḍallilhum `an wajhihim"
    },
    {
      "index": 31,
      "text": "waqṭa` `anhumul madada wanquṣ minhumul `adad"
    },
    {
      "index": 32,
      "text": "wamlā af-idatahumur ru`b, waqbiḍ aydiyahum `anil basṭ"
    },
    {
      "index": 33,
      "text": "wakhzim alsinatahum `anin nuṭq"
    },
    {
      "index": 34,
      "text": "washarrid bhim man khalfahum, wanakkil bihim man warā-ahum"
    },
    {
      "index": 35,
      "text": "waqṭa` bikhizyihim aṭma`a man ba`dahum"
    },
    {
      "index": 36,
      "text": "allāhumma `aqqim ar-ḥāma nisā-ihim"
    },
    {
      "index": 37,
      "text": "wayabbis aṣlāba rijālihim"
    },
    {
      "index": 38,
      "text": "waqṭa` nasla dawabbihim wa-an`āmihim"
    },
    {
      "index": 39,
      "text": "lā ta-dhan lisamā-ihim fī qaṭr, walal-ar-ḍihim fī nabāt"
    },
    {
      "index": 40,
      "text": "allāhumma waqawwi bidhālika miḥālla ahlil islām"
    },
    {
      "index": 41,
      "text": "waḥaṣṣin bihi diyārahum, wathammir bihi amwālahum"
    },
    {
      "index": 42,
      "text": "wafarrigh-hum `an muḥārabatihim li`ibādatika wa`an munābadhatihim lilkhalwati bik"
    },
    {
      "index": 43,
      "text": "ḥattā lā yu`bada fī biqā`il ar-ḍi ghayruk"
    },
    {
      "index": 44,
      "text": "walā tu`affara li-aḥadin minhum jabhatun dūnak"
    },
    {
      "index": 45,
      "text": "allāhummaghzu bikulli naḥiyat minal muslimīn"
    },
    {
      "index": 46,
      "text": "`alā man bi-izā-ihim minal mushrikīn"
    },
    {
      "index": 47,
      "text": "wa-amdid-hum bimalā-ikat min `indika mur-difīn"
    },
    {
      "index": 48,
      "text": "ḥattā yakshifūhum ilā munqaṭa`it turābi qatlan fī ar-ḍik"
    },
    {
      "index": 49,
      "text": "asran aw yuqirruwā bi-annaka antallāhul ladhī lā ilāha illā ant"
    },
    {
      "index": 50,
      "text": "waḥdaka lā sharīka lak"
    },
    {
      "index": 51,
      "text": "allāhumma wa`mum bidhālika a`dā-aka fī aqṭāril bilād"
    },
    {
      "index": 52,
      "text": "minal hindi war rūmi wat tur-ki walkhazari walḥabash"
    },
    {
      "index": 53,
      "text": "wan nūbati wāzzinji was saqālibati wad dayālimah"
    },
    {
      "index": 54,
      "text": "wasā-iri umamish shir-kil ladhī takhfā asma-uhum waṣifātuhum"
    },
    {
      "index": 55,
      "text": "waqad aḥṣaytahum bima`rifatik, wa-ashrafta `alayhim biqudratik"
    },
    {
      "index": 56,
      "text": "allāhummashghalil mushrikīna bil-mushrikīna `an tanāwuli aṭrāfil muslimīn"
    },
    {
      "index": 57,
      "text": "wakhudh-hum binnaqṣi `an tanaqquṣihim"
    },
    {
      "index": 58,
      "text": "wathabbiṭ-hum bil fur-qati `anil iḥtishādi `alayhim"
    },
    {
      "index": 59,
      "text": "allāhumma akhli qulūbahum minal amanah"
    },
    {
      "index": 60,
      "text": "wa-abdānahum minal quwwati wa-adh-hil qulūbahum `anil iḥtiyāl"
    },
    {
      "index": 61,
      "text": "wa-awhin ar-kānahum `an munāzalatir rijāl"
    },
    {
      "index": 62,
      "text": "wajabbinhum `an muqāra`atil abṭāl"
    },
    {
      "index": 63,
      "text": "wab`ath `alayhim jundan min malā-ikatik"
    },
    {
      "index": 64,
      "text": "biba-s min ba-sika kafi`lika yawma badr"
    },
    {
      "index": 65,
      "text": "taqṭa`u bihi dābirahum wataḥṣudu bihi shawkatahum"
    },
    {
      "index": 66,
      "text": "watufarriqu bhi `adadahum"
    },
    {
      "index": 67,
      "text": "allāhumma wamzuj miyāhahum bil wabā-i wa-ṭ`imatahum bil adwā"
    },
    {
      "index": 68,
      "text": "war-mi bilādahum bil khusūfi wa-aliḥḥa `alayhā bil qudhūfi wafra`hā bil muḥūl"
    },
    {
      "index": 69,
      "text": "waj`al miyarahum fī aḥaṣṣi ar-ḍika wa-ab`adihā `anhum"
    },
    {
      "index": 70,
      "text": "wamna` ḥuṣūnahā minhum, aṣibhum bil jū`il muqīmi was suqmil ālīm"
    },
    {
      "index": 71,
      "text": "allāhumma wa-ayyumā ghāzin ghazāhum min ahli millatik"
    },
    {
      "index": 72,
      "text": "aw mujāhid jāhadahum min atbā`i sunnatika liyakūna dīnukal a`lā"
    },
    {
      "index": 73,
      "text": "waḥizbukal aqwā waḥaẓẓukal awfā falaqqihil yusr"
    },
    {
      "index": 74,
      "text": "wahayyi-lahul amr, watawallahu binnujḥ"
    },
    {
      "index": 75,
      "text": "watakhayyar lahul aṣ-ḥāb, wastaqwi lahuẓ ẓahr"
    },
    {
      "index": 76,
      "text": "wa-asbigh `alayhi fin nafaqati wamatti`hu binnashāṭ"
    },
    {
      "index": 77,
      "text": "wa-aṭfi `anhu ḥarāratash shawq, wa-ajir-hu min ghammil waḥshah"
    },
    {
      "index": 78,
      "text": "wa-ansihi dhikral ahli walwaladi wa-athur lahu ḥusnan niyyati watawallah bil `āfiyah"
    },
    {
      "index": 79,
      "text": "wa-aṣ-ḥibhus salāmah, wa-a`fihi minal jubn"
    },
    {
      "index": 80,
      "text": "wa-alhimhul jur-ata war-zuqhush shiddata wa-ayyid-hu binnuṣrah"
    },
    {
      "index": 81,
      "text": "wa`allimhus siyara was sunan, wasaddid-hu fil ḥukm"
    },
    {
      "index": 82,
      "text": "wa`zil `anhur riyā-a, wakhalliṣ-hu minas sum`ah"
    },
    {
      "index": 83,
      "text": "waj`al fikrahu wadhikrahu waẓa`nahu wa-iqāmatahu fīka walak"
    },
    {
      "index": 84,
      "text": "fa-idhā ṣāffa `aduwwaka wa`aduwwahu faqallilhum fī `aynih"
    },
    {
      "index": 85,
      "text": "waṣaghhir sha-nahum fī qalbih"
    },
    {
      "index": 86,
      "text": "wa-adil lahu minhum walā tudilhum minh"
    },
    {
      "index": 87,
      "text": "fa-in khatamta lahu bissa`ādati waqaḍayta lahu bishhahādah"
    },
    {
      "index": 88,
      "text": "faba`da an yajtāḥa `aduwwaka bil qatl"
    },
    {
      "index": 89,
      "text": "waba`da an yajhada bihimul asr"
    },
    {
      "index": 90,
      "text": "waba`da an ta-mana aṭrāful muslimīn"
    },
    {
      "index": 91,
      "text": "waba`da an yuwalliya `aduwwuka mudbirīn"
    },
    {
      "index": 92,
      "text": "allāhumma wa-ayyumā muslim"
    },
    {
      "index": 93,
      "text": "khalafa ghāziyan aw murābiṭan fī dārih"
    },
    {
      "index": 94,
      "text": "aw ta`ahhada khālifīhi fī ghaybatih"
    },
    {
      "index": 95,
      "text": "aw a`ānahu biṭā-ifat min mālih"
    },
    {
      "index": 96,
      "text": "aw amaddahu bi`itād, aw shaḥadhahu `alā jihād"
    },
    {
      "index": 97,
      "text": "aw atba`ahu fī wajhihi da`wah"
    },
    {
      "index": 98,
      "text": "aw ra`ā lahu min warā-ihi ḥur-mah"
    },
    {
      "index": 99,
      "text": "fa-ajir lahu mithla ajrih"
    },
    {
      "index": 100,
      "text": "waznan biwazn wamithlan bimithl wa`awwiḍ-hu min fi`lih"
    },
    {
      "index": 101,
      "text": "`iwaḍan ḥāḍiran yata`ajjalu bihi naf`a mā qaddam"
    },
    {
      "index": 102,
      "text": "wasurūra mā atā bih, ilā an yantahiya bihil waqt"
    },
    {
      "index": 103,
      "text": "lā mā-ajrayta lahu min faḍlik"
    },
    {
      "index": 104,
      "text": "wa-a`dadta lahu min karāmatik"
    },
    {
      "index": 105,
      "text": "allāhumma wa-ayyumā muslimin ahammahu amrul islām"
    },
    {
      "index": 106,
      "text": "wa-aḥzanahu taḥazzubu ahlish shir-ki `alayhim"
    },
    {
      "index": 107,
      "text": "fanawā ghazwan aw hamma bijhad"
    },
    {
      "index": 108,
      "text": "faqa`ada bihi ḍa`fun aw abṭa-at bihi fāqah"
    },
    {
      "index": 109,
      "text": "aw akhharahu `anhu ḥādith"
    },
    {
      "index": 110,
      "text": "aw `araḍa lahu dūna irādatihi māni`"
    },
    {
      "index": 111,
      "text": "faktubismahu fil `ābidīn"
    },
    {
      "index": 112,
      "text": "wa-awjib lahu thawābal mujāhidīn"
    },
    {
      "index": 113,
      "text": "waj`alhu fī niẓāmish shuhadā-i waṣ ṣāliḥīn"
    },
    {
      "index": 114,
      "text": "allāhumma ṣalli `alā muḥammad `abdika warasūlik"
    },
    {
      "index": 115,
      "text": "wa āli muḥammad ṣalātan `āliyatan `alaṣ ṣalawāt"
    },
    {
      "index": 116,
      "text": "mushrifatan fawqat taḥiyyāt"
    },
    {
      "index": 117,
      "text": "ṣalātan lā yantahī amaduhā"
    },
    {
      "index": 118,
      "text": "walā yanqaṭi`u `adaduhā"
    },
    {
      "index": 119,
      "text": "ka-atammi mā maḍā min ṣalawātik"
    },
    {
      "index": 120,
      "text": "`alā aḥad min awliyā-ik"
    },
    {
      "index": 121,
      "text": "innakal mannānul ḥamīd"
    },
    {
      "index": 122,
      "text": "al mubdi-ul mu`īd"
    },
    {
      "index": 123,
      "text": "al fa``ālu limā turīd"
    }
  ]
}