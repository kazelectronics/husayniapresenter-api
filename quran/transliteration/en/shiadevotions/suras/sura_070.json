{
  "index": 70,
  "name": "Sura 70",
  "ayas": [
    {
      "index": 1,
      "text": "sa-ala sā-ilun bi`adhābin wāqi`",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "lilkāfirīna laysa lahu dāfi`"
    },
    {
      "index": 3,
      "text": "minallāhi dhil ma`ārij"
    },
    {
      "index": 4,
      "text": "ta`rujul malā-ikatu war rūḥu ilayhi fī yawmin kāna miqdāruhu khamsīna alfa sanah"
    },
    {
      "index": 5,
      "text": "faṣbir ṣabran jamīlā"
    },
    {
      "index": 6,
      "text": "innahum yarawnahu ba`īdā"
    },
    {
      "index": 7,
      "text": "wanarāhu qarībā"
    },
    {
      "index": 8,
      "text": "yawma takūnus samā-u kal muhl"
    },
    {
      "index": 9,
      "text": "watakūnul jibālu kal `ihn"
    },
    {
      "index": 10,
      "text": "walā yas-alu ḥamīmun ḥamīmā"
    },
    {
      "index": 11,
      "text": "yubaṣṣarūnahum ۚ yawaddul mujrimu law yaftadī min `adhābi yawmi-idhin bibanīh"
    },
    {
      "index": 12,
      "text": "waṣāḥibatihi wa-akhīh"
    },
    {
      "index": 13,
      "text": "wafaṣīlatihil latī tu-wyh"
    },
    {
      "index": 14,
      "text": "wa man fil-arḍi jamī`an thumma yunjīh"
    },
    {
      "index": 15,
      "text": "kallā ۖ innahā laẓā"
    },
    {
      "index": 16,
      "text": "nazzā`atan lishhawā"
    },
    {
      "index": 17,
      "text": "tad`ū man adbara watawallā"
    },
    {
      "index": 18,
      "text": "wajama`a fa-aw`ā"
    },
    {
      "index": 19,
      "text": "innal-insāna khuliqa halū`ā"
    },
    {
      "index": 20,
      "text": "idhā massahush sharru jazū`ā"
    },
    {
      "index": 21,
      "text": "wa idhā massahul khayru manū`ā"
    },
    {
      "index": 22,
      "text": "illal-muṣallīn"
    },
    {
      "index": 23,
      "text": "alladhīna hum `alā ṣalātihim dā-imūn"
    },
    {
      "index": 24,
      "text": "wal ladhīna fī amwālihim ḥaqqun ma`lūm"
    },
    {
      "index": 25,
      "text": "lissā-ili wal maḥrūm"
    },
    {
      "index": 26,
      "text": "wal ladhīna yuṣaddiqūna biyawmid dīn"
    },
    {
      "index": 27,
      "text": "wal ladhīna hum min `adhābi rabbihim mushfiqūn"
    },
    {
      "index": 28,
      "text": "inna `adhāba rabbihim ghayru ma-mūn"
    },
    {
      "index": 29,
      "text": "wal ladhīna hum lifurūjihim ḥāfiẓūn"
    },
    {
      "index": 30,
      "text": "illā `alā azwājihim aw mā malakat aymānuhum fa-innahum ghayru malūmīn"
    },
    {
      "index": 31,
      "text": "famanib-taghā warā-a dhālika fa-ulā-ika humul `ādūn"
    },
    {
      "index": 32,
      "text": "wal ladhīna hum li-amānātihim wa`ahdihim rā`ūn"
    },
    {
      "index": 33,
      "text": "wal ladhīna hum bishahādātihim qā-imūn"
    },
    {
      "index": 34,
      "text": "wal ladhīna hum `alā ṣalātihim yuḥāfiẓūn"
    },
    {
      "index": 35,
      "text": "ulā-ika fī jannātin mukramūn"
    },
    {
      "index": 36,
      "text": "famālil ladhīna kafarū qibalaka muhṭi`īn"
    },
    {
      "index": 37,
      "text": "`anil yamīni wa`anish shimāli `izīn"
    },
    {
      "index": 38,
      "text": "ayaṭma`u kullum-ri-in minhum an yudkhala jannata na`īm"
    },
    {
      "index": 39,
      "text": "kallā ۖ innā khalaqnāhum mimmā ya`lamūn"
    },
    {
      "index": 40,
      "text": "falā uqsimu birabbil mashāriqi wal maghāribi innā laqādirūn"
    },
    {
      "index": 41,
      "text": "`alā an nubaddila khayran minhum wa mā naḥnu bimasbūqīn"
    },
    {
      "index": 42,
      "text": "fadharhum yakhūḍū wayal`abū ḥattā yulāqū yawmahumul ladhī yū`adūn"
    },
    {
      "index": 43,
      "text": "yawma yakhrujūna minal-ajdāthi sirā`an ka-annahum ilā nuṣubiy yūfiḍūn"
    },
    {
      "index": 44,
      "text": "khāshi`atan abṣāruhum tarhaquhum dhillah ۚ dhālikal yawmul ladhī kānū yū`adūn"
    }
  ]
}