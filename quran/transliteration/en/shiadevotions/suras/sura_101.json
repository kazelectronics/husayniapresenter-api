{
  "index": 101,
  "name": "Sura 101",
  "ayas": [
    {
      "index": 1,
      "text": "al-qāri`ah",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "mal qāri`ah"
    },
    {
      "index": 3,
      "text": "wa mā adrāka mal qāri`ah"
    },
    {
      "index": 4,
      "text": "yawma yakūnun nāsu kal farāshil mabthūth"
    },
    {
      "index": 5,
      "text": "watakūnul jibālu kal `ihnil manfūsh"
    },
    {
      "index": 6,
      "text": "fa-ammā man thaqulat mawāzīnuh"
    },
    {
      "index": 7,
      "text": "fahuwa fī `īshatin rāḍiyah"
    },
    {
      "index": 8,
      "text": "wa-ammā man khaffat mawāzīnuh"
    },
    {
      "index": 9,
      "text": "fa-ummuhu hāwiyah"
    },
    {
      "index": 10,
      "text": "wa mā adrāka mā hiyah"
    },
    {
      "index": 11,
      "text": "nārun ḥāmiyah"
    }
  ]
}