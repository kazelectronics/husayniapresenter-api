{
  "index": 159,
  "name": "Sura 159",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma innī as-aluka biḥaqqil mawlūdi fī hādhal yawm"
    },
    {
      "index": 3,
      "text": "al maw`ūdi bishahādatihi qablastihlālihi wawilādatih"
    },
    {
      "index": 4,
      "text": "bakat-hus samā-u waman fīhā"
    },
    {
      "index": 5,
      "text": "wal-ar-ḍu waman `alayhā"
    },
    {
      "index": 6,
      "text": "walammā yaṭa-lābatayhā"
    },
    {
      "index": 7,
      "text": "qatīlil `abrah"
    },
    {
      "index": 8,
      "text": "wasayyidil usrah"
    },
    {
      "index": 9,
      "text": "al mamdūdi binnuṣrati yawmal karrah"
    },
    {
      "index": 10,
      "text": "al mu`awwaḍi min qatlihi annal a-immata min naslih"
    },
    {
      "index": 11,
      "text": "wash shifā-a fī tur-batih"
    },
    {
      "index": 12,
      "text": "walfawza ma`ahu fī awbatih"
    },
    {
      "index": 13,
      "text": "wal-awṣiyā-a min `itratih"
    },
    {
      "index": 14,
      "text": "ba`da qā-imihim waghaybatih"
    },
    {
      "index": 15,
      "text": "ḥattā yudrikul awtār"
    },
    {
      "index": 16,
      "text": "wayath-aruth thār"
    },
    {
      "index": 17,
      "text": "wayur-ḍul jabbār"
    },
    {
      "index": 18,
      "text": "wayakūnū khayra anṣār"
    },
    {
      "index": 19,
      "text": "ṣallallāhu `alayhim ma`akhtilāfil layli wan nahār"
    },
    {
      "index": 20,
      "text": "allāhumma fabiḥaqqihim ilayka atawassal"
    },
    {
      "index": 21,
      "text": "wa-as-alu su-āla muqtarifin mu`tarif"
    },
    {
      "index": 22,
      "text": "musī-in ilā nafsih"
    },
    {
      "index": 23,
      "text": "mimmā farraṭa fī yawmihi wa-amsih"
    },
    {
      "index": 24,
      "text": "yas-alukal `iṣmata ilā maḥalli ramsih"
    },
    {
      "index": 25,
      "text": "allāhumma faṣalli `alā muḥammadin wa`itratih"
    },
    {
      "index": 26,
      "text": "waḥshur-nā fī zumratih"
    },
    {
      "index": 27,
      "text": "wabawwi-nā ma`ahu dāral karāmah"
    },
    {
      "index": 28,
      "text": "wamaḥallal iqāmah"
    },
    {
      "index": 29,
      "text": "allāhumma wakamā akramtanā bima`rifatihi fa-akrimnā bizulfatih"
    },
    {
      "index": 30,
      "text": "war-zuqnā murāfaqatahu wasābiqatah"
    },
    {
      "index": 31,
      "text": "waj`alnā mimman yusallimu li-amrih"
    },
    {
      "index": 32,
      "text": "wayukthiruṣ ṣalāta `alayhi `inda dhikrih"
    },
    {
      "index": 33,
      "text": "wa`alā jamī`i awṣiyā-ihi wa-ahli aṣfiyā-ih"
    },
    {
      "index": 34,
      "text": "al mamdūdīna minka bil `adadil athnā `ashar"
    },
    {
      "index": 35,
      "text": "an nujūmiz zuhar"
    },
    {
      "index": 36,
      "text": "walḥujaji `alā jamī`il bashar"
    },
    {
      "index": 37,
      "text": "allāhumma wahab lanā fī hādhal yawmi khayra mawhibah"
    },
    {
      "index": 38,
      "text": "wa-anjiḥ lanā fīhi kulla ṭalibah"
    },
    {
      "index": 39,
      "text": "kamā wahabtal ḥusayna limuḥammadin jaddih"
    },
    {
      "index": 40,
      "text": "wa`ādha fuṭrusu bimahdih"
    },
    {
      "index": 41,
      "text": "fanaḥnu `ā-idhūna biqabrihi min ba`dih"
    },
    {
      "index": 42,
      "text": "nash-hadu tur-batahu wanantaẓiru awbatah"
    },
    {
      "index": 43,
      "text": "āmīna rabbal `ālamīn"
    }
  ]
}