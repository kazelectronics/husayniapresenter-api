{
  "index": 303,
  "name": "Sura 303",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "bismillāhi kalimatil mu`taṣimīn"
    },
    {
      "index": 3,
      "text": "wamaqālatil mutaḥarrizīn"
    },
    {
      "index": 4,
      "text": "wa-a`ūdhu billāhi ta`ālā min jawril jā-irīn"
    },
    {
      "index": 5,
      "text": "wakaydil ḥāsidīn"
    },
    {
      "index": 6,
      "text": "wabaghyiẓ ẓālimīn"
    },
    {
      "index": 7,
      "text": "wa-aḥmaduhu fawqa ḥamdil ḥāmidīn"
    },
    {
      "index": 8,
      "text": "allāhumma antal wāḥidu bilā sharīk"
    },
    {
      "index": 9,
      "text": "walmaliku bilā tamlīk"
    },
    {
      "index": 10,
      "text": "lātuḍāddu fī ḥukmik"
    },
    {
      "index": 11,
      "text": "walā tunāza`u fī mulkik"
    },
    {
      "index": 12,
      "text": "as-aluka an tuṣalliya `alā muḥammad"
    },
    {
      "index": 13,
      "text": "`abdika warasūlik"
    },
    {
      "index": 14,
      "text": "wa-an tūzi`anī min shukri ni`māk"
    },
    {
      "index": 15,
      "text": "mā tablughu bī ghāyata riḍāk"
    },
    {
      "index": 16,
      "text": "wa-an tu`īnanī `alā ṭā`atik"
    },
    {
      "index": 17,
      "text": "waluzūmi `ibādatik"
    },
    {
      "index": 18,
      "text": "wastiḥqāqi mathūbatik"
    },
    {
      "index": 19,
      "text": "biluṭfi `ināyatik"
    },
    {
      "index": 20,
      "text": "watar-ḥamanī biṣaddī `an ma`āṣīka mā aḥyaytanī"
    },
    {
      "index": 21,
      "text": "watuwaffiqanī limā yanfa`unī mā abqaytanī"
    },
    {
      "index": 22,
      "text": "wa-an tashraḥa bikitābika ṣadrī"
    },
    {
      "index": 23,
      "text": "wataḥuṭṭa bitilāwatihi wizrī"
    },
    {
      "index": 24,
      "text": "watamnaḥanis salāmata fī dīnī wanafsī"
    },
    {
      "index": 25,
      "text": "walā tūḥisha bī ahla unsī"
    },
    {
      "index": 26,
      "text": "watutimma iḥsānaka fīmā baqiya min `umrī"
    },
    {
      "index": 27,
      "text": "kamā aḥsanta fīmā maḍā minh"
    },
    {
      "index": 28,
      "text": "yā ar-ḥamar rāḥimīn"
    }
  ]
}