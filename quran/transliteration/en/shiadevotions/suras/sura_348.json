{
  "index": 348,
  "name": "Sura 348",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "hādhā maqāmu man ḥasanātuhu ni`matun mink"
    },
    {
      "index": 3,
      "text": "wa shukruhu ḍa`īf, wa dhanbuhu `aẓīm"
    },
    {
      "index": 4,
      "text": "wa laysa lidhālika illā rifquka wa raḥmatuk"
    },
    {
      "index": 5,
      "text": "fa-innaka qulta fī kitābikal munzal"
    },
    {
      "index": 6,
      "text": "`alā nabiyyikal mur-sal"
    },
    {
      "index": 7,
      "text": "ṣallallāhu `alayhi wa-ālih"
    },
    {
      "index": 8,
      "text": "kānū qalīlan minal layli mā yahja`ūn"
    },
    {
      "index": 9,
      "text": "wa bil as-ḥāri hum yastaghfirūn"
    },
    {
      "index": 10,
      "text": "ṭāla hujū`ī"
    },
    {
      "index": 11,
      "text": "wa qalla qiyāmī wa hādhas saḥr"
    },
    {
      "index": 12,
      "text": "wa ana astaghfiruka lidhunūbī"
    },
    {
      "index": 13,
      "text": "istighfāra man lā yajidu linafsih"
    },
    {
      "index": 14,
      "text": "ḍarran wa lā naf`ā"
    },
    {
      "index": 15,
      "text": "wa lā mawtan wa lā ḥayāh"
    },
    {
      "index": 16,
      "text": "wa lā nushūrā"
    }
  ]
}