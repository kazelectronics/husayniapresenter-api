{
  "index": 213,
  "name": "Sura 213",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "yā man dhikruhu sharafun lidhhākirīn"
    },
    {
      "index": 3,
      "text": "wayā man shukruhu fawzun lishhākirīn"
    },
    {
      "index": 4,
      "text": "wayā man ṭā`atuhu najātun lilmuṭī`īn"
    },
    {
      "index": 5,
      "text": "ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 6,
      "text": "washghal qulūbanā bidhikrika `an kulli dhikr"
    },
    {
      "index": 7,
      "text": "wa-alsinatanā bishukrika `an kulli shukr"
    },
    {
      "index": 8,
      "text": "wajawāriḥanā biṭā`atika `an kulli ṭā`ah"
    },
    {
      "index": 9,
      "text": "fa-in qaddar-ta lanā farāghan min shughlin faj`alhu farāgha salāmah"
    },
    {
      "index": 10,
      "text": "lā tudrikunā fīhi tabi`atun walā talḥaqunā fīhi sa-mah"
    },
    {
      "index": 11,
      "text": "ḥattā yanṣarifa `annā kuttābus sayyi-āti biṣaḥīfatin khāliyatin min dhikri sayyi-ātinā"
    },
    {
      "index": 12,
      "text": "wayatawallā kuttābul ḥasanāti `annā"
    },
    {
      "index": 13,
      "text": "masrūrīna bimā katabū min ḥasanātinā"
    },
    {
      "index": 14,
      "text": "wa-idhanqaḍat ayyāmu ḥayātinā wataṣarramat mudadu a`mārinā"
    },
    {
      "index": 15,
      "text": "wastaḥḍaratnā da`watukal latī lā budda minhā wamin ijābatihā"
    },
    {
      "index": 16,
      "text": "faṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 17,
      "text": "waj`al khitāma mā tuḥṣī `alaynā katabatu a`mālinā"
    },
    {
      "index": 18,
      "text": "tawbatan maqbūlatan lā tūqifunā ba`dahā `alā dhanbinijtaraḥnāh"
    },
    {
      "index": 19,
      "text": "walā ma`ṣiyatiniqtarafnāhā"
    },
    {
      "index": 20,
      "text": "walā takshif `annā sitran satar-tahu `alā ru-ūsil ash-hād"
    },
    {
      "index": 21,
      "text": "yawma tablū akhbāra `ibādik"
    },
    {
      "index": 22,
      "text": "innaka raḥīmun biman da`āka wamustajībun liman nādāk"
    }
  ]
}