{
  "index": 217,
  "name": "Sura 217",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma lakal ḥamdu `alā mā lam azal ataṣarrafu fīhi min salāmati badanī"
    },
    {
      "index": 3,
      "text": "walakal ḥamdu `alā mā aḥdathta bī min `illatin fī jasadī"
    },
    {
      "index": 4,
      "text": "famā adrī, yā ilahī, ayyul ḥālayni aḥaqqu bishhukri lak"
    },
    {
      "index": 5,
      "text": "wa-ayyul waqtayni awlā bil ḥamdi lak"
    },
    {
      "index": 6,
      "text": "a waqtuṣ ṣiḥḥatil latī hanna-tanī fīhā ṭayyibāti rizqik"
    },
    {
      "index": 7,
      "text": "wanashhaṭtanī bihā libtighā-i mar-ḍātika wafaḍlik"
    },
    {
      "index": 8,
      "text": "waqawwaytanī ma`ahā `alā mā waffaqtanī lahu min ṭā`atik"
    },
    {
      "index": 9,
      "text": "am waqtul `illatil latī maḥḥaṣtanī bihā"
    },
    {
      "index": 10,
      "text": "wan ni`amil latī at-ḥaftanī bihā"
    },
    {
      "index": 11,
      "text": "takhfīfan limā thaqula bihi `alā ẓahrī minal khaṭī-āt"
    },
    {
      "index": 12,
      "text": "wataṭ-hīran limanghamastu fīhi minas sayyi-āt"
    },
    {
      "index": 13,
      "text": "watanbīhan litanāwulit tawbah, watadhkīran limaḥwil ḥawbati biqadīmin ni`mah"
    },
    {
      "index": 14,
      "text": "wafī khilāli dhālika mā kataba liyal kātibān"
    },
    {
      "index": 15,
      "text": "min zakiyyil a`māl, mā lā qalbun fakkara fīh"
    },
    {
      "index": 16,
      "text": "walā lisānun naṭaqa bihi walā jāriḥatun takallafat-h, bal ifḍālan minka `alayy"
    },
    {
      "index": 17,
      "text": "wa-iḥsānan min ṣanī`ika ilayy"
    },
    {
      "index": 18,
      "text": "allāhumma faṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 19,
      "text": "waḥabbib ilayya mā raḍīta lī"
    },
    {
      "index": 20,
      "text": "wayassir lī mā aḥlalta bī"
    },
    {
      "index": 21,
      "text": "waṭahhir-nī min danasi mā aslaft"
    },
    {
      "index": 22,
      "text": "wamḥu `annī sharra mā qaddamt"
    },
    {
      "index": 23,
      "text": "wa-awjidnī ḥalāwatal `āfiyah, wa-adhiqnī bar-das salāmah"
    },
    {
      "index": 24,
      "text": "waj`al makhrajī `an `illatī ilā `afwik"
    },
    {
      "index": 25,
      "text": "wamutaḥawwalī `an ṣar-`atī ilā tajāwuzik"
    },
    {
      "index": 26,
      "text": "wakhalāṣī min kar-bī ilā rawḥik"
    },
    {
      "index": 27,
      "text": "wasalāmatī min hādhihish shiddati ilā farajik"
    },
    {
      "index": 28,
      "text": "innakal mutafaḍḍilu bil iḥsān"
    },
    {
      "index": 29,
      "text": "al mutaṭawwilu bilimtinān,al wahhābul karīm"
    },
    {
      "index": 30,
      "text": "dhul jalāli wal-ikrām"
    }
  ]
}