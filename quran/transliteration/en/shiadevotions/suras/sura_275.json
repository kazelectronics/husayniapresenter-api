{
  "index": 275,
  "name": "Sura 275",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "ilāhī qaṣuratil alsunu `an bulūghi thanā-ik"
    },
    {
      "index": 3,
      "text": "kamā yalīqu bijalālik"
    },
    {
      "index": 4,
      "text": "wa`ajazatil `uqūlu `an idrāki kunhi jamālik"
    },
    {
      "index": 5,
      "text": "wanḥasaratil abṣāru dūnan naẓari ilā subuḥāti wajhik"
    },
    {
      "index": 6,
      "text": "walam taj`al lilkhalqi ṭarīqan ilā ma`rifatik"
    },
    {
      "index": 7,
      "text": "illā bil `ajzi `an ma`rifatik"
    },
    {
      "index": 8,
      "text": "ilāhī faj`alnā minal ladhīna tarassakhat ashjārush shawq"
    },
    {
      "index": 9,
      "text": "ilayka fī ḥadā-iqi ṣudūrihim"
    },
    {
      "index": 10,
      "text": "wa-akhadhat law`atu maḥabbatika bimajāmi`i qulūbihim"
    },
    {
      "index": 11,
      "text": "fahum ilā awkāril afkāri ya-wūn"
    },
    {
      "index": 12,
      "text": "wafī riyāḍil qur-bi walmukāshafati yar-ta`ūn"
    },
    {
      "index": 13,
      "text": "wamin ḥiyāḍil maḥabbati bika-sil mulāṭafati yakra`ūn"
    },
    {
      "index": 14,
      "text": "washarā-i`al muṣāfāti yaridūn"
    },
    {
      "index": 15,
      "text": "qad kushifal ghiṭā-u `an abṣārihim"
    },
    {
      "index": 16,
      "text": "wanjalat ẓulmatur raybi `an `aqā-idihim waḍamā-irihim"
    },
    {
      "index": 17,
      "text": "wantafat mukhālajatush shakki `an qulūbihim wasarā-irihim"
    },
    {
      "index": 18,
      "text": "wansharaḥat bitaḥqīqil ma`rifati ṣudūruhum"
    },
    {
      "index": 19,
      "text": "wa`alat lisabqis sa`ādati fiz zahādati himamuhum"
    },
    {
      "index": 20,
      "text": "wa`adhuba fī ma`īnil mu`āmalati shir-buhum"
    },
    {
      "index": 21,
      "text": "waṭāba fī majlisil unsi sirruhum"
    },
    {
      "index": 22,
      "text": "wa-amina fī mawṭinil makhāfati sir-buhum"
    },
    {
      "index": 23,
      "text": "waṭma-annat birrujū`i ilā rabbil ar-bābi anfusuhum"
    },
    {
      "index": 24,
      "text": "watayaqqanat bil fawzi walfalāḥi ar-wāḥuhum"
    },
    {
      "index": 25,
      "text": "waqarrat binnaẓari ilā maḥbūbihim a`yunuhum"
    },
    {
      "index": 26,
      "text": "wastaqarra bi-idrākis su-li wanaylil ma-mūli qarāruhum"
    },
    {
      "index": 27,
      "text": "warabiḥat fī bay`id dunyā bil-ākhirati tijāratuhum"
    },
    {
      "index": 28,
      "text": "ilāhī mā aladhha khawāṭiral ilhāmi bidhikrika `alal qulūb"
    },
    {
      "index": 29,
      "text": "wamā aḥlal masīra ilayka bil awhāmi fī masālikil ghuyūb"
    },
    {
      "index": 30,
      "text": "wamā aṭyaba ṭa`ma ḥubbik"
    },
    {
      "index": 31,
      "text": "wamā a`dhaba shur-ba qur-bik"
    },
    {
      "index": 32,
      "text": "fa-a`idhnā min ṭar-dika wa-ib`ādik"
    },
    {
      "index": 33,
      "text": "waj`alnā min akhaṣṣi `ārifīk"
    },
    {
      "index": 34,
      "text": "wa-aṣlaḥa `ibādik"
    },
    {
      "index": 35,
      "text": "wa-aṣdaqa ṭā-i`īk"
    },
    {
      "index": 36,
      "text": "wa-akhlaṣa `ubbādik"
    },
    {
      "index": 37,
      "text": "yā `aẓīmu yā jalīl"
    },
    {
      "index": 38,
      "text": "yā karīmu yā munīl"
    },
    {
      "index": 39,
      "text": "biraḥmatika wamannik"
    },
    {
      "index": 40,
      "text": "yā ar-ḥamar rāḥimīn"
    }
  ]
}