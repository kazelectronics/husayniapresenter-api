{
  "index": 270,
  "name": "Sura 270",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma alhimnā ṭā`atak"
    },
    {
      "index": 3,
      "text": "wajannibnā ma`ṣiyatak"
    },
    {
      "index": 4,
      "text": "wayassir lanā bulūgha mā natamannā"
    },
    {
      "index": 5,
      "text": "minibtighā-i riḍwānik"
    },
    {
      "index": 6,
      "text": "wa-aḥlilnā buḥbūḥata jinānik"
    },
    {
      "index": 7,
      "text": "waqsha` `an baṣā-irinā saḥābal ir-tiyāb"
    },
    {
      "index": 8,
      "text": "wakshif `an qulūbinā aghshiyatal mir-yati walḥijāb"
    },
    {
      "index": 9,
      "text": "wa-azhiqil bāṭila `an ḍamā-irinā"
    },
    {
      "index": 10,
      "text": "wa-athbitil ḥaqqa fī sarā-irinā"
    },
    {
      "index": 11,
      "text": "fa-innash shukūka waẓ ẓunūna lawāqiḥul fitan"
    },
    {
      "index": 12,
      "text": "wamukaddiratun liṣafwil manā-iḥi walminan"
    },
    {
      "index": 13,
      "text": "allāhummaḥmilnā fī sufuni najātik"
    },
    {
      "index": 14,
      "text": "wamatti`nā biladhīdhi munājātik"
    },
    {
      "index": 15,
      "text": "wa-awridnā ḥiyāḍa ḥubbik"
    },
    {
      "index": 16,
      "text": "wa-adhiqnā ḥalāwata wuddika waqur-bik"
    },
    {
      "index": 17,
      "text": "waj`al jihādanā fīk"
    },
    {
      "index": 18,
      "text": "wahammanā fī ṭā`atik"
    },
    {
      "index": 19,
      "text": "wa-akhliṣ niyyātinā fī mu`āmalatik"
    },
    {
      "index": 20,
      "text": "fa-innā bika walak"
    },
    {
      "index": 21,
      "text": "walā wasīlata lanā ilayka illā ant"
    },
    {
      "index": 22,
      "text": "ilāhī ij`alnī minal muṣṭafaynal akhyār"
    },
    {
      "index": 23,
      "text": "wa-alḥiqnī biṣṣāliḥīnal abrār"
    },
    {
      "index": 24,
      "text": "as sābiqīna ilal makrumāt"
    },
    {
      "index": 25,
      "text": "al musāri`īna ilal khayrāt"
    },
    {
      "index": 26,
      "text": "al `āmilīna lilbāqiyātiṣ ṣāliḥāt"
    },
    {
      "index": 27,
      "text": "as sā`īna ilā rafī`id darajāt"
    },
    {
      "index": 28,
      "text": "innaka `alā kulli shay-in qadīr"
    },
    {
      "index": 29,
      "text": "wabil ijābati jadīr"
    },
    {
      "index": 30,
      "text": "biraḥmatika yā ar-ḥamar rāḥimīn"
    }
  ]
}