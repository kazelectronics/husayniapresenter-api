{
  "index": 235,
  "name": "Sura 235",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma lakal ḥamdu `alā sitrika ba`da `ilmik"
    },
    {
      "index": 3,
      "text": "wamu`āfātika ba`da khubrik"
    },
    {
      "index": 4,
      "text": "fakullunā qadiqtarafal `ā-ibata falam tash-har-h"
    },
    {
      "index": 5,
      "text": "war-takabal fāḥishata falam tafḍaḥ-h"
    },
    {
      "index": 6,
      "text": "watasattara bil masāwī falam tadlul `alayh"
    },
    {
      "index": 7,
      "text": "kam nahyin laka qad ataynāh"
    },
    {
      "index": 8,
      "text": "wa-amrin qad waqaftanā `alayhi fata`addaynāh"
    },
    {
      "index": 9,
      "text": "wasayyi-atiniktasabnāhā, wakhaṭī-atinir-takabnāhā"
    },
    {
      "index": 10,
      "text": "kuntal muṭṭali`a `alayhā dūnan nāẓirīn"
    },
    {
      "index": 11,
      "text": "walqādira `alā i`lānihā fawqal qādirīn"
    },
    {
      "index": 12,
      "text": "kānat `āfiyatuka lanā ḥijāban dūna abṣārihim"
    },
    {
      "index": 13,
      "text": "waradman dūna asmā`ihim"
    },
    {
      "index": 14,
      "text": "faj`al mā satar-ta minal `awrah"
    },
    {
      "index": 15,
      "text": "wa-akhfayta minad dakhīlati wā`iẓan lanā"
    },
    {
      "index": 16,
      "text": "wazājiran `an sū-il khuluqi waqtirāfil khaṭī-ah"
    },
    {
      "index": 17,
      "text": "wasa`yan ilat tawbatil māḥiyati waṭ ṭarīqil maḥmūdah"
    },
    {
      "index": 18,
      "text": "waqarribil waqta fīh"
    },
    {
      "index": 19,
      "text": "walā tasumnal ghaflata `ank"
    },
    {
      "index": 20,
      "text": "innā ilayka rāghibūn, waminadh dhunūbi tā-ibūn"
    },
    {
      "index": 21,
      "text": "waṣalli `alā khiyaratikallāhumma min khalqik"
    },
    {
      "index": 22,
      "text": "muḥammadin wa`itratihiṣ ṣifwati min bariyyatikaṭ ṭāhirīn"
    },
    {
      "index": 23,
      "text": "waj`alnā lahum sāmi`īna wamuṭī`īna kamā amar-t"
    }
  ]
}