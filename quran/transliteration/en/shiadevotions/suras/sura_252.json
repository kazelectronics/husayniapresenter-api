{
  "index": 252,
  "name": "Sura 252",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "rabbi afḥamatnī dhunūbī, wanqaṭa`at maqālatī"
    },
    {
      "index": 3,
      "text": "falā ḥujjata lī, fa-anal asīru bibaliyyatī"
    },
    {
      "index": 4,
      "text": "al mur-tahanu bi`amalī,al mutaraddidu fī khaṭī-atī"
    },
    {
      "index": 5,
      "text": "al mutaḥayyiru `an qaṣdī,al munqaṭa`u bī"
    },
    {
      "index": 6,
      "text": "qad awqaftu nafsī mawqifal adhillā-il mudhnibīn"
    },
    {
      "index": 7,
      "text": "mawqifal ashqiyā-il mutajarrīna `alayk,al mustakhiffīna biwa`dik"
    },
    {
      "index": 8,
      "text": "subḥānaka ayya jur-atinijtara-tu `alayk"
    },
    {
      "index": 9,
      "text": "wa-ayya taghrīrin gharrar-tu binafsī"
    },
    {
      "index": 10,
      "text": "mawlāya ir-ḥam kabwatī liḥurri wajhī"
    },
    {
      "index": 11,
      "text": "wazallata qadamī, wa`ud biḥilmika `alā jahlī"
    },
    {
      "index": 12,
      "text": "wabi-iḥsānika `alā isā-atī, fa-anal muqirru bidhanbī"
    },
    {
      "index": 13,
      "text": "al mu`tarifu bikhaṭī-atī, wahādhihi yadī wanāṣiyatī"
    },
    {
      "index": 14,
      "text": "astakīnu bil qawadi min nafsī"
    },
    {
      "index": 15,
      "text": "ir-ḥam shaybatī, wanafāda ayyāmī"
    },
    {
      "index": 16,
      "text": "waqtirāba ajalī, waḍa`fī"
    },
    {
      "index": 17,
      "text": "wamaskanatī, waqillata ḥīlatī"
    },
    {
      "index": 18,
      "text": "mawlāya war-ḥamnī idhanqaṭa`a minad dunyā atharī"
    },
    {
      "index": 19,
      "text": "wammaḥā minal makhlūqīna dhikrī"
    },
    {
      "index": 20,
      "text": "wakuntu minal mansiyyīna kaman qad nusiy"
    },
    {
      "index": 21,
      "text": "mawlāya war-ḥamnī `inda taghayyuri ṣūratī"
    },
    {
      "index": 22,
      "text": "waḥālī idhā baliya jismī, watafarraqat a`ḍā-ī"
    },
    {
      "index": 23,
      "text": "wataqaṭṭa`at awṣālī, yā ghaflatī `ammā yurādu bī"
    },
    {
      "index": 24,
      "text": "mawlāya war-ḥamnī fī ḥashrī wanashrī"
    },
    {
      "index": 25,
      "text": "waj`al fī dhālikal yawmi ma`a awliyā-ika mawqifī"
    },
    {
      "index": 26,
      "text": "wafī aḥibbā-ika maṣdarī"
    },
    {
      "index": 27,
      "text": "wafī jiwārika maskanī, yā rabbal `ālamīn"
    }
  ]
}