{
  "index": 284,
  "name": "Sura 284",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma inna maghfirataka ar-jā min `amalī"
    },
    {
      "index": 3,
      "text": "wa-inna raḥmatuka awsa`u min dhanbī"
    },
    {
      "index": 4,
      "text": "allāhumma in kāna dhanbī `indaka `aẓīmā"
    },
    {
      "index": 5,
      "text": "fa`afwuka a`ẓamu min dhanbī"
    },
    {
      "index": 6,
      "text": "allāhumma in lam akun ahlan an ablugha raḥmatak"
    },
    {
      "index": 7,
      "text": "faraḥmatuka ahlun an tablughanī watasa`anī"
    },
    {
      "index": 8,
      "text": "li-annahā wasi`at kulla shay"
    },
    {
      "index": 9,
      "text": "biraḥmatika yā ar-ḥamar rāḥimīn"
    }
  ]
}