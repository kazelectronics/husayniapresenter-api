{
  "index": 241,
  "name": "Sura 241",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 3,
      "text": "wakfinā ṭūlal amal, waqaṣṣir-hu `annā biṣidqil `amal"
    },
    {
      "index": 4,
      "text": "ḥattā lā nu-ammilastitmāma sā`atin ba`da sā`ah"
    },
    {
      "index": 5,
      "text": "walastīfā-a yawmin ba`da yawm"
    },
    {
      "index": 6,
      "text": "walattiṣāla nafasin binafas"
    },
    {
      "index": 7,
      "text": "walā luḥūqa qadamin biqadam"
    },
    {
      "index": 8,
      "text": "wasallimnā min ghurūrih, wa āminnā min shurūrih"
    },
    {
      "index": 9,
      "text": "wanṣibil mawta bayna aydīnā naṣbā"
    },
    {
      "index": 10,
      "text": "walā taj`al dhikranā lahu ghibbā"
    },
    {
      "index": 11,
      "text": "waj`al lanā min ṣāliḥil a`māl"
    },
    {
      "index": 12,
      "text": "`amalan nastabṭi-u ma`ahul maṣīra ilayk"
    },
    {
      "index": 13,
      "text": "wanaḥriṣu lahu `alā washkil liḥāqi bik"
    },
    {
      "index": 14,
      "text": "ḥattā yakūnal mawtu ma-nasanal ladhī na-nasu bih"
    },
    {
      "index": 15,
      "text": "wama-lafanal ladhī nashtāqu ilayh, waḥāmmatanal latī nuḥibbud dunuwwa minhā"
    },
    {
      "index": 16,
      "text": "fa-idhā awradtahu `alaynā, wa-anzaltahu binā"
    },
    {
      "index": 17,
      "text": "fa-as`idnā bihi zā-irā, wa ānisnā bihi qādimā"
    },
    {
      "index": 18,
      "text": "walā tushqinā biḍiyāfatih, walā tukhzinā biziyāratih"
    },
    {
      "index": 19,
      "text": "waj`alhu bāban min abwābi maghfiratik"
    },
    {
      "index": 20,
      "text": "wamiftāḥan min mafātīḥi raḥmatik"
    },
    {
      "index": 21,
      "text": "amitnā muhtadīna ghayra ḍāllīn"
    },
    {
      "index": 22,
      "text": "ṭā-i`īna ghayra mustakrihīn, tā-ibīna ghayra `āṣīna walā muṣirrīn"
    },
    {
      "index": 23,
      "text": "yā ḍāmina jazā-il muḥsinīn"
    },
    {
      "index": 24,
      "text": "wamustaṣliḥa `amalil mufsidīn"
    }
  ]
}