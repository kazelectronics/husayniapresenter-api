{
  "index": 231,
  "name": "Sura 231",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 3,
      "text": "wahab liyal `āfiyata min daynin tukhliqu bihi wajhī"
    },
    {
      "index": 4,
      "text": "wayaḥāru fīhi dhihnī, wayatasha``abu lahu fikrī"
    },
    {
      "index": 5,
      "text": "wayaṭūlu bimumārasatihi shughlī"
    },
    {
      "index": 6,
      "text": "wa-a`ūdhu bika yā rabbi min hammid dayni wafikrih"
    },
    {
      "index": 7,
      "text": "washughlid dayni wasaharih"
    },
    {
      "index": 8,
      "text": "faṣalli `alā muḥammadin wa ālihi wa-a`idhnī minh"
    },
    {
      "index": 9,
      "text": "wa-astajīru bika yā rabbi min dhillatihi fil ḥayāh"
    },
    {
      "index": 10,
      "text": "wamin tabi`atihi ba`dal wafāh"
    },
    {
      "index": 11,
      "text": "faṣalli `alā muḥammadin wa ālihi wa-ajir-nī minh"
    },
    {
      "index": 12,
      "text": "biwus`in fāḍilin aw kafāfin wāṣil"
    },
    {
      "index": 13,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 14,
      "text": "waḥjubnī `anis sarafi wal-izdiyād"
    },
    {
      "index": 15,
      "text": "waqawwimnī bil badhli wal-iqtiṣād"
    },
    {
      "index": 16,
      "text": "wa`allimnī ḥusnat taqdīr"
    },
    {
      "index": 17,
      "text": "waqbiḍnī biluṭfika `anit tabdhīr"
    },
    {
      "index": 18,
      "text": "wa-ajri min asbābil ḥalāli ar-zāqī"
    },
    {
      "index": 19,
      "text": "wawajjih fī abwābil birri infāqī"
    },
    {
      "index": 20,
      "text": "wazwi `annī minal māli mā yuḥdithu lī makhīlah"
    },
    {
      "index": 21,
      "text": "aw ta-addiyan ilā baghy, aw mā ata`aqqabu minhu ṭughyānā"
    },
    {
      "index": 22,
      "text": "allāhumma ḥabbib ilayya ṣuḥbatal fuqarā"
    },
    {
      "index": 23,
      "text": "wa-a`innī `alā ṣuḥbatihim biḥusniṣ ṣabr"
    },
    {
      "index": 24,
      "text": "wamā zawayta `annī min matā`id dunyal fāniyah"
    },
    {
      "index": 25,
      "text": "fadhkhar-hu lī fī khazā-inikal bāqiyah"
    },
    {
      "index": 26,
      "text": "waj`al mā khawwaltanī min ḥuṭāmihā"
    },
    {
      "index": 27,
      "text": "wa`ajjalta lī min matā`ihā bulghatan ilā jiwārik"
    },
    {
      "index": 28,
      "text": "wawuṣlatan ilā qur-bik, wadharī`atan ilā jannatik"
    },
    {
      "index": 29,
      "text": "innaka dhul faḍlil `aẓīm"
    },
    {
      "index": 30,
      "text": "wa-antal jawādul karīm"
    }
  ]
}