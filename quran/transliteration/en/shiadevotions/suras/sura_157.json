{
  "index": 157,
  "name": "Sura 157",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "shajaratin nubuwwah"
    },
    {
      "index": 3,
      "text": "wamawḍi`ir risālah"
    },
    {
      "index": 4,
      "text": "wamukhtalafil malā-ikah"
    },
    {
      "index": 5,
      "text": "wama`dinil `ilm"
    },
    {
      "index": 6,
      "text": "wa-ahli baytil waḥy"
    },
    {
      "index": 7,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 8,
      "text": "al fulkil jāriyati fil lujajil ghāmirah"
    },
    {
      "index": 9,
      "text": "ya-manu man rakibahā"
    },
    {
      "index": 10,
      "text": "wayaghraqu man tarakahā"
    },
    {
      "index": 11,
      "text": "al mutaqaddimu lahum māriq"
    },
    {
      "index": 12,
      "text": "walmuta-akhhiru `anhum zāhiq"
    },
    {
      "index": 13,
      "text": "wal lāzimu lahum lāḥiq"
    },
    {
      "index": 14,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 15,
      "text": "al kahfil ḥaṣīn"
    },
    {
      "index": 16,
      "text": "waghiyāthil muḍṭarril mustakīn"
    },
    {
      "index": 17,
      "text": "wamalja-al hāribīn"
    },
    {
      "index": 18,
      "text": "wa`iṣmatil mu`taṣimīn"
    },
    {
      "index": 19,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 20,
      "text": "ṣalātan kathīratan takūnu lahum riḍā"
    },
    {
      "index": 21,
      "text": "waliḥaqqi muḥammadin wa āli muḥammadin adā-an waqaḍā-ā"
    },
    {
      "index": 22,
      "text": "biḥawlin minka waquwwatin yā rabbal `ālamīn"
    },
    {
      "index": 23,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 24,
      "text": "aṭ ṭayyibīnal abrāril akhyār"
    },
    {
      "index": 25,
      "text": "al ladhīna awjabta ḥuqūqahum"
    },
    {
      "index": 26,
      "text": "wafaraḍta ṭā`atahum wawilāyatahum"
    },
    {
      "index": 27,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 28,
      "text": "wa`mur qalbī biṭā`atik"
    },
    {
      "index": 29,
      "text": "walā tukhzinī bima`ṣiyatik"
    },
    {
      "index": 30,
      "text": "war-zuqnī muwāsāta man qattar-ta `alayhi min rizqik"
    },
    {
      "index": 31,
      "text": "bimā wassa`ta `alayya min faḍlik"
    },
    {
      "index": 32,
      "text": "wanashar-ta `alayya min `adlik"
    },
    {
      "index": 33,
      "text": "wa-aḥyaytanī taḥta ẓillik"
    },
    {
      "index": 34,
      "text": "wahādhā shahru nabiyyika sayyidi rusulik"
    },
    {
      "index": 35,
      "text": "sha`bānul ladhī ḥafaftahu minka birraḥmati war riḍwān"
    },
    {
      "index": 36,
      "text": "al ladhī kāna rasūlullāhi ṣallallāhu `alayhi wa ālihi wasallam"
    },
    {
      "index": 37,
      "text": "yad-abu fī ṣiyāmihi waqiyāmih"
    },
    {
      "index": 38,
      "text": "fī layālīhi wa-ayyāmih"
    },
    {
      "index": 39,
      "text": "bukhū`an laka fī ikrāmihi wa-i`ẓāmih"
    },
    {
      "index": 40,
      "text": "ilā maḥalli ḥimāmih"
    },
    {
      "index": 41,
      "text": "allāhumma fa-a`innā `alal istināni bisunnatihi fīh"
    },
    {
      "index": 42,
      "text": "wanaylish shafā`ati ladayh"
    },
    {
      "index": 43,
      "text": "allāhumma waj`alhu lī shafī`an mushaffa`ā"
    },
    {
      "index": 44,
      "text": "waṭarīqan ilayka mahya`ā"
    },
    {
      "index": 45,
      "text": "waj`alnī lahu muttabi`ā"
    },
    {
      "index": 46,
      "text": "ḥattā alqāka yawmal qiyāmati `annī rāḍiyā"
    },
    {
      "index": 47,
      "text": "wa`an dhunūbī ghāḍiyā"
    },
    {
      "index": 48,
      "text": "qad awjabta lī minkar raḥmata war riḍwān"
    },
    {
      "index": 49,
      "text": "wa-anzaltanī dāral qarāri wamaḥallal akhyār"
    }
  ]
}