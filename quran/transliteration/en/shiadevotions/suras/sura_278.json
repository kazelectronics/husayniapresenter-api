{
  "index": 278,
  "name": "Sura 278",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "ilāhī askantanā dāran ḥafarat lanā ḥufara makrihā"
    },
    {
      "index": 3,
      "text": "wa`allaqtanā bi-aydil manāyā fī ḥabā-ili ghadrihā"
    },
    {
      "index": 4,
      "text": "fa-ilayka naltaji-u min makā-idi khuda`ihā"
    },
    {
      "index": 5,
      "text": "wabika na`taṣimu minal ightirāri bizakhārifi zinatihā"
    },
    {
      "index": 6,
      "text": "fa-innahal muhlikatu ṭullābahā"
    },
    {
      "index": 7,
      "text": "al mutlifatu ḥullālahā"
    },
    {
      "index": 8,
      "text": "al maḥshuwwatu bil-āfāt"
    },
    {
      "index": 9,
      "text": "al mash-ḥūnatu binnakabāt"
    },
    {
      "index": 10,
      "text": "ilāhī fazahhidnā fīhā"
    },
    {
      "index": 11,
      "text": "wasallimnā minhā"
    },
    {
      "index": 12,
      "text": "bitawfīqika wa`iṣmatik"
    },
    {
      "index": 13,
      "text": "wanza` `annā jalābība mukhālafatik"
    },
    {
      "index": 14,
      "text": "watawalla umūranā biḥusni kifāyatik"
    },
    {
      "index": 15,
      "text": "wa-awfir mazīdanā min sa`ati raḥmatik"
    },
    {
      "index": 16,
      "text": "wa-ajmil ṣilātinā min fayḍi mawāhibik"
    },
    {
      "index": 17,
      "text": "waghris fī af-idatinā ashjāra maḥabbatik"
    },
    {
      "index": 18,
      "text": "wa-atmim lanā anwāra ma`rifatik"
    },
    {
      "index": 19,
      "text": "wa-adhiqnā ḥalāwata `afwika waladhhata maghfiratik"
    },
    {
      "index": 20,
      "text": "wa-aqrir a`yunanā yawma liqā-ika biru-yatik"
    },
    {
      "index": 21,
      "text": "wa-akhrij ḥubbad dunyā min qulūbinā"
    },
    {
      "index": 22,
      "text": "kamā fa`alta biṣṣāliḥīna min ṣafwatik"
    },
    {
      "index": 23,
      "text": "wal-abrāri min khāṣṣatik"
    },
    {
      "index": 24,
      "text": "yā ar-ḥamar rāḥimīn"
    },
    {
      "index": 25,
      "text": "wayā akramal akramīn"
    }
  ]
}