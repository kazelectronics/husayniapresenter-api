{
  "index": 226,
  "name": "Sura 226",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma wamunna `alayya bibaqā-i wuldī"
    },
    {
      "index": 3,
      "text": "wabi-iṣlāḥihim lī, wabi-imtā`ī bihim"
    },
    {
      "index": 4,
      "text": "ilāhī umdud lī fī a`mārihim"
    },
    {
      "index": 5,
      "text": "wazid lī fī-ājālihim"
    },
    {
      "index": 6,
      "text": "warabbi lī ṣaghīrahum"
    },
    {
      "index": 7,
      "text": "waqawwi lī ḍa`īfahum"
    },
    {
      "index": 8,
      "text": "wa-aṣiḥḥa lī abdānahum wa-adyānahum wa-akhlāqahum"
    },
    {
      "index": 9,
      "text": "wa`āfihim fī anfusihim wafī jawāriḥihim"
    },
    {
      "index": 10,
      "text": "wafī kulli mā `unītu bihi min amrihim"
    },
    {
      "index": 11,
      "text": "wa-adrir lī wa`alā yadī ar-zāqahum"
    },
    {
      "index": 12,
      "text": "waj`alhum abrāran atqiyā-a buṣarā-a sāmi`īn"
    },
    {
      "index": 13,
      "text": "muṭī`īna laka wali-awliyā-ika muḥibbīna munāṣiḥīn"
    },
    {
      "index": 14,
      "text": "walijamī`i a`dā-ika mu`ānidīna wamubghiḍīna-āmīn"
    },
    {
      "index": 15,
      "text": "allāhummashdud bihim `aḍudī"
    },
    {
      "index": 16,
      "text": "wa-aqim bihim awadī, wakathhir bihim `adadī"
    },
    {
      "index": 17,
      "text": "wazayyin bihim maḥḍarī, wa-aḥyi bihim dhikrī"
    },
    {
      "index": 18,
      "text": "wakfinī bihim fī ghaybatī wa-a`innī bihim `alā ḥājatī"
    },
    {
      "index": 19,
      "text": "waj`alhum lī muḥibbīn, wa`alayya ḥadibīna muqbilīna mustaqīmīna lī"
    },
    {
      "index": 20,
      "text": "muṭī`īna ghayra `āṣīn"
    },
    {
      "index": 21,
      "text": "walā `āqqīna walā mukhālifīna walā khāṭi-īn"
    },
    {
      "index": 22,
      "text": "wa-a`innī `alā tar-biyatihim wata-dībihim wabirrihim"
    },
    {
      "index": 23,
      "text": "wahab lī min ladunka ma`ahum awlādan dhukūrā"
    },
    {
      "index": 24,
      "text": "waj`al dhālika khayran lī waj`alhum lī `awnan `alā mā sa-altuk"
    },
    {
      "index": 25,
      "text": "wa-a`idhnī wadhurriyyatī minash shayṭānir rajīm"
    },
    {
      "index": 26,
      "text": "fa-innaka khalaqtanā wa-amar-tanā wanahaytanā waraghhabtanā"
    },
    {
      "index": 27,
      "text": "fī thawābi mā amar-tanā warahhabtanā `iqābah"
    },
    {
      "index": 28,
      "text": "waja`alta lanā `aduwwan yakīdunā"
    },
    {
      "index": 29,
      "text": "sallaṭtahu minnā `alā mā lam tusalliṭnā `alayhi minh"
    },
    {
      "index": 30,
      "text": "askantahu ṣudūranā, wa-ajraytahu majāriya dimā-inā"
    },
    {
      "index": 31,
      "text": "lā yaghfulu in ghafalnā, walā yansā in nasīnā"
    },
    {
      "index": 32,
      "text": "yu-minunā `iqābak, wayukhawwifunā bighayrik"
    },
    {
      "index": 33,
      "text": "in hamamnā bifāḥishatin shajja`anā `alayhā"
    },
    {
      "index": 34,
      "text": "wa-in hamamnā bi`amalin ṣāliḥin thabbaṭanā `anh"
    },
    {
      "index": 35,
      "text": "yata`arraḍu lanā bishhahawāt, wayanṣibu lanā bishhubuhāt"
    },
    {
      "index": 36,
      "text": "in wa`adanā kadhabanā wa-in mannānā akhlafanā"
    },
    {
      "index": 37,
      "text": "wa-illā taṣrif `annā kaydahu yuḍillanā"
    },
    {
      "index": 38,
      "text": "wa-illā taqinā khabālahu yastazillanā"
    },
    {
      "index": 39,
      "text": "allāhumma faqhar sulṭānahu `annā bisulṭānika ḥattā taḥbisahu `annā"
    },
    {
      "index": 40,
      "text": "bikathratid du`ā-i lak, fanuṣbiḥa min kaydihi fil ma`ṣūmīna bik"
    },
    {
      "index": 41,
      "text": "allāhumma a`ṭinī kulla su-lī, waqḍi lī ḥawā-ijī"
    },
    {
      "index": 42,
      "text": "walā tamna`nil ijābata waqad ḍamintahā lī"
    },
    {
      "index": 43,
      "text": "walā taḥjub du`ā-ī `anka waqad amar-tanī bih"
    },
    {
      "index": 44,
      "text": "wamnun `alayya bikulli mā yuṣliḥunī"
    },
    {
      "index": 45,
      "text": "fī dunyāya wa ākhiratī mā dhakar-tu minhu wamā nasīt"
    },
    {
      "index": 46,
      "text": "aw aẓhar-tu aw akhfayt, aw a`lantu aw asrar-t"
    },
    {
      "index": 47,
      "text": "waj`alnī fī jamī`i dhālika minal muṣliḥīna bisu-ālī iyyāk"
    },
    {
      "index": 48,
      "text": "al munjiḥīna biṭṭalabi ilayk"
    },
    {
      "index": 49,
      "text": "ghayril mamnū`īna bittawakkuli `alayk"
    },
    {
      "index": 50,
      "text": "al mu`awwadīna bitta`awwudhi bik, ar rābiḥīna fit tijārati `alayk, al mujārīna bi`izzik"
    },
    {
      "index": 51,
      "text": "al muwassa`i `alayhimur rizqul ḥalāl"
    },
    {
      "index": 52,
      "text": "min faḍlikal wāsi`i bijūdika wakaramik"
    },
    {
      "index": 53,
      "text": "al mu`azzīna minadh dhulli bik, walmujārīna minaẓ ẓulmi bi`adlik"
    },
    {
      "index": 54,
      "text": "walmu`āfayna minal balā-i biraḥmatik, walmughnayna minal faqri bighināk"
    },
    {
      "index": 55,
      "text": "walma`ṣūmīna minadh dhunūbi waz zalali walkhaṭa-i bitaqwāk"
    },
    {
      "index": 56,
      "text": "walmuwaffaqīna lilkhayri war rushdi waṣ ṣawābi biṭā`atik"
    },
    {
      "index": 57,
      "text": "walmuḥāli baynahum wabaynadh dhunūbi biqudratik"
    },
    {
      "index": 58,
      "text": "at tārikīna likulli ma`ṣiyatik, as sākinīna fī jiwārik"
    },
    {
      "index": 59,
      "text": "allāhumma a`ṭinā jamī`a dhālika bitawfīqik"
    },
    {
      "index": 60,
      "text": "waraḥmatika wa-a`idhnā min `adhābis sa`īr"
    },
    {
      "index": 61,
      "text": "wa-a`ṭi jamī`al muslimīna walmuslimāt"
    },
    {
      "index": 62,
      "text": "walmu-minīna walmu-mināti mithlal ladhī sa-altuka linafsī"
    },
    {
      "index": 63,
      "text": "waliwuldī fī `ājilid dunyā wa ājilil-ākhirah"
    },
    {
      "index": 64,
      "text": "innaka qarībun mujībun samī`un `alīm"
    },
    {
      "index": 65,
      "text": "`afuwwun ghafūrun ra-ūfun raḥīm"
    },
    {
      "index": 66,
      "text": "wa ātinā fid dunyā ḥasanatan wafil-ākhirati ḥasanatan waqinā `adhāban nār"
    }
  ]
}