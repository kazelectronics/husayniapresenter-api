{
  "index": 322,
  "name": "Sura 322",
  "ayas": [
    {
      "index": 1,
      "text": "wa sallim `alā muḥammadin wa āli muḥammad",
      "bismillah": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 2,
      "text": "wa bārik `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 3,
      "text": "war-ḥam muḥammadan wa āla muḥammad"
    },
    {
      "index": 4,
      "text": "kamā ṣallayta wa sallamta wa bārakta wa taraḥḥamt"
    },
    {
      "index": 5,
      "text": "`alā ibrāhīma wa-āli ibrāhīm"
    },
    {
      "index": 6,
      "text": "innaka ḥamīdun majīd"
    },
    {
      "index": 7,
      "text": "wa ṣalli `alā jamī`il anbiyā-i walmur-salīn"
    },
    {
      "index": 8,
      "text": "wash shuhadā-i waṣ ṣiddīqīn"
    },
    {
      "index": 9,
      "text": "wa `ibādillāhiṣ ṣāliḥīn"
    }
  ]
}