{
  "index": 242,
  "name": "Sura 242",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 3,
      "text": "wa-afrishnī mihāda karāmatik"
    },
    {
      "index": 4,
      "text": "wa-awridnī mashāri`a raḥmatik"
    },
    {
      "index": 5,
      "text": "wa-aḥlinī buḥbūḥata jannatik"
    },
    {
      "index": 6,
      "text": "walā tasumnī birraddi `ank"
    },
    {
      "index": 7,
      "text": "walā taḥrimnī bil khaybati mink"
    },
    {
      "index": 8,
      "text": "walā tuqāṣṣanī bimajtaraḥt"
    },
    {
      "index": 9,
      "text": "walā tunāqishnī bimaktasabt"
    },
    {
      "index": 10,
      "text": "walā tubriz maktūmī, walā takshif mastūrī"
    },
    {
      "index": 11,
      "text": "walā taḥmil `alā mīzānil inṣāfi `amalī"
    },
    {
      "index": 12,
      "text": "walā tu`lin `alā `uyūnil malā-i khabarī"
    },
    {
      "index": 13,
      "text": "akhfi `anhum mā yakūnu nashruhu `alayya `ārā"
    },
    {
      "index": 14,
      "text": "waṭwi `anhum mā yulḥiqunī `indaka shanārā"
    },
    {
      "index": 15,
      "text": "sharrif darajatī biriḍwānik"
    },
    {
      "index": 16,
      "text": "wa akmil karāmatī bighufrānik"
    },
    {
      "index": 17,
      "text": "wanẓimnī fī aṣ-ḥābil yamīn"
    },
    {
      "index": 18,
      "text": "wawajjihnī fī masālikil-āminīn"
    },
    {
      "index": 19,
      "text": "waj`alnī fī fawjil fā-izīn"
    },
    {
      "index": 20,
      "text": "wa`mur bī majālisaṣ ṣāliḥīn"
    },
    {
      "index": 21,
      "text": "āmīna rabbal `ālamīn"
    }
  ]
}