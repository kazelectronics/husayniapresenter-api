{
  "index": 83,
  "name": "Sura 83",
  "ayas": [
    {
      "index": 1,
      "text": "waylul lil-muṭaffifīn",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "alladhīna idhak-tālū `alan nāsi yastawfūn"
    },
    {
      "index": 3,
      "text": "wa idhā kālūhum aw wazanūhum yukhsirūn"
    },
    {
      "index": 4,
      "text": "alā yaẓunnu ulā-ika annahum mab`ūthūn"
    },
    {
      "index": 5,
      "text": "liyawmin `aẓīm"
    },
    {
      "index": 6,
      "text": "yawma yaqūmun nāsu lirabbil `ālamīn"
    },
    {
      "index": 7,
      "text": "kallā inna kitābal fujjāri lafī sijjīn"
    },
    {
      "index": 8,
      "text": "wa mā adrāka mā sijjīn"
    },
    {
      "index": 9,
      "text": "kitābun marqūm"
    },
    {
      "index": 10,
      "text": "waylun yawma-idhin lil-mukadhhibīn"
    },
    {
      "index": 11,
      "text": "alladhīna yukadhhibūna biyawmid dīn"
    },
    {
      "index": 12,
      "text": "wa mā yukadhhibu bihi illā kullu mu`tadin athīm"
    },
    {
      "index": 13,
      "text": "idhā tutlā `alayhi āyātunā qāla asāṭīrul-awwalīn"
    },
    {
      "index": 14,
      "text": "kallā ۖ bal ۜ rāna `alā qulūbihim mā kānū yaksibūn"
    },
    {
      "index": 15,
      "text": "kallā innahum `an rabbihim yawma-idhin lamaḥjūbūn"
    },
    {
      "index": 16,
      "text": "thumma innahum laṣālul jaḥīm"
    },
    {
      "index": 17,
      "text": "thumma yuqālu hādhal ladhī kuntum bihi tukadhhibūn"
    },
    {
      "index": 18,
      "text": "kallā inna kitābal-abrāri lafī `illiyyīn"
    },
    {
      "index": 19,
      "text": "wa mā adrāka mā `illiyyūn"
    },
    {
      "index": 20,
      "text": "kitābun marqūm"
    },
    {
      "index": 21,
      "text": "yash-haduhul muqarrabūn"
    },
    {
      "index": 22,
      "text": "innal-abrāra lafī na`īm"
    },
    {
      "index": 23,
      "text": "`alal-arā-iki yanẓurūn"
    },
    {
      "index": 24,
      "text": "ta`rifu fī wujūhihim naḍratan na`īm"
    },
    {
      "index": 25,
      "text": "yusqawna min raḥīqin makhtūm"
    },
    {
      "index": 26,
      "text": "khitāmuhu misk ۚ wafī dhālika falyatanāfasil mutanāfisūn"
    },
    {
      "index": 27,
      "text": "wa mizājuhu min tasnīm"
    },
    {
      "index": 28,
      "text": "`aynan yashrabu bihal muqarrabūn"
    },
    {
      "index": 29,
      "text": "innal ladhīna ajramū kānū minal ladhīna āmanū yaḍ-ḥakūn"
    },
    {
      "index": 30,
      "text": "wa idhā marrū bihim yataghāmazūn"
    },
    {
      "index": 31,
      "text": "wa idhan-qalabū ilā ahlihimun-qalabū fakihīn"
    },
    {
      "index": 32,
      "text": "wa idhā ra-awhum qālū inna hā-ulā-i laḍāllūn"
    },
    {
      "index": 33,
      "text": "wa mā ursilū `alayhim ḥāfiẓīn"
    },
    {
      "index": 34,
      "text": "fal yawmal ladhīna āmanū minal kuffāri yaḍ-ḥakūn"
    },
    {
      "index": 35,
      "text": "`alal-arā-iki yanẓurūn"
    },
    {
      "index": 36,
      "text": "hal thuwwibal kuffāru mā kānū yaf`alūn"
    }
  ]
}