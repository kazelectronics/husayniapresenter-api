{
  "index": 82,
  "name": "Sura 82",
  "ayas": [
    {
      "index": 1,
      "text": "idhas samā-un faṭarat",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "wa idhal kawākibun-tatharat"
    },
    {
      "index": 3,
      "text": "wa idhal biḥāru fujjirat"
    },
    {
      "index": 4,
      "text": "wa idhal qubūru bu`thirat"
    },
    {
      "index": 5,
      "text": "`alimat nafsun mā qaddamat wa-akhharat"
    },
    {
      "index": 6,
      "text": "yā-ayyuhal-insānu mā gharraka birabbikal karīm"
    },
    {
      "index": 7,
      "text": "alladhī khalaqaka fasawwāka fa`adalak"
    },
    {
      "index": 8,
      "text": "fī ayyi ṣūratim mā shā-a rakkabak"
    },
    {
      "index": 9,
      "text": "kallā bal tukadhhibūna bid dīn"
    },
    {
      "index": 10,
      "text": "wa inna `alaykum laḥāfiẓīn"
    },
    {
      "index": 11,
      "text": "kirāman kātibīn"
    },
    {
      "index": 12,
      "text": "ya`lamūna mā taf`alūn"
    },
    {
      "index": 13,
      "text": "innal-abrāra lafī na`īm"
    },
    {
      "index": 14,
      "text": "wa innal fujjāra lafī jaḥīm"
    },
    {
      "index": 15,
      "text": "yaṣlawnahā yawmad dīn"
    },
    {
      "index": 16,
      "text": "wa mā hum `anhā bighā-ibīn"
    },
    {
      "index": 17,
      "text": "wa mā adrāka mā yawmud dīn"
    },
    {
      "index": 18,
      "text": "thumma mā adrāka mā yawmud dīn"
    },
    {
      "index": 19,
      "text": "yawma lā tamliku nafsul linafsin shay-ā ۖ wal-amru yawma-idhin lillāh"
    }
  ]
}