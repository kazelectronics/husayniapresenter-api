{
  "index": 300,
  "name": "Sura 300",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "astaghfirullāhal ladhī la-ilāha illā huw"
    },
    {
      "index": 3,
      "text": "al ḥayyul qayyūm"
    },
    {
      "index": 4,
      "text": "ar raḥmānur raḥīm"
    },
    {
      "index": 5,
      "text": "dhul jalāli wal-ikrām"
    },
    {
      "index": 6,
      "text": "wa as-luhu an yatūba `alayy"
    },
    {
      "index": 7,
      "text": "tawbata `abdin dhalīlin khāḍi`"
    },
    {
      "index": 8,
      "text": "faqīrin bā-is"
    },
    {
      "index": 9,
      "text": "miskīnin mustakīnin mustajīr"
    },
    {
      "index": 10,
      "text": "lāyamliku linafsihi naf`an walā ḍarrā"
    },
    {
      "index": 11,
      "text": "walā mawtan walā ḥayātan walā nushūrā"
    },
    {
      "index": 12,
      "text": "allāhumma innī a`ūdhu bika min nafsin lātashba`"
    },
    {
      "index": 13,
      "text": "wamin qalbin lāyakhsha`"
    },
    {
      "index": 14,
      "text": "wamin `ilmin lāyanfa`"
    },
    {
      "index": 15,
      "text": "wamin ṣalātin lātur-fa`"
    },
    {
      "index": 16,
      "text": "wamin du`ā-in lāyusma`"
    },
    {
      "index": 17,
      "text": "allāhumma innī as-alukal yusra ba`dal `usr"
    },
    {
      "index": 18,
      "text": "walfaraja ba`dal kar-b"
    },
    {
      "index": 19,
      "text": "war rakhā-a ba`dash shidah"
    },
    {
      "index": 20,
      "text": "allāhumma mā binā min ni`matin famink"
    },
    {
      "index": 21,
      "text": "la-ilāha illā ant"
    },
    {
      "index": 22,
      "text": "astaghfiruka wa-atūbu ilayk"
    }
  ]
}