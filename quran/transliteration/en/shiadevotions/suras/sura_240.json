{
  "index": 240,
  "name": "Sura 240",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 3,
      "text": "waksir shahwatī `an kulli maḥram"
    },
    {
      "index": 4,
      "text": "wazwi ḥir-ṣī `an kulli ma-tham"
    },
    {
      "index": 5,
      "text": "wamna`nī `an adhā kulli mu-minin wamu-minatin wamuslimin wamuslimah"
    },
    {
      "index": 6,
      "text": "allāhumma wa-ayyumā `abdin nāla minnī mā ḥaẓar-ta `alayh"
    },
    {
      "index": 7,
      "text": "wantahaka minnī mā ḥajazta `alayh"
    },
    {
      "index": 8,
      "text": "famaḍā biẓulāmatī mayyitā"
    },
    {
      "index": 9,
      "text": "aw ḥaṣalat lī qibalahu ḥayyā"
    },
    {
      "index": 10,
      "text": "faghfir lahu mā alamma bihi minnī"
    },
    {
      "index": 11,
      "text": "wa`fu lahu `ammā adbara bihi `annī"
    },
    {
      "index": 12,
      "text": "walā taqifhu `alā mar-takaba fiyy"
    },
    {
      "index": 13,
      "text": "walā takshifhu `ammaktasaba bī"
    },
    {
      "index": 14,
      "text": "waj`al mā samaḥtu bihi minal `afwi `anhum"
    },
    {
      "index": 15,
      "text": "watabarra`tu bihi minaṣ ṣadaqati `alayhim"
    },
    {
      "index": 16,
      "text": "azkā ṣadaqātil mutaṣaddiqīn"
    },
    {
      "index": 17,
      "text": "wa-a`lā ṣilātil mutaqarribīn"
    },
    {
      "index": 18,
      "text": "wa`awwiḍnī min `afwī `anhum `afwak"
    },
    {
      "index": 19,
      "text": "wamin du`ā-ī lahum raḥmatak"
    },
    {
      "index": 20,
      "text": "ḥattā yas`ada kullu wāḥidin minnā bifaḍlik"
    },
    {
      "index": 21,
      "text": "wayanjuwa kullun minnā bimannik"
    },
    {
      "index": 22,
      "text": "allāhumma wa-ayyumā `abdin min `abīdik"
    },
    {
      "index": 23,
      "text": "adrakahu minnī darakun aw massahu min nāḥiyatī adhā"
    },
    {
      "index": 24,
      "text": "aw laḥiqahu bī aw bisababī ẓulm"
    },
    {
      "index": 25,
      "text": "fafuttuhu biḥaqqih"
    },
    {
      "index": 26,
      "text": "aw sabaqtuhu bimaẓlimatih"
    },
    {
      "index": 27,
      "text": "faṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 28,
      "text": "wa-ar-ḍihi `annī min wujdika wa-awfihi ḥaqqahu min `indik"
    },
    {
      "index": 29,
      "text": "thumma qinī mā yūjibu lahu ḥukmuk"
    },
    {
      "index": 30,
      "text": "wakhalliṣnī mimmā yaḥkumu bihi `adluk"
    },
    {
      "index": 31,
      "text": "fa-inna quwwatī lā tastaqillu binaqimatik"
    },
    {
      "index": 32,
      "text": "wa-inna ṭāqatī lā tanhaḍu bisukhṭik"
    },
    {
      "index": 33,
      "text": "fa-innaka in tukāfinī bil ḥaqqi tuhliknī"
    },
    {
      "index": 34,
      "text": "wa-illā taghammadnī biraḥmatika tūbiqnī"
    },
    {
      "index": 35,
      "text": "allāhumma innī astawhibuka yā ilāhī mā lā yunqiṣuka badhluh"
    },
    {
      "index": 36,
      "text": "wa-astaḥmiluka mā lā yabhaẓuka ḥamluh"
    },
    {
      "index": 37,
      "text": "astawhibuka yā ilahī nafsiyal latī lam takhluqhā litamtani`a bihā min su"
    },
    {
      "index": 38,
      "text": "aw litaṭarraqa bihā ilā naf`"
    },
    {
      "index": 39,
      "text": "walakin ansha-tahā ithbātan liqudratika `alā mithlihā"
    },
    {
      "index": 40,
      "text": "waḥtijājan bihā `alā shaklihā"
    },
    {
      "index": 41,
      "text": "wa-astaḥmiluka min dhunūbī mā qad bahaẓanī ḥamluh"
    },
    {
      "index": 42,
      "text": "wa-asta`īnu bika `alā mā qad fadaḥanī thiqluh"
    },
    {
      "index": 43,
      "text": "faṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 44,
      "text": "wahab linafsī `alā ẓulmihā nafsī"
    },
    {
      "index": 45,
      "text": "wawakkil raḥmataka biḥtimāli iṣrī"
    },
    {
      "index": 46,
      "text": "fakam qad laḥiqat raḥmatuka bil musī-īn"
    },
    {
      "index": 47,
      "text": "wakam qad shamila `afwukaẓ ẓālimīn"
    },
    {
      "index": 48,
      "text": "faṣalli `alā muḥammadin wa ālihi waj`alnī uswata man qad anhaḍtah"
    },
    {
      "index": 49,
      "text": "bitajāwuzika `an maṣāri`il khāṭi-īn"
    },
    {
      "index": 50,
      "text": "wakhallaṣtahu bitawfīqika min waraṭātil mujrimīn"
    },
    {
      "index": 51,
      "text": "fa-aṣbaḥa ṭalīqa `afwika min isāri sukhṭik"
    },
    {
      "index": 52,
      "text": "wa`atīqa ṣun`ika min wathāqi `adlik"
    },
    {
      "index": 53,
      "text": "innaka in taf`al dhālika yā ilahī taf`alhu biman"
    },
    {
      "index": 54,
      "text": "lā yajḥadustiḥqāqa `uqūbatik"
    },
    {
      "index": 55,
      "text": "walā yubarri-u nafsahu ministījābi naqimatik"
    },
    {
      "index": 56,
      "text": "taf`alu dhālika yā ilahī biman khawfuhu minka aktharu min ṭama`ihi fīk"
    },
    {
      "index": 57,
      "text": "wabiman ya-suhu minan najāti awkadu min rajā-ihi lilkhalāṣ"
    },
    {
      "index": 58,
      "text": "lā an yakūna ya-suhu qunūṭā"
    },
    {
      "index": 59,
      "text": "aw an yakūna ṭama`uhughtirārā"
    },
    {
      "index": 60,
      "text": "bal liqillati ḥasanātihi bayna sayyi-ātih"
    },
    {
      "index": 61,
      "text": "waḍa`fi ḥujajihi fī jamī`i tabi`ātih"
    },
    {
      "index": 62,
      "text": "fa-ammā anta yā ilahī fa-ahlun an"
    },
    {
      "index": 63,
      "text": "lā yaghtarra bikaṣ ṣiddīqūn"
    },
    {
      "index": 64,
      "text": "walā yay-asa minkal mujrimūn"
    },
    {
      "index": 65,
      "text": "li-annakar rabbul `aẓīmul ladhī lā yamna`u aḥadan faḍlah"
    },
    {
      "index": 66,
      "text": "walā yastaqṣī min aḥadin ḥaqqah"
    },
    {
      "index": 67,
      "text": "ta`ālā dhikruka `anil madhkūrīn"
    },
    {
      "index": 68,
      "text": "wataqaddasat asma-uka `anil mansūbīn"
    },
    {
      "index": 69,
      "text": "wafashat ni`matuka fī jamī`il makhlūqīn"
    },
    {
      "index": 70,
      "text": "falakal ḥamdu `alā dhālika yā rabbal `ālamīn"
    }
  ]
}