{
  "index": 313,
  "name": "Sura 313",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "al ḥamdu lillāhil ladhī adh-habal layla muẓliman biqudratih"
    },
    {
      "index": 3,
      "text": "wajā-a binnahāri mubṣiran biraḥmatih"
    },
    {
      "index": 4,
      "text": "wakasānī ḍiyā-ahu wa-ana fī ni`matih"
    },
    {
      "index": 5,
      "text": "allāhumma fakamā abqaytanī lahu fa-abqinī li-amthālih"
    },
    {
      "index": 6,
      "text": "waṣalli `alan nabiyyi muḥammadin wa ālih"
    },
    {
      "index": 7,
      "text": "walā tafja`nī fīhi wafī ghayrih"
    },
    {
      "index": 8,
      "text": "minal layālī wal-ayyām"
    },
    {
      "index": 9,
      "text": "bir-tikābil maḥārim"
    },
    {
      "index": 10,
      "text": "waktisābil māthim"
    },
    {
      "index": 11,
      "text": "war-zuqnī khayrah"
    },
    {
      "index": 12,
      "text": "wakhayra mā fīh"
    },
    {
      "index": 13,
      "text": "wakhayra mā ba`dah"
    },
    {
      "index": 14,
      "text": "waṣrif `annī sharrah"
    },
    {
      "index": 15,
      "text": "washarra mā fīh"
    },
    {
      "index": 16,
      "text": "washarra mā ba`dah"
    },
    {
      "index": 17,
      "text": "allāhumma innī bidhimmatil islāmi atawassalu ilayk"
    },
    {
      "index": 18,
      "text": "wabiḥur-matil qur-āni a`tamidu `alayk"
    },
    {
      "index": 19,
      "text": "wabimuḥammadinil muṣṭafā"
    },
    {
      "index": 20,
      "text": "ṣallallāhu `alayhi wa ālih"
    },
    {
      "index": 21,
      "text": "astashfi`u ladayk"
    },
    {
      "index": 22,
      "text": "fa`rifillāhumma dhimmatī"
    },
    {
      "index": 23,
      "text": "al latī rajawtu bihā qaḍā-a ḥājatī"
    },
    {
      "index": 24,
      "text": "yā ar-ḥamar rāḥimīn"
    },
    {
      "index": 25,
      "text": "allāhummaqḍi lī fil khamīsi khamsā"
    },
    {
      "index": 26,
      "text": "lāyattasi`u lahā illā karamuk"
    },
    {
      "index": 27,
      "text": "walā yuṭīquhā illā ni`amuk"
    },
    {
      "index": 28,
      "text": "salāmatan aqwā bihā `alā ṭā`atik"
    },
    {
      "index": 29,
      "text": "wa`ibādatan astaḥiqqu bihā jazīla mathūbatik"
    },
    {
      "index": 30,
      "text": "wasa`atan fil ḥāli minar rizqil ḥalāl"
    },
    {
      "index": 31,
      "text": "wa-an tu-minanī fī mawāqifil khawfi bi-amnik"
    },
    {
      "index": 32,
      "text": "wataj`alanī min ṭawāriqil humūmi walghumūmi fī ḥiṣnik"
    },
    {
      "index": 33,
      "text": "wa ṣalli `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 34,
      "text": "waj`al tawassulī bihi shāfi`ā"
    },
    {
      "index": 35,
      "text": "yawmal qiyāmati nāfi`ā"
    },
    {
      "index": 36,
      "text": "innaka anta ar-ḥamur rāḥimīn"
    }
  ]
}