{
  "index": 218,
  "name": "Sura 218",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhumma yā man biraḥmatihi yastaghithul mudhnibūn"
    },
    {
      "index": 3,
      "text": "wayā man ilā dhikri iḥsānihi yafza`ul muḍṭarrūn"
    },
    {
      "index": 4,
      "text": "wayā man likhīfatihi yantaḥibul khāṭi-ūn"
    },
    {
      "index": 5,
      "text": "yā unsa kulli mustawḥishin gharīb"
    },
    {
      "index": 6,
      "text": "wayā faraja kulli makrūbin ka-īb"
    },
    {
      "index": 7,
      "text": "wayā ghawtha kulli makhdhūlin farīd"
    },
    {
      "index": 8,
      "text": "wayā `aḍuda kulli muḥtājin ṭarīd"
    },
    {
      "index": 9,
      "text": "antal ladhī wasi`ta kulla shay-in raḥmatan wa`ilmā"
    },
    {
      "index": 10,
      "text": "wa-antal ladhī ja`alta likulli makhlūqin fī ni`amika sahmā"
    },
    {
      "index": 11,
      "text": "wa-antal ladhī `afwuhu a`lā min `iqābih"
    },
    {
      "index": 12,
      "text": "wa-antal ladhī tas`ā raḥmatuhu amāma ghaḍabih"
    },
    {
      "index": 13,
      "text": "wa-antal ladhī `aṭa-uhu aktharu min man`ih"
    },
    {
      "index": 14,
      "text": "wa-antal ladhittasa`al khalā-iqu kulluhum fī wus`ih"
    },
    {
      "index": 15,
      "text": "wa-antal ladhī lā yar-ghabu fī jazā-i man a`ṭāh"
    },
    {
      "index": 16,
      "text": "wa-antal ladhī lā yufriṭu fī `iqābi man `aṣāh"
    },
    {
      "index": 17,
      "text": "wa-ana yā ilahī `abdukal ladhī amar-tahu bid du`ā"
    },
    {
      "index": 18,
      "text": "faqāla labbayka wasa`dayk"
    },
    {
      "index": 19,
      "text": "hā ana dhā yā rabbi maṭrūḥun bayna yadayk"
    },
    {
      "index": 20,
      "text": "anal ladhī awqaratil khaṭāyā ẓahrah"
    },
    {
      "index": 21,
      "text": "wa-anal ladhī afnatidh dhunūbu `umrah"
    },
    {
      "index": 22,
      "text": "wa-anal ladhī bijahlihi `aṣāk"
    },
    {
      "index": 23,
      "text": "walam takun ahlan minhu lidhāk"
    },
    {
      "index": 24,
      "text": "hal anta yā ilahī rāḥimun man da`āka fa-ubligha fid du`ā"
    },
    {
      "index": 25,
      "text": "am anta ghāfirun liman bakāka fa-usri`a fil bukā"
    },
    {
      "index": 26,
      "text": "am anta mutajāwizun `amman `affara laka wajhahu tadhallulā"
    },
    {
      "index": 27,
      "text": "am anta mughnin man shakā ilayka faqrahu tawakkulā"
    },
    {
      "index": 28,
      "text": "ilahī lā tukhayyib man lā yajidu mu`ṭiyan ghayrak"
    },
    {
      "index": 29,
      "text": "walā takhdhul man lā yastaghnī `anka bi-aḥadin dūnak"
    },
    {
      "index": 30,
      "text": "ilahī faṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 31,
      "text": "walā tu`riḍ `annī waqad aqbaltu `alayk"
    },
    {
      "index": 32,
      "text": "walā taḥrimnī waqad raghibtu ilayk"
    },
    {
      "index": 33,
      "text": "walā tajbahnī birraddi waqadintaṣabtu bayna yadayk"
    },
    {
      "index": 34,
      "text": "antal ladhī waṣafta nafsaka birraḥmah"
    },
    {
      "index": 35,
      "text": "faṣalli `alā muḥammadin wa ālihi war-ḥamnī"
    },
    {
      "index": 36,
      "text": "wa-antal ladhī sammayta nafsaka bil `afwi fa`fu `annī"
    },
    {
      "index": 37,
      "text": "qad tarā yā ilahī fayḍa dam`ī min khīfatik"
    },
    {
      "index": 38,
      "text": "wawajība qalbī min khashyatik"
    },
    {
      "index": 39,
      "text": "wantiqāḍa jawāriḥī min haybatik"
    },
    {
      "index": 40,
      "text": "kullu dhālika ḥayā-un minka lisū-i `amalī"
    },
    {
      "index": 41,
      "text": "walidhāka khamada ṣawtī `anil ja-ri ilayk"
    },
    {
      "index": 42,
      "text": "wakalla lisānī `an munājātik"
    },
    {
      "index": 43,
      "text": "yā ilahī falakal ḥamd"
    },
    {
      "index": 44,
      "text": "fakam min `ā-ibatin satar-tahā `alayya falam tafḍaḥnī"
    },
    {
      "index": 45,
      "text": "wakam min dhanbin ghaṭṭaytahu `alayya falam tash-har-nī"
    },
    {
      "index": 46,
      "text": "wakam min shā-ibatin almamtu bihā falam tahtik `annī sitrahā"
    },
    {
      "index": 47,
      "text": "walam tuqallidnī makrūha shanārihā"
    },
    {
      "index": 48,
      "text": "walam tubdi saw-ātihā liman yaltamisu ma`āyibī min jīratī"
    },
    {
      "index": 49,
      "text": "waḥasadati ni`matika `indī"
    },
    {
      "index": 50,
      "text": "thumma lam yanhanī dhālika `an an jaraytu ilā sū-i mā `ahidta minnī"
    },
    {
      "index": 51,
      "text": "faman ajhalu minnī yā ilahī birushdih"
    },
    {
      "index": 52,
      "text": "waman aghfalu minnī `an ḥaẓẓih"
    },
    {
      "index": 53,
      "text": "waman ab`adu minnī ministiṣlāḥi nafsih"
    },
    {
      "index": 54,
      "text": "ḥīna unfiqu mā ajrayta `alayya min rizqik"
    },
    {
      "index": 55,
      "text": "fīmā nahaytanī `anhu min ma`ṣiyatik"
    },
    {
      "index": 56,
      "text": "waman ab`adu ghawran fil bāṭil"
    },
    {
      "index": 57,
      "text": "wa-ashaddu iqdāman `alas sū-i minnī"
    },
    {
      "index": 58,
      "text": "ḥīna aqifu bayna da`watika wada`watish shayṭān"
    },
    {
      "index": 59,
      "text": "fa-attabi`u da`watahu `alā ghayri `aman minnī fī ma`rifatin bih"
    },
    {
      "index": 60,
      "text": "walā nisyānin min ḥifẓī lah"
    },
    {
      "index": 61,
      "text": "wa-ana ḥīna-idhin mūqin"
    },
    {
      "index": 62,
      "text": "bi-anna muntahā da`watika ilal jannati wamuntahā da`watihi ilan nār"
    },
    {
      "index": 63,
      "text": "subḥānaka mā a`jaba mā ash-hadu bih"
    },
    {
      "index": 64,
      "text": "`alā nafsī wa-u`addiduhu min maktūmi amrī"
    },
    {
      "index": 65,
      "text": "wa-a`jabu min dhālika anātuka `annī"
    },
    {
      "index": 66,
      "text": "wa-ibṭa-uka `an mu`ājalatī"
    },
    {
      "index": 67,
      "text": "walaysa dhālika min karamī `alayk"
    },
    {
      "index": 68,
      "text": "bal ta-anniyan minka lī"
    },
    {
      "index": 69,
      "text": "watafaḍḍulan minka `alayy"
    },
    {
      "index": 70,
      "text": "li-an ar-tadi`a `an ma`ṣiyatikal muskhiṭah"
    },
    {
      "index": 71,
      "text": "wa-uqli`a `an sayyi-ātiyal mukhliqah"
    },
    {
      "index": 72,
      "text": "wali-anna `afwaka `annī aḥabbu ilayka min `uqūbatī"
    },
    {
      "index": 73,
      "text": "bal ana yā ilahī aktharu dhunūbā"
    },
    {
      "index": 74,
      "text": "wa-aqbaḥu-āthārā"
    },
    {
      "index": 75,
      "text": "wa-ashna`u af`ālā"
    },
    {
      "index": 76,
      "text": "wa-ashaddu fil bāṭili tahawwurā"
    },
    {
      "index": 77,
      "text": "wa-aḍ`afu `inda ṭā`atika tayaqquẓā"
    },
    {
      "index": 78,
      "text": "wa-aqallu liwa`īdikantibāhan war-tiqābā"
    },
    {
      "index": 79,
      "text": "min an uḥṣiya laka `uyūbī"
    },
    {
      "index": 80,
      "text": "aw aqdira `alā dhikri dhunūbī"
    },
    {
      "index": 81,
      "text": "wa-innamā uwabbikhu bihadhā nafsī ṭama`an fī ra-fatik"
    },
    {
      "index": 82,
      "text": "al latī bihā ṣalāḥu amril mudhnibīn"
    },
    {
      "index": 83,
      "text": "warajā-an liraḥmatikal latī bihā fakāku riqābil khāṭi-īn"
    },
    {
      "index": 84,
      "text": "allāhumma wahādhihi raqabatī qad araqqat-hadh dhunūb"
    },
    {
      "index": 85,
      "text": "faṣalli `alā muḥammadin wa ālihi wa-a`tiqhā bi`afwik"
    },
    {
      "index": 86,
      "text": "wahādhā ẓahrī qad athqalat-hul khaṭāyā"
    },
    {
      "index": 87,
      "text": "faṣalli `alā muḥammadin wa ālihi wakhaffif `anhu bimannik"
    },
    {
      "index": 88,
      "text": "yā ilahī law bakaytu ilayka ḥattā tasquṭa ashfāru `aynayy"
    },
    {
      "index": 89,
      "text": "wantaḥabtu ḥattā yanqaṭi`a ṣawtī"
    },
    {
      "index": 90,
      "text": "waqumtu laka ḥattā tatanashhara qadamāy"
    },
    {
      "index": 91,
      "text": "waraka`tu laka ḥattā yankhali`a ṣulbī"
    },
    {
      "index": 92,
      "text": "wasajadtu laka ḥattā tatafaqqa-a ḥadaqatāy"
    },
    {
      "index": 93,
      "text": "wa-akaltu turābal ar-ḍi ṭūla `umrī"
    },
    {
      "index": 94,
      "text": "washaribtu mā-ar ramādi-ākhira dahrī"
    },
    {
      "index": 95,
      "text": "wadhakar-tuka fī khilāli dhālika ḥattā yakilla lisānī"
    },
    {
      "index": 96,
      "text": "thumma lam ar-fa` ṭar-fī ilā-āfāqis samā-istiḥyā-an mink"
    },
    {
      "index": 97,
      "text": "mastawjabtu bidhālika maḥwa sayyi-atin wāḥidatin min sayyi-ātī"
    },
    {
      "index": 98,
      "text": "wa-in kunta taghfiru lī ḥīna astawjibu maghfiratak"
    },
    {
      "index": 99,
      "text": "wata`fū `annī ḥīna astaḥiqqu `afwak"
    },
    {
      "index": 100,
      "text": "fa-inna dhālika ghayru wājibin lī bistiḥqāq"
    },
    {
      "index": 101,
      "text": "walā ana ahlun lahu bistījāb"
    },
    {
      "index": 102,
      "text": "idh kāna jazā-ī minka fī awwali mā `aṣaytukan nār"
    },
    {
      "index": 103,
      "text": "fa-in tu`adhhibnī fa-anta ghayru ẓālimin lī"
    },
    {
      "index": 104,
      "text": "ilahī fa-idh qad taghammadtanī bisitrika falam tafḍaḥnī"
    },
    {
      "index": 105,
      "text": "wata-annaytanī bikaramika falam tu`ājilnī"
    },
    {
      "index": 106,
      "text": "waḥalumta `annī bitafaḍḍulika falam tughayyir ni`mataka `alayy"
    },
    {
      "index": 107,
      "text": "walam tukaddir ma`rūfaka `indī"
    },
    {
      "index": 108,
      "text": "far-ḥam ṭūla taḍarru`ī washiddata maskanatī wasū-a mawqifī"
    },
    {
      "index": 109,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 110,
      "text": "waqinī minal ma`āṣī"
    },
    {
      "index": 111,
      "text": "wasta`milnī bilṭṭā`ah"
    },
    {
      "index": 112,
      "text": "war-zuqnī ḥusnal inābah"
    },
    {
      "index": 113,
      "text": "waṭahhir-nī bittawbah"
    },
    {
      "index": 114,
      "text": "wa-ayyidnī bil `iṣmah"
    },
    {
      "index": 115,
      "text": "wastaṣliḥnī bil `āfiyah"
    },
    {
      "index": 116,
      "text": "wa-adhiqnī ḥalāwatal maghfirah"
    },
    {
      "index": 117,
      "text": "waj`alnī ṭalīqa `afwik"
    },
    {
      "index": 118,
      "text": "wa`atīqa raḥmatik"
    },
    {
      "index": 119,
      "text": "waktub lī amānan min sukhṭik"
    },
    {
      "index": 120,
      "text": "wabashhir-nī bidhālika fil `ājili dūnal-ājil"
    },
    {
      "index": 121,
      "text": "bushrā a`rifuhā"
    },
    {
      "index": 122,
      "text": "wa`arrifnī fīhi `alāmatan atabayyanuhā"
    },
    {
      "index": 123,
      "text": "inna dhālika lā yaḍīqu `alayka fī wus`ik"
    },
    {
      "index": 124,
      "text": "walā yataka-aduka fī qudratik"
    },
    {
      "index": 125,
      "text": "walā yataṣa``aduka fī anātik"
    },
    {
      "index": 126,
      "text": "walā ya-ūduka fī jazīli hibātikal latī dallat `alayhā-āyātuk"
    },
    {
      "index": 127,
      "text": "innaka taf`alu mā tashā"
    },
    {
      "index": 128,
      "text": "wataḥkumu mā turīd"
    },
    {
      "index": 129,
      "text": "innaka `alā kulli shay-in qadīr"
    }
  ]
}