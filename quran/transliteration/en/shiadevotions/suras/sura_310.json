{
  "index": 310,
  "name": "Sura 310",
  "ayas": [
    {
      "index": 1,
      "text": "as salāmu `alaykum yā tarājimata waḥyillāh",
      "bismillah": "as salāmu `alaykum yā khuzzāna `ilmillāh"
    },
    {
      "index": 2,
      "text": "as salāmu `alaykum yā a-immatal hudā"
    },
    {
      "index": 3,
      "text": "as salāmu `alaykum yā a`lāmat tuqā"
    },
    {
      "index": 4,
      "text": "as salāmu `alaykum yā awlāda rasūlillāh"
    },
    {
      "index": 5,
      "text": "anā `ārifun biḥaqqikum"
    },
    {
      "index": 6,
      "text": "mustabṣirun bisha-nikum"
    },
    {
      "index": 7,
      "text": "mu`ādin li-a`dā-ikum"
    },
    {
      "index": 8,
      "text": "muwālin li-awliyā-ikum"
    },
    {
      "index": 9,
      "text": "bi-abī antum wa-ummī"
    },
    {
      "index": 10,
      "text": "ṣalawātullāhi `alaykum"
    },
    {
      "index": 11,
      "text": "allāhumma innī atawālā-ākhirahum kamā tawālaytu awwalahum"
    },
    {
      "index": 12,
      "text": "wa-abra-u min kulli walījatin dūnahum"
    },
    {
      "index": 13,
      "text": "wa-akfuru bil jibti waṭ ṭāghūti wal lāti wal`uzzā"
    },
    {
      "index": 14,
      "text": "ṣalawātullāhi `alaykum yā mawāliyya"
    },
    {
      "index": 15,
      "text": "waraḥmatullāhi wabarakātuh"
    },
    {
      "index": 16,
      "text": "as salāmu `alayka yā sayyidal `ābidīna wasulālatal waṣiyyīn"
    },
    {
      "index": 17,
      "text": "as salāmu `alayka yā bāqira `ilmin nabiyyīn"
    },
    {
      "index": 18,
      "text": "as salāmu `alayka yā ṣādiqan muṣaddaqan fil qawli walfi`l"
    },
    {
      "index": 19,
      "text": "yā mawāliyya hādhā yawmukum"
    },
    {
      "index": 20,
      "text": "wahuwa yawmuth thulathā"
    },
    {
      "index": 21,
      "text": "wa-ana fīhi ḍayfun lakum"
    },
    {
      "index": 22,
      "text": "wamustajīrun bikum"
    },
    {
      "index": 23,
      "text": "fa-aḍīfūnī wa-ajīrūnī"
    },
    {
      "index": 24,
      "text": "bimanzilatillāhi `indakum"
    },
    {
      "index": 25,
      "text": "wa āli baytikumuṭ ṭayyibīnaṭ ṭāhirīn"
    }
  ]
}