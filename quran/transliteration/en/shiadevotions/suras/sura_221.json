{
  "index": 221,
  "name": "Sura 221",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "allāhummasqinal ghayth"
    },
    {
      "index": 3,
      "text": "wanshur `alaynā raḥmataka bighaythikal mughdiq"
    },
    {
      "index": 4,
      "text": "minas saḥābil munsāqi linabāti ar-ḍikal mūniqi fī jamī`il-āfāq"
    },
    {
      "index": 5,
      "text": "wamnun `alā `ibādika bi-īnā`ith thamarah"
    },
    {
      "index": 6,
      "text": "wa-aḥyi bilādaka bibulūghiz zaharah"
    },
    {
      "index": 7,
      "text": "wa-ash-hid malā-ikatakal kirāmas safarah"
    },
    {
      "index": 8,
      "text": "bisaqyin minka nāfi`in dā-imin ghuzruh"
    },
    {
      "index": 9,
      "text": "wāsi`in diraruhu wābilin sarī`in `ājil"
    },
    {
      "index": 10,
      "text": "tuḥyī bihi mā qad māt, wataruddu bihi mā qad fāt"
    },
    {
      "index": 11,
      "text": "watukhriju bihi mā huwa-āt"
    },
    {
      "index": 12,
      "text": "watuwassi`u bihi fil aqwāt"
    },
    {
      "index": 13,
      "text": "saḥāban mutarākiman hanī-an marī-an ṭabaqā"
    },
    {
      "index": 14,
      "text": "mujaljalan ghayra mulithhin wadquh"
    },
    {
      "index": 15,
      "text": "walā khullabin bar-quh"
    },
    {
      "index": 16,
      "text": "allāhummasqinā ghaythan mughīthan marī`an mumri`an `arīḍā"
    },
    {
      "index": 17,
      "text": "wāsi`an ghazīran taruddu bihin nahīḍa watajburu bihil mahīḍ"
    },
    {
      "index": 18,
      "text": "allāhummasqinā saqyan tusīlu minhuẓ ẓirāb"
    },
    {
      "index": 19,
      "text": "watamla-u minhul jibāb"
    },
    {
      "index": 20,
      "text": "watufajjiru bihil anhār"
    },
    {
      "index": 21,
      "text": "watunbitu bihil ashjār"
    },
    {
      "index": 22,
      "text": "watur-khiṣu bihil as`āra fī jamī`il amṣār"
    },
    {
      "index": 23,
      "text": "watan`ashu bihil bahā-ima walkhalq"
    },
    {
      "index": 24,
      "text": "watukmilu lanā bihi ṭayyibātir rizq"
    },
    {
      "index": 25,
      "text": "watunbitu lanā bihiz zar-`"
    },
    {
      "index": 26,
      "text": "watudirru bihiḍ ḍar-`"
    },
    {
      "index": 27,
      "text": "watazīdunā bihi quwwatan ilā quwwatinā"
    },
    {
      "index": 28,
      "text": "allāhumma lā taj`al ẓillahu `alaynā samūmā"
    },
    {
      "index": 29,
      "text": "walā taj`al bar-dahu `alaynā ḥusūmā"
    },
    {
      "index": 30,
      "text": "walā taj`al ṣawbahu `alaynā rujūmā"
    },
    {
      "index": 31,
      "text": "walā taj`al mā-ahu `alaynā ujājā"
    },
    {
      "index": 32,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 33,
      "text": "war-zuqnā min barakātis samāwāti wal-ar-ḍ"
    },
    {
      "index": 34,
      "text": "innaka `alā kulli shay-in qadīr"
    }
  ]
}