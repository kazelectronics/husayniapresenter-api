{
  "index": 187,
  "name": "Sura 187",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma innī as-aluk",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "yā man huwa aqrabu ilayya min ḥablil warīd"
    },
    {
      "index": 3,
      "text": "yā man yaḥūlu baynal mar-i waqalbih"
    },
    {
      "index": 4,
      "text": "yā man huwa bil manẓaril a`lā wabil ufuqil mubīn"
    },
    {
      "index": 5,
      "text": "yā man huwar raḥmānu `alal `ar-shistawā"
    },
    {
      "index": 6,
      "text": "yā man laysa kamithlihi shay"
    },
    {
      "index": 7,
      "text": "wahuwas samī`ul baṣīr"
    },
    {
      "index": 8,
      "text": "as-aluka an tuṣalliya `alā muḥammadin wa āli muḥammad"
    }
  ]
}