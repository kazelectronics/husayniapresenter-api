{
  "index": 264,
  "name": "Sura 264",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "ilāhī albasatnil khaṭāyā thawba madhallatī"
    },
    {
      "index": 3,
      "text": "wajallalanit tabā`udu minka libāsa maskanatī"
    },
    {
      "index": 4,
      "text": "wa-amāta qalbī `aẓīmu jināyatī"
    },
    {
      "index": 5,
      "text": "fa-aḥyihi bitawbatin minka yā amalī wabughyatī"
    },
    {
      "index": 6,
      "text": "wayā su-lī wamunyatī"
    },
    {
      "index": 7,
      "text": "fawa`izzatika mā ajidu lidhunūbī siwāka ghāfirā"
    },
    {
      "index": 8,
      "text": "walā arā likasrī ghayraka jābirā"
    },
    {
      "index": 9,
      "text": "waqad khaḍa`tu bil inābati ilayk"
    },
    {
      "index": 10,
      "text": "wa`anawtu bilastikānati ladayk"
    },
    {
      "index": 11,
      "text": "fa-in ṭaradtanī min bābika fabiman alūdh"
    },
    {
      "index": 12,
      "text": "wa in radadtanī `an janābika fabiman a`ūdh"
    },
    {
      "index": 13,
      "text": "fawā asafāhu min khajlatī waftiḍāḥī"
    },
    {
      "index": 14,
      "text": "wawā lahfāhu min sū-i `amalī wajtirāḥī"
    },
    {
      "index": 15,
      "text": "as-aluka yā ghāfiradh dhanbil kabīr"
    },
    {
      "index": 16,
      "text": "wayā jābiral `aẓmil kasīr"
    },
    {
      "index": 17,
      "text": "an tahaba lī mūbiqātil jarā-ir"
    },
    {
      "index": 18,
      "text": "watastura `alayya fāḍiḥātis sarā-ir"
    },
    {
      "index": 19,
      "text": "walā tukhlinī fī mash-hadil qiyāmati min bar-di `afwika waghafrik"
    },
    {
      "index": 20,
      "text": "walā tu`rinī min jamīli ṣafḥika wasatrik"
    },
    {
      "index": 21,
      "text": "ilāhī ẓallil `alā dhunūbī ghamāma raḥmatik"
    },
    {
      "index": 22,
      "text": "wa-ar-sil `alā `uyūbī saḥāba ra-fatik"
    },
    {
      "index": 23,
      "text": "ilāhī hal yar-ji`ul `abdul ābiqu illā ilā mawlāh"
    },
    {
      "index": 24,
      "text": "am hal yujīruhu min sakhaṭihi aḥadun siwāh"
    },
    {
      "index": 25,
      "text": "ilāhī in kānan nadamu `aladh dhanbi tawbah"
    },
    {
      "index": 26,
      "text": "fa-innī wa`izzatika minan nādimīn"
    },
    {
      "index": 27,
      "text": "wa-in kānal istighfāru minal khaṭī-ati ḥiṭṭah"
    },
    {
      "index": 28,
      "text": "fa-innī laka minal mustaghfirīn"
    },
    {
      "index": 29,
      "text": "lakal `utbā ḥattā tar-ḍā"
    },
    {
      "index": 30,
      "text": "ilāhī biqudratika `alayya tub `alayy"
    },
    {
      "index": 31,
      "text": "wabiḥilmika `anni`fu `annī"
    },
    {
      "index": 32,
      "text": "wabi`ilmika bī ir-faq bī"
    },
    {
      "index": 33,
      "text": "ilāhī antal ladhī fataḥta li`ibādika bāban ilā `afwika sammaytahut tawbah"
    },
    {
      "index": 34,
      "text": "faqulta tūbū ilallāhi tawbatan naṣūḥā"
    },
    {
      "index": 35,
      "text": "famā `udhru man aghfala dukhūlal bābi ba`da fat-ḥih"
    },
    {
      "index": 36,
      "text": "ilāhī in kāna qabuḥadh dhanbu min `abdik"
    },
    {
      "index": 37,
      "text": "falyaḥsunil `afwu min `indik"
    },
    {
      "index": 38,
      "text": "ilāhī mā ana bi-awwali man `aṣāk, fatubta `alayh"
    },
    {
      "index": 39,
      "text": "wata`arraḍa bima`rūfik, fajudta `alayh"
    },
    {
      "index": 40,
      "text": "yā mujībal muḍṭarr"
    },
    {
      "index": 41,
      "text": "yā kāshifaḍ ḍurr"
    },
    {
      "index": 42,
      "text": "yā `aẓīmal birr"
    },
    {
      "index": 43,
      "text": "yā `alīman bimā fis sirr"
    },
    {
      "index": 44,
      "text": "yā jamīlas sitr"
    },
    {
      "index": 45,
      "text": "istashfa`tu bijūdika wakaramika ilayk"
    },
    {
      "index": 46,
      "text": "watawassaltu bijanābika wataraḥḥumika ladayk"
    },
    {
      "index": 47,
      "text": "fastajib du`ā-ī"
    },
    {
      "index": 48,
      "text": "walā tukhayyib fīka rajā-ī"
    },
    {
      "index": 49,
      "text": "wataqabbal tawbatī"
    },
    {
      "index": 50,
      "text": "wakaffir khaṭī-atī"
    },
    {
      "index": 51,
      "text": "bimannika waraḥmatik"
    },
    {
      "index": 52,
      "text": "yā ar-ḥamar rāḥimīn"
    }
  ]
}