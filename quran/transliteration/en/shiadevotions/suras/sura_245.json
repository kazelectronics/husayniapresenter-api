{
  "index": 245,
  "name": "Sura 245",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "al ḥamdu lillāhil ladhī hadānā liḥamdih"
    },
    {
      "index": 3,
      "text": "waja`alanā min ahlihi linakūna li-iḥsānihi minash shākirīn"
    },
    {
      "index": 4,
      "text": "waliyajziyanā `alā dhālika jazā-al muḥsinīn"
    },
    {
      "index": 5,
      "text": "walḥamdu lillāhil ladhī ḥabānā bidīnih"
    },
    {
      "index": 6,
      "text": "wakhtaṣṣanā bimillatihi wasabbalanā fī subuli iḥsānih"
    },
    {
      "index": 7,
      "text": "linaslukahā bimannihi ilā riḍwānih"
    },
    {
      "index": 8,
      "text": "ḥamdan yataqabbaluhu minnā wayar-ḍā bihi `annā"
    },
    {
      "index": 9,
      "text": "walḥamdu lillāhil ladhī ja`ala min tilkas subuli shahrahu shahra ramaḍān"
    },
    {
      "index": 10,
      "text": "shahraṣ ṣiyāmi washahral islāmi washahraṭ ṭahūr"
    },
    {
      "index": 11,
      "text": "washahrat tamḥīṣi washahral qiyām"
    },
    {
      "index": 12,
      "text": "al ladhī unzila fīhil qur-ānu hudan linnās"
    },
    {
      "index": 13,
      "text": "wabayyinātin minal hudā walfur-qān"
    },
    {
      "index": 14,
      "text": "fa-abāna faḍīlatahu `alā sā-irish shuhūr"
    },
    {
      "index": 15,
      "text": "bimā ja`ala lahu minal ḥurumātil mawfūrati walfaḍā-ilil mash-hūrah"
    },
    {
      "index": 16,
      "text": "faḥarrama fīhi mā aḥalla fī ghayrihi i`ẓāmā"
    },
    {
      "index": 17,
      "text": "waḥajara fīhil maṭā`ima walmashāriba ikrāmā"
    },
    {
      "index": 18,
      "text": "waja`ala lahu waqtan bayyinan lā yujīzu jalla wa`azza an yuqaddama qablah"
    },
    {
      "index": 19,
      "text": "walā yaqbalu an yu-akhhara `anh"
    },
    {
      "index": 20,
      "text": "thumma faḍḍala laylatan wāḥidatan min layālīhi `alā layālī alfi shahr"
    },
    {
      "index": 21,
      "text": "wasammāhā laylatal qadr"
    },
    {
      "index": 22,
      "text": "tanazzalul malā-ikatu war rūḥu fīhā bi-idhni rabbihim min kulli amr"
    },
    {
      "index": 23,
      "text": "salāmun dā-imul barakati ilā ṭulū`il fajr"
    },
    {
      "index": 24,
      "text": "`alā man yashā-u min `ibādihi bimā aḥkama min qaḍā-ih"
    },
    {
      "index": 25,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 26,
      "text": "wa-alhimnā ma`rifata faḍlihi wa-ijlāla ḥur-matih"
    },
    {
      "index": 27,
      "text": "wat taḥaffuẓa mimmā ḥaẓar-ta fīh"
    },
    {
      "index": 28,
      "text": "wa-a`innā `alā ṣiyāmihi bikaffil jawāriḥi `an ma`āṣīk"
    },
    {
      "index": 29,
      "text": "wasti`mālihā fīhi bimā yur-ḍīk"
    },
    {
      "index": 30,
      "text": "ḥattā lā nuṣghiya bi-asmā`inā ilā laghw"
    },
    {
      "index": 31,
      "text": "walā nusri`a bi-abṣārinā ilā lahw"
    },
    {
      "index": 32,
      "text": "waḥattā lā nabsuṭa aydiyanā ilā maḥẓūr"
    },
    {
      "index": 33,
      "text": "walā nakhṭuwa bi-aqdāminā ilā maḥjūr"
    },
    {
      "index": 34,
      "text": "waḥattā lā ta`iya buṭūnunā illā mā aḥlalt"
    },
    {
      "index": 35,
      "text": "walā tanṭiqa alsinatunā illā bimā mathhalt"
    },
    {
      "index": 36,
      "text": "walā natakallafa illā mā yudnī min thawābik"
    },
    {
      "index": 37,
      "text": "walā nata`āṭā illal ladhī yaqī min `iqābik"
    },
    {
      "index": 38,
      "text": "thumma khalliṣ dhālika kullahu min ri-ā-il murā-īna wasum`atil musmi`īn"
    },
    {
      "index": 39,
      "text": "lā nashriku fīhi aḥadan dūnak"
    },
    {
      "index": 40,
      "text": "walā nabtaghī fīhi murādan siwāk"
    },
    {
      "index": 41,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 42,
      "text": "waqifnā fīhi `alā mawāqīt"
    },
    {
      "index": 43,
      "text": "aṣ ṣalawātil khamsi biḥudūdihal latī ḥaddadt"
    },
    {
      "index": 44,
      "text": "wafurūḍihal latī faraḍta wawaẓā-ifihal latī waẓẓaft"
    },
    {
      "index": 45,
      "text": "wa-awqātihal latī waqqatt"
    },
    {
      "index": 46,
      "text": "wa-anzilnā fīhā manzilatal muṣībīna limanāzilihā"
    },
    {
      "index": 47,
      "text": "al ḥāfiẓīna li-ar-kānihal mu-addīna lahā"
    },
    {
      "index": 48,
      "text": "fī awqātihā `alā mā sannahu `abduka warasūluka ṣalawātuka `alayhi wa ālih"
    },
    {
      "index": 49,
      "text": "fī rukū`ihā wasujūdihā wajamī`i fawāḍilihā"
    },
    {
      "index": 50,
      "text": "`alā atammiṭ ṭahūri wa-asbaghihi wa-abyanil khushū`i wa-ablaghih"
    },
    {
      "index": 51,
      "text": "wawaffiqnā fīhi li-an naṣila ar-ḥāmanā bil birri waṣ ṣilah"
    },
    {
      "index": 52,
      "text": "wa-an nata`āhada jīrānanā bil ifḍāli wal`aṭiyyah"
    },
    {
      "index": 53,
      "text": "wa-an nukhalliṣa amwālanā minat tabi`āt"
    },
    {
      "index": 54,
      "text": "wa-an nuṭahhirahā bi-ikhrājiz zakawāt"
    },
    {
      "index": 55,
      "text": "wa-an nurāji`a man hājaranā"
    },
    {
      "index": 56,
      "text": "wa-an nunṣifa man ẓalamanā"
    },
    {
      "index": 57,
      "text": "wa-an nusālima man `ādānā"
    },
    {
      "index": 58,
      "text": "ḥāshā man `ūdiya fīka walak"
    },
    {
      "index": 59,
      "text": "fa-innahul `aduwwul ladhī lā nuwālīh"
    },
    {
      "index": 60,
      "text": "walḥizbul ladhī lā nuṣāfīh"
    },
    {
      "index": 61,
      "text": "wa-an nataqarraba ilayka fīhi minal a`māliz zākiyati bimā tuṭahhirunā bihi minadh dhunūb"
    },
    {
      "index": 62,
      "text": "wata`ṣimunā fīhi mimmā nasta-nifu minal `uyūb"
    },
    {
      "index": 63,
      "text": "ḥattā lā yūrida `alayka aḥadun min malā-ikatik"
    },
    {
      "index": 64,
      "text": "illā dūna mā nūridu min abwābiṭ ṭā`ati laka wa-anwā`il qur-bati ilayk"
    },
    {
      "index": 65,
      "text": "allāhumma innī as-aluka biḥaqqi hadhash shahr"
    },
    {
      "index": 66,
      "text": "wabiḥaqqi man ta`abbada laka fīh"
    },
    {
      "index": 67,
      "text": "minibtidā-ihi ilā waqti fanā-ih"
    },
    {
      "index": 68,
      "text": "min malakin qarrabtahu aw nabiyyin ar-saltah"
    },
    {
      "index": 69,
      "text": "aw `abdin ṣāliḥinikhtaṣaṣtah"
    },
    {
      "index": 70,
      "text": "an tuṣalliya `alā muḥammadin wa ālih"
    },
    {
      "index": 71,
      "text": "wa-ahhilnā fīhi limā wa`adta awliyā-aka min karāmatik"
    },
    {
      "index": 72,
      "text": "wa-awjib lanā fīhi mā awjabta li-ahlil mubālaghati fī ṭā`atik"
    },
    {
      "index": 73,
      "text": "waj`alnā fī naẓmi manistaḥaqqar rafī`al a`lā biraḥmatik"
    },
    {
      "index": 74,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 75,
      "text": "wajannibnal ilḥāda fī tawḥīdika wat taqṣīra fī tamjīdik"
    },
    {
      "index": 76,
      "text": "wash shakka fī dīnika wal`amā `an sabīlika wal-ighfāla liḥur-matik"
    },
    {
      "index": 77,
      "text": "wal-inkhidā`a li`aduwwikash shayṭānir rajīm"
    },
    {
      "index": 78,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 79,
      "text": "wa-idhā kāna laka fī kulli laylatin min layālī shahrinā hadhā"
    },
    {
      "index": 80,
      "text": "riqābun yu`tiquhā `afwuka aw yahabuhā ṣafḥuk"
    },
    {
      "index": 81,
      "text": "faj`al riqābanā min tilkar riqāb"
    },
    {
      "index": 82,
      "text": "waj`alnā lishahrinā min khayri ahlin wa-aṣ-ḥāb"
    },
    {
      "index": 83,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 84,
      "text": "wamḥaq dhunūbanā ma`ammiḥāqi hilālih"
    },
    {
      "index": 85,
      "text": "waslakh `annā tabi`ātinā ma`ansilākhi ayyāmih"
    },
    {
      "index": 86,
      "text": "ḥattā yanqaḍiya `annā waqad ṣaffaytanā fīhi minal khaṭī-āt"
    },
    {
      "index": 87,
      "text": "wa-akhlaṣtanā fīhi minas sayyi-āt"
    },
    {
      "index": 88,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 89,
      "text": "wa-in milnā fīhi fa`addilnā wa-in zughnā fīhi faqawwimnā"
    },
    {
      "index": 90,
      "text": "wa-inishtamala `alaynā `aduwwukash shayṭānu fastanqidhnā minh"
    },
    {
      "index": 91,
      "text": "allāhummash-ḥanhu bi`ibādatinā iyyāk"
    },
    {
      "index": 92,
      "text": "wazayyin awqātahu biṭā`atinā lak"
    },
    {
      "index": 93,
      "text": "wa-a`innā fī nahārihi `alā ṣiyāmih"
    },
    {
      "index": 94,
      "text": "wafī laylihi `alaṣ ṣalāh"
    },
    {
      "index": 95,
      "text": "wat taḍarru`i ilayka walkhushū`i lak"
    },
    {
      "index": 96,
      "text": "wadh dhillati bayna yadayk"
    },
    {
      "index": 97,
      "text": "ḥattā lā yash-hada nahāruhu `alaynā bighaflatin walā layluhu bitafrīṭ"
    },
    {
      "index": 98,
      "text": "allāhumma waj`alnā fī sā-irish shuhūri wal-ayyāmi kadhalika mā `ammar-tanā"
    },
    {
      "index": 99,
      "text": "waj`alnā min `ibādikaṣ ṣāliḥīn"
    },
    {
      "index": 100,
      "text": "al ladhīna yarithūnal fir-dawsa hum fīhā khālidūn"
    },
    {
      "index": 101,
      "text": "walladhīna yu-tūna mā-ātū waqulūbuhum"
    },
    {
      "index": 102,
      "text": "wajilatun annahum ilā rabbihim rāji`ūn"
    },
    {
      "index": 103,
      "text": "waminal ladhīna yusāri`ūna fil khayrāti wahum lahā sābiqūn"
    },
    {
      "index": 104,
      "text": "allāhumma ṣalli `alā muḥammadin wa ālih"
    },
    {
      "index": 105,
      "text": "fī kulli waqtin wakulli awānin wa`alā kulli ḥāl"
    },
    {
      "index": 106,
      "text": "`adada mā ṣallayta `alā man ṣallayta `alayh"
    },
    {
      "index": 107,
      "text": "wa-aḍ`āfa dhālika kullihi bil aḍ`āf"
    },
    {
      "index": 108,
      "text": "al latī lā yuḥṣīhā ghayruk"
    },
    {
      "index": 109,
      "text": "innaka fa``ālun limā turīd"
    }
  ]
}