{
  "index": 307,
  "name": "Sura 307",
  "ayas": [
    {
      "index": 1,
      "text": "allāhumma ṣalli `alā muḥammadin wa āli muḥammad",
      "bismillah": "bismillāhir raḥmānir raḥīm"
    },
    {
      "index": 2,
      "text": "al ḥamdu lillāhil ladhī lam yush-hid aḥadā"
    },
    {
      "index": 3,
      "text": "ḥīna faṭaras samāwāti wal-ar-ḍ"
    },
    {
      "index": 4,
      "text": "walattakhadha mu`īnan ḥīna bara-an nasamāt"
    },
    {
      "index": 5,
      "text": "lam yushārak fil ilāhiyyah"
    },
    {
      "index": 6,
      "text": "walam yuẓāhar fil waḥdāniyyah"
    },
    {
      "index": 7,
      "text": "kallatil alsunu `an ghāyati ṣifatih"
    },
    {
      "index": 8,
      "text": "wal`uqūlu `an kunhi ma`rifatih"
    },
    {
      "index": 9,
      "text": "watawāḍa`atil jabābiratu lihaybatih"
    },
    {
      "index": 10,
      "text": "wa`anatil wujūhu likhashyatih"
    },
    {
      "index": 11,
      "text": "wanqāda kullu `aẓīmin li`aẓamatih"
    },
    {
      "index": 12,
      "text": "falakal ḥamdu mutawātiran muttasiqā"
    },
    {
      "index": 13,
      "text": "wamutawāliyan mustawsiqā"
    },
    {
      "index": 14,
      "text": "waṣalawātuhu `alā rasūlihi abadā"
    },
    {
      "index": 15,
      "text": "wasalāmuhu dā-iman sar-madā"
    },
    {
      "index": 16,
      "text": "allāhummaj`al awwala yawmī hādhā ṣalāḥā"
    },
    {
      "index": 17,
      "text": "wa-awsaṭahu falāḥā"
    },
    {
      "index": 18,
      "text": "wa ākhirahu najāḥā"
    },
    {
      "index": 19,
      "text": "wa-a`ūdhu bika min yawmin awwaluhu faza`"
    },
    {
      "index": 20,
      "text": "wa-awsaṭuhu jaza`"
    },
    {
      "index": 21,
      "text": "wa ākhiruhu waja`"
    },
    {
      "index": 22,
      "text": "allāhumma innī astaghfiruka likulli nadhrin nadhar-tuh"
    },
    {
      "index": 23,
      "text": "wakulli wa`din wa`adtuh"
    },
    {
      "index": 24,
      "text": "wakulli `ahdi `āhadtuh"
    },
    {
      "index": 25,
      "text": "thumma lam afi bih"
    },
    {
      "index": 26,
      "text": "wa-as-aluka fī maẓālimi `ibādika `indī"
    },
    {
      "index": 27,
      "text": "fa-ayyumā `abdin min `abīdik"
    },
    {
      "index": 28,
      "text": "aw amatin min imā-ik"
    },
    {
      "index": 29,
      "text": "kānat lahu qibalī maẓlimatun ẓalamtuhā iyyāh"
    },
    {
      "index": 30,
      "text": "fī nafsihi aw fī `ir-ḍih"
    },
    {
      "index": 31,
      "text": "aw fī mālihi aw fī ahlihi wawaladih"
    },
    {
      "index": 32,
      "text": "aw ghībatunightabtuhu bihā"
    },
    {
      "index": 33,
      "text": "aw taḥāmulun `alayhi bimaylin aw hawā"
    },
    {
      "index": 34,
      "text": "aw anafatin aw ḥamiyyah"
    },
    {
      "index": 35,
      "text": "aw riyā-in aw `aṣabiyyah"
    },
    {
      "index": 36,
      "text": "ghā-iban kāna aw shāhidā"
    },
    {
      "index": 37,
      "text": "waḥayyan kāna aw mayyitā"
    },
    {
      "index": 38,
      "text": "faqaṣurat yadī"
    },
    {
      "index": 39,
      "text": "waḍāqa wus`ī `an raddihā ilayh"
    },
    {
      "index": 40,
      "text": "wat taḥalluli minh"
    },
    {
      "index": 41,
      "text": "fa-as-aluka yā man yamlikul ḥājāt"
    },
    {
      "index": 42,
      "text": "wahiya mustajībatun limashiyyatih"
    },
    {
      "index": 43,
      "text": "wamusri`atun ilā irādatih"
    },
    {
      "index": 44,
      "text": "an tuṣalliya `alā muḥammadin wa āli muḥammad"
    },
    {
      "index": 45,
      "text": "wa-an tur-ḍiyahu `annī bimā shi-t"
    },
    {
      "index": 46,
      "text": "watahaba lī min `indika raḥmah"
    },
    {
      "index": 47,
      "text": "innahu lātanquṣukal maghfirah"
    },
    {
      "index": 48,
      "text": "walā taḍurrukal mawhibah"
    },
    {
      "index": 49,
      "text": "yā ar-ḥamar rāḥimīn"
    },
    {
      "index": 50,
      "text": "allāhumma awlinī fī kulli yawmithnayn"
    },
    {
      "index": 51,
      "text": "ni`matayni minka thintayn"
    },
    {
      "index": 52,
      "text": "sa`ādatan fī awwalihi biṭā`atik"
    },
    {
      "index": 53,
      "text": "wani`matan fī-ākhirihi bimaghfiratik"
    },
    {
      "index": 54,
      "text": "yā man huwal ilāh"
    },
    {
      "index": 55,
      "text": "walā yaghfirudh dhunūba siwāh"
    }
  ]
}