{
  "index": 101,
  "name": "القارعة",
  "arabic_name": "القَارِعة",
  "english_name": "Al-Qāri`ah",
  "english_meaning": "The Calamity",
  "ayas": [
    {
      "index": 1,
      "arabic": "ٱلْقَارِعَةُ",
      "translation": "The Calamity!",
      "transliteration": "al-qāri`ah",
      "bismillah": "بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ"
    },
    {
      "index": 2,
      "arabic": "مَا ٱلْقَارِعَةُ",
      "translation": "What is the Calamity?",
      "transliteration": "mal qāri`ah"
    },
    {
      "index": 3,
      "arabic": "وَمَآ أَدْرَىٰكَ مَا ٱلْقَارِعَةُ",
      "translation": "Ah, what will convey unto thee what the Calamity is!",
      "transliteration": "wa mā adrāka mal qāri`ah"
    },
    {
      "index": 4,
      "arabic": "يَوْمَ يَكُونُ ٱلنَّاسُ كَٱلْفَرَاشِ ٱلْمَبْثُوثِ",
      "translation": "A day wherein mankind will be as thickly-scattered moths",
      "transliteration": "yawma yakūnun nāsu kal farāshil mabthūth"
    },
    {
      "index": 5,
      "arabic": "وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ ٱلْمَنفُوشِ",
      "translation": "And the mountains will become as carded wool.",
      "transliteration": "watakūnul jibālu kal `ihnil manfūsh"
    },
    {
      "index": 6,
      "arabic": "فَأَمَّا مَن ثَقُلَتْ مَوَٰزِينُهُۥ",
      "translation": "Then, as for him whose scales are heavy (with good works),",
      "transliteration": "fa-ammā man thaqulat mawāzīnuh"
    },
    {
      "index": 7,
      "arabic": "فَهُوَ فِى عِيشَةٍ رَّاضِيَةٍ",
      "translation": "He will live a pleasant life.",
      "transliteration": "fahuwa fī `īshatin rāḍiyah"
    },
    {
      "index": 8,
      "arabic": "وَأَمَّا مَنْ خَفَّتْ مَوَٰزِينُهُۥ",
      "translation": "But as for him whose scales are light,",
      "transliteration": "wa-ammā man khaffat mawāzīnuh"
    },
    {
      "index": 9,
      "arabic": "فَأُمُّهُۥ هَاوِيَةٌ",
      "translation": "A bereft and Hungry One will be his mother,",
      "transliteration": "fa-ummuhu hāwiyah"
    },
    {
      "index": 10,
      "arabic": "وَمَآ أَدْرَىٰكَ مَا هِيَهْ",
      "translation": "Ah, what will convey unto thee what she is! -",
      "transliteration": "wa mā adrāka mā hiyah"
    },
    {
      "index": 11,
      "arabic": "نَارٌ حَامِيَةٌۢ",
      "translation": "Raging Fire.",
      "transliteration": "nārun ḥāmiyah"
    }
  ]
}